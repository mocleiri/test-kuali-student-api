  <properties>
    <ks.masterdb.url>jdbc:oracle:thin:@deploy.ks.kuali.org:1521:KS</ks.masterdb.url>
    <ks.masterdb.driver>oracle.jdbc.driver.OracleDriver</ks.masterdb.driver>
    <ks.masterdb.username>KSMASTER</ks.masterdb.username>
    <ks.masterdb.password>KSMASTER</ks.masterdb.password>
    <ks.masterdb.dba.username>KSDBA</ks.masterdb.dba.username>
    <ks.masterdb.dba.password>KSDBA</ks.masterdb.dba.password>

    <!-- Oracle JDBC url's don't contain a database name -->
    <ks.impex.jdbc.driver.oracle>oracle.jdbc.driver.OracleDriver</ks.impex.jdbc.driver.oracle>

    <!-- Oracle JDBC url's don't contain a database name -->
    <ks.impex.url.oracle>jdbc:oracle:thin:@localhost:1521:XE</ks.impex.url.oracle>
    <ks.impex.dba.username.oracle>system</ks.impex.dba.username.oracle>
    <ks.impex.dba.password.oracle></ks.impex.dba.password.oracle>

    <!-- MySQL JDBC url's do contain a database name -->
    <ks.impex.url.mysql>jdbc:mysql://localhost/ksembedded</ks.impex.url.mysql>
    <ks.impex.dba.username.mysql>root</ks.impex.dba.username.mysql>
    <ks.impex.dba.password.mysql></ks.impex.dba.password.mysql>

    <!-- *** Start REQUIRED properties *** -->
    <!-- JDBC url -->
    <ks.impex.url>${ks.impex.url.oracle}</ks.impex.url>
    <!-- User with DBA privileges -->
    <ks.impex.dba.username>${ks.impex.dba.username.oracle}</ks.impex.dba.username>
    <!-- Password for the DBA user -->
    <ks.impex.dba.password>${ks.impex.dba.password.oracle}</ks.impex.dba.password>
    <!-- *** End REQUIRED properties *** -->

    <!-- *** Start OPTIONAL properties *** -->
    <!-- Platform specific logic generates default values for these if they are not specified -->
    <!-- A url for connecting directly to the database server ie no database specified -->
    <ks.impex.server.url></ks.impex.server.url>

    <!-- Aka "schema" for Oracle. This database/schema gets dropped/created by the DBA user -->
    <ks.impex.database></ks.impex.database>

    <!-- This is the user the application will connect to the database as. -->
    <!-- This user gets dropped/created by the DBA user -->
    <ks.impex.username></ks.impex.username>
    <ks.impex.password></ks.impex.password>

    <!-- This is the format dates will be exported/imported as -->
    <ks.impex.date.format>yyyyMMddHHmmss</ks.impex.date.format>
    <!-- *** End OPTIONAL properties *** -->

    <!-- Properties located in the properties file, override POM properties, but not system properties -->
    <ks.impex.properties>${user.home}/impex.properties</ks.impex.properties>
  </properties>
