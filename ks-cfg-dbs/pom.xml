<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student</groupId>
    <artifactId>student</artifactId>
    <version>1.1-SNAPSHOT</version>
  </parent>
  <groupId>org.kuali.student.db</groupId>
  <artifactId>ks-db</artifactId>
  <packaging>pom</packaging>
  <name>KS Impex</name>
  <description>Kuali Student Impex</description>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <properties>
    <ks.impex.sql.plugin.force.execution>false</ks.impex.sql.plugin.force.execution>
    <ks.impex.sql.plugin.skip>false</ks.impex.sql.plugin.skip>
    <ks.impex.ant.compatibility.mode>false</ks.impex.ant.compatibility.mode>
    <ks.impex.include.version.in.comment>false</ks.impex.include.version.in.comment>

    <ks.impex.show.drop.config.phase>none</ks.impex.show.drop.config.phase>
    <ks.impex.show.create.config.phase>none</ks.impex.show.create.config.phase>
    <ks.impex.show.connection.config.phase>none</ks.impex.show.connection.config.phase>
    <ks.impex.show.dba.connection.config.phase>none</ks.impex.show.dba.connection.config.phase>

    <ks.impex.generate.phase>generate-resources</ks.impex.generate.phase>
    <ks.impex.generate.sql.phase>${ks.impex.generate.phase}</ks.impex.generate.sql.phase>
    <ks.impex.generate.sql.oracle.phase>${ks.impex.generate.sql.phase}</ks.impex.generate.sql.oracle.phase>
    <ks.impex.generate.sql.mysql.phase>${ks.impex.generate.sql.phase}</ks.impex.generate.sql.mysql.phase>
    <ks.impex.generate.morph.phase>${ks.impex.generate.phase}</ks.impex.generate.morph.phase>
    <ks.impex.generate.dtd.phase>${ks.impex.generate.phase}</ks.impex.generate.dtd.phase>
    <ks.impex.oracle.validate.phase>none</ks.impex.oracle.validate.phase>
    <ks.impex.oracle.drop.phase>none</ks.impex.oracle.drop.phase>
    <ks.impex.oracle.create.phase>none</ks.impex.oracle.create.phase>
    <ks.impex.oracle.grant.phase>none</ks.impex.oracle.grant.phase>
    <ks.impex.import.phase>none</ks.impex.import.phase>
    <ks.impex.export.phase>none</ks.impex.export.phase>

    <!-- This is the format dates will be exported/imported as -->
    <ks.impex.date.format>yyyyMMddHHmmss</ks.impex.date.format>

    <!-- Oracle specific properties -->
    <ks.impex.masterdb.url>jdbc:oracle:thin:@deploy.ks.kuali.org:1521:KS</ks.impex.masterdb.url>
    <ks.impex.masterdb.schema>KSMASTER</ks.impex.masterdb.schema>
    <ks.impex.masterdb.username>KSMASTER</ks.impex.masterdb.username>
    <ks.impex.masterdb.password>KSMASTER</ks.impex.masterdb.password>
    <ks.impex.oracle.driver>oracle.jdbc.driver.OracleDriver</ks.impex.oracle.driver>
    <ks.impex.oracle.delimiter>/</ks.impex.oracle.delimiter>
    <ks.impex.oracle.defaultTablespace>users</ks.impex.oracle.defaultTablespace>
    <ks.impex.oracle.temporaryTablespace>temp</ks.impex.oracle.temporaryTablespace>
    <ks.impex.oracle.quota>UNLIMITED</ks.impex.oracle.quota>
    <ks.impex.oracle.validation.query>SELECT SYSDATE FROM DUAL</ks.impex.oracle.validation.query>
    <ks.impex.oracle.error.sqlcode.userDoesNotExist>-01918</ks.impex.oracle.error.sqlcode.userDoesNotExist>
    <ks.impex.oracle.error.sqlcode.userAlreadyExists>-01920</ks.impex.oracle.error.sqlcode.userAlreadyExists>
    <ks.impex.oracle.dba.username>SYS AS SYSDBA</ks.impex.oracle.dba.username>
    <ks.impex.oracle.dba.password>change_on_install</ks.impex.oracle.dba.password>
    <ks.impex.delimiter.type>row</ks.impex.delimiter.type>

  </properties>
  <build>
    <resources>
      <resource>
        <directory>${project.build.directory}/generated-impex</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>show-drop-database-config</id>
            <phase>${ks.impex.show.drop.config.phase}</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <echo>JDBC Url - ${ks.impex.url}</echo>
                <echo>JDBC Driver - ${ks.impex.driver}</echo>
                <echo>DBA User - ${ks.impex.dba.username}</echo>
                <echo>Dropping '${ks.impex.username}'</echo>
              </tasks>
            </configuration>
          </execution>
          <execution>
            <id>show-create-database-config</id>
            <phase>${ks.impex.show.create.config.phase}</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <echo>JDBC Url - ${ks.impex.url}</echo>
                <echo>JDBC Driver - ${ks.impex.driver}</echo>
                <echo>DBA User - ${ks.impex.dba.username}</echo>
                <echo>Creating '${ks.impex.username}'</echo>
              </tasks>
            </configuration>
          </execution>
          <execution>
            <id>show-connection-properties</id>
            <phase>${ks.impex.show.connection.config.phase}</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <echo>JDBC Url - ${ks.impex.url}</echo>
                <echo>JDBC Driver - ${ks.impex.driver}</echo>
                <echo>Validating that '${ks.impex.username}' can connect</echo>
              </tasks>
            </configuration>
          </execution>
          <execution>
            <id>show-dba-connection-properties</id>
            <phase>${ks.impex.show.dba.connection.config.phase}</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <echo>JDBC Url - ${ks.impex.url}</echo>
                <echo>JDBC Driver - ${ks.impex.driver}</echo>
                <echo>Validating that '${ks.impex.dba.username}' can connect</echo>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <version>1.4</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <!-- No need to attach sources -->
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <version>1.0.17</version>
        <dependencies>
          <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>${mysql.connector.version}</version>
          </dependency>
          <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14</artifactId>
            <version>${oracle.ojdbc.version}</version>
          </dependency>
        </dependencies>
        <configuration>
          <includes>${ks.impex.export.tables.pattern}</includes>
          <schema>${ks.impex.schema}</schema>
          <username>${ks.impex.username}</username>
          <password>${ks.impex.password}</password>
          <url>${ks.impex.url}</url>
          <driver>${ks.impex.driver}</driver>
          <dataXMLDir>${project.build.directory}/generated-impex/xml</dataXMLDir>
          <schemaDir>${project.build.directory}/generated-impex</schemaDir>
          <schemaXMLFile>${project.build.directory}/generated-impex/${project.artifactId}.xml</schemaXMLFile>
          <dateFormat>${ks.impex.date.format}</dateFormat>
          <includeVersionInComment>${ks.impex.include.version.in.comment}</includeVersionInComment>
          <antCompatibilityMode>${ks.impex.ant.compatibility.mode}</antCompatibilityMode>
        </configuration>
        <executions>
          <execution>
            <id>morph-xml</id>
            <phase>${ks.impex.generate.morph.phase}</phase>
            <goals>
              <goal>morphschema</goal>
              <goal>morphdata</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-data-dtd</id>
            <phase>${ks.impex.generate.dtd.phase}</phase>
            <goals>
              <goal>datadtd</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-oracle-sql</id>
            <phase>${ks.impex.generate.sql.oracle.phase}</phase>
            <goals>
              <goal>schemasql</goal>
              <goal>datasql</goal>
            </goals>
            <configuration>
              <targetDatabase>oracle</targetDatabase>
            </configuration>
          </execution>
          <execution>
            <id>generate-mysql-sql</id>
            <phase>${ks.impex.generate.sql.mysql.phase}</phase>
            <goals>
              <goal>schemasql</goal>
              <goal>datasql</goal>
            </goals>
            <configuration>
              <targetDatabase>mysql</targetDatabase>
            </configuration>
          </execution>
          <execution>
            <id>import-data</id>
            <phase>${ks.impex.import.phase}</phase>
            <goals>
              <goal>import</goal>
            </goals>
          </execution>
          <execution>
            <id>export-db</id>
            <phase>${ks.impex.export.phase}</phase>
            <goals>
              <goal>exportschema</goal>
              <goal>exportdata</goal>
              <goal>datadtd</goal>
            </goals>
            <configuration>
              <schemaXMLFile>${basedir}/src/main/impex/schema.xml</schemaXMLFile>
              <dataXMLDir>${basedir}/src/main/impex</dataXMLDir>
              <copyToFile>${basedir}/src/main/impex/data.dtd</copyToFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>sql-maven-plugin</artifactId>
        <version>1.4</version>
        <configuration>
          <username>${ks.impex.username}</username>
          <password>${ks.impex.password}</password>
          <url>${ks.impex.url}</url>
          <driver>${ks.impex.driver}</driver>
          <delimiter>${ks.impex.delimiter}</delimiter>
          <delimiterType>${ks.impex.delimiter.type}</delimiterType>
          <forceMojoExecution>${ks.impex.sql.plugin.force.execution}</forceMojoExecution>
          <skip>${ks.impex.sql.plugin.skip}</skip>
        </configuration>
        <executions>
          <execution>
            <id>validate-oracle-dba-connection</id>
            <phase>${ks.impex.oracle.dba.validate.phase}</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <username>${ks.impex.dba.username}</username>
              <password>${ks.impex.dba.password}</password>
              <sqlCommand>
                ${ks.impex.oracle.validation.query}
                /
              </sqlCommand>
            </configuration>
          </execution>
          <execution>
            <id>validate-oracle-connection</id>
            <phase>${ks.impex.oracle.validate.phase}</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <username>${ks.impex.username}</username>
              <password>${ks.impex.password}</password>
              <sqlCommand>
                ${ks.impex.oracle.validation.query}
                /
              </sqlCommand>
            </configuration>
          </execution>
          <execution>
            <id>drop-oracle-schema</id>
            <phase>${ks.impex.oracle.drop.phase}</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <username>${ks.impex.dba.username}</username>
              <password>${ks.impex.dba.password}</password>
              <!-- Drop the user, ignoring the Oracle error code for "user does not exist" -->
              <sqlCommand>
                BEGIN
                EXECUTE IMMEDIATE 'DROP USER ${ks.impex.username} CASCADE';
                EXCEPTION WHEN OTHERS THEN
                IF SQLCODE != ${ks.impex.oracle.error.sqlcode.userDoesNotExist} THEN
                RAISE;
                END IF;
                END;
                /
              </sqlCommand>
            </configuration>
          </execution>
          <execution>
            <id>create-oracle-schema</id>
            <phase>${ks.impex.oracle.create.phase}</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <username>${ks.impex.dba.username}</username>
              <password>${ks.impex.dba.password}</password>
              <!-- Create the user -->
              <sqlCommand>
                CREATE USER ${ks.impex.username}
                IDENTIFIED BY ${ks.impex.password}
                DEFAULT TABLESPACE ${ks.impex.oracle.defaultTablespace}
                TEMPORARY TABLESPACE ${ks.impex.oracle.temporaryTablespace}
                QUOTA ${ks.impex.oracle.quota} ON ${ks.impex.oracle.defaultTablespace}
                /
              </sqlCommand>
            </configuration>
          </execution>
          <execution>
            <id>grant-oracle-permissions</id>
            <phase>${ks.impex.oracle.grant.phase}</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <username>${ks.impex.dba.username}</username>
              <password>${ks.impex.dba.password}</password>
              <!-- Grant permissions as needed -->
              <sqlCommand>
                GRANT CREATE PROCEDURE
                , CREATE SEQUENCE
                , CREATE SESSION
                , CREATE SYNONYM
                , CREATE TABLE
                , CREATE TRIGGER
                , CREATE TYPE
                , CREATE VIEW
                TO ${ks.impex.username}
                /

                GRANT SELECT ON pending_trans$ to ${ks.impex.username}
                /

                GRANT SELECT ON dba_2pc_pending to ${ks.impex.username}
                /

                GRANT SELECT ON dba_pending_transactions to ${ks.impex.username}
                /

                GRANT EXECUTE ON dbms_system to ${ks.impex.username}
                /
              </sqlCommand>
            </configuration>
          </execution>
          <execution>
            <id>execute-pre-export-sql</id>
            <phase>${ks.impex.pre.export.phase}</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <!-- Nothing for now, but the hook is here if the need arises -->
              <sqlCommand>
              </sqlCommand>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14</artifactId>
            <version>${oracle.ojdbc.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>all-dbs</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>ks-rice-db</module>
        <module>ks-embedded-db</module>
        <module>ks-standalone-db</module>
      </modules>
    </profile>
    <profile>
      <id>skip-impex</id>
      <!-- Turn off SQL generation and don't include any modules -->
      <properties>
        <ks.impex.generate.phase>none</ks.impex.generate.phase>
      </properties>
      <activation>
        <property>
          <name>skipImpex</name>
        </property>
      </activation>
    </profile>
    <profile>
      <id>embedded-only</id>
      <modules>
        <module>ks-embedded-db</module>
      </modules>
    </profile>
    <profile>
      <id>standalone-only</id>
      <modules>
        <module>ks-standalone-db</module>
      </modules>
    </profile>
    <profile>
      <id>rice-only</id>
      <modules>
        <module>ks-rice-db</module>
      </modules>
    </profile>
    <profile>
      <!--
        This profile sets properties that connect the dropping/creating/loading of an Oracle schema to appropriate
        phases of the Maven build lifecycle. The "clean" phase drops the schema, the "initialize" phase creates the
        schema and grants permissions, and the "install" phase loads data into the schema
      -->
      <id>oracle-db</id>
      <properties>
        <ks.impex.oracle.dba.validate.phase>validate</ks.impex.oracle.dba.validate.phase>
        <ks.impex.show.clean.config.phase>pre-clean</ks.impex.show.clean.config.phase>
        <ks.impex.show.initialize.config.phase>initialize</ks.impex.show.initialize.config.phase>
        <ks.impex.url>jdbc:oracle:thin:@localhost:1521:XE</ks.impex.url>
        <ks.impex.driver>${ks.impex.oracle.driver}</ks.impex.driver>
        <ks.impex.dba.username>${ks.impex.oracle.dba.username}</ks.impex.dba.username>
        <ks.impex.dba.password>${ks.impex.oracle.dba.password}</ks.impex.dba.password>
        <ks.impex.oracle.drop.phase>clean</ks.impex.oracle.drop.phase>
        <ks.impex.oracle.validate.phase>validate</ks.impex.oracle.validate.phase>
        <ks.impex.oracle.create.phase>initialize</ks.impex.oracle.create.phase>
        <ks.impex.oracle.grant.phase>initialize</ks.impex.oracle.grant.phase>
        <ks.impex.import.phase>install</ks.impex.import.phase>
        <ks.impex.delimiter>${ks.impex.oracle.delimiter}</ks.impex.delimiter>
        <ks.impex.generate.sql.mysql.phase>none</ks.impex.generate.sql.mysql.phase>
      </properties>
    </profile>
    <profile>
      <!--
        This profile generates XML data from the "master" Oracle db and places it on the file system
      -->
      <id>generate-xml</id>
      <modules>
        <module>ks-standalone-db</module>
        <module>ks-embedded-db</module>
      </modules>
      <properties>
        <ks.impex.oracle.validate.phase>validate</ks.impex.oracle.validate.phase>
        <ks.impex.show.connection.config.phase>validate</ks.impex.show.connection.config.phase>
        <ks.impex.url>${ks.impex.masterdb.url}</ks.impex.url>
        <ks.impex.driver>${ks.impex.oracle.driver}</ks.impex.driver>
        <ks.impex.delimiter>${ks.impex.oracle.delimiter}</ks.impex.delimiter>
        <ks.impex.username>${ks.impex.masterdb.username}</ks.impex.username>
        <ks.impex.password>${ks.impex.masterdb.password}</ks.impex.password>
        <ks.impex.generate.phase>none</ks.impex.generate.phase>
        <ks.impex.sql.plugin.force.execution>true</ks.impex.sql.plugin.force.execution>
        <ks.impex.pre.export.phase>initialize</ks.impex.pre.export.phase>
        <ks.impex.export.phase>generate-resources</ks.impex.export.phase>
        <ks.impex.schema>${ks.impex.masterdb.schema}</ks.impex.schema>
        <ks.impex.ant.compatibility.mode>true</ks.impex.ant.compatibility.mode>
      </properties>
    </profile>
    <profile>
      <!--
        This profile handles re-creating the "master" Oracle db from the combination of Kuali Student SQL 
        files and Rice Impex XML files.  The true "master" for Kuali Student is the set of SQL files and
        Rice Impex XML files checked into SCM.  The "master" database is a temporary materialization of 
        that data inside an Oracle database.
      -->
      <id>master-oracle-db</id>
      <properties>
        <ks.impex.url>${ks.impex.masterdb.url}</ks.impex.url>
        <ks.impex.driver>${ks.impex.oracle.driver}</ks.impex.driver>
        <ks.impex.schema>${ks.impex.masterdb.schema}</ks.impex.schema>
        <ks.impex.username>${ks.impex.masterdb.username}</ks.impex.username>
        <ks.impex.password>${ks.impex.masterdb.password}</ks.impex.password>
        <ks.impex.dba.username>${ks.impex.oracle.dba.username}</ks.impex.dba.username>
        <ks.impex.dba.password>${ks.impex.oracle.dba.password}</ks.impex.dba.password>

        <ks.impex.show.drop.config.phase>pre-clean</ks.impex.show.drop.config.phase>
        <ks.impex.oracle.drop.phase>clean</ks.impex.oracle.drop.phase>

        <ks.impex.show.create.config.phase>initialize</ks.impex.show.create.config.phase>
        <ks.impex.oracle.create.phase>initialize</ks.impex.oracle.create.phase>
        <ks.impex.oracle.grant.phase>initialize</ks.impex.oracle.grant.phase>
        <ks.impex.generate.phase>none</ks.impex.generate.phase>
        <ks.impex.delimiter>${ks.impex.oracle.delimiter}</ks.impex.delimiter>
        <ks.impex.execute.sql.skip>false</ks.impex.execute.sql.skip>
        <ks.impex.unpack.sql.phase>generate-resources</ks.impex.unpack.sql.phase>
        <ks.impex.build.master.db.phase>process-resources</ks.impex.build.master.db.phase>
        <ks.impex.sql.plugin.force.execution>true</ks.impex.sql.plugin.force.execution>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <phase>${ks.impex.unpack.sql.phase}</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.kuali.student.core</groupId>
                      <artifactId>ks-core-sql</artifactId>
                      <version>${project.version}</version>
                      <includes>**\/*.sql</includes>
                      <outputDirectory>${project.build.directory}/gen/data</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.kuali.student.lum</groupId>
                      <artifactId>ks-lum-sql</artifactId>
                      <version>${project.version}</version>
                      <includes>**\/*.sql</includes>
                      <outputDirectory>${project.build.directory}/gen/data</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.kuali.student.db</groupId>
                      <artifactId>ks-rice-db</artifactId>
                      <version>${project.version}</version>
                      <includes>**/oracle/*.sql</includes>
                      <outputDirectory>${project.build.directory}/gen/data/rice</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>org.kuali.student.core</groupId>
                <artifactId>ks-core-sql</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.student.lum</groupId>
                <artifactId>ks-lum-sql</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.student.db</groupId>
                <artifactId>ks-rice-db</artifactId>
                <version>${project.version}</version>
              </dependency>
            </dependencies>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <configuration>
              <forceMojoExecution>true</forceMojoExecution>
              <url>${ks.impex.url}</url>
              <username>${ks.impex.username}</username>
              <password>${ks.impex.password}</password>
              <importDir>${project.build.directory}/gen/data/rice/sql</importDir>
            </configuration>
            <executions>
              <execution>
                <id>create-rice-schema</id>
                <phase>${ks.impex.build.master.db.phase}</phase>
                <goals>
                  <goal>import</goal>
                </goals>
                <configuration>
                  <importDirIncludes>ks-rice-db.sql</importDirIncludes>
                </configuration>
              </execution>
              <execution>
                <id>load-rice-data</id>
                <phase>${ks.impex.build.master.db.phase}</phase>
                <goals>
                  <goal>import</goal>
                </goals>
                <configuration>
                  <importDirExcludes>ks-rice-db*.sql</importDirExcludes>
                </configuration>
              </execution>
              <execution>
                <id>add-rice-constraints</id>
                <phase>${ks.impex.build.master.db.phase}</phase>
                <goals>
                  <goal>import</goal>
                </goals>
                <configuration>
                  <importDirIncludes>ks-rice-db-constraints.sql</importDirIncludes>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>sql-maven-plugin</artifactId>
            <configuration>
              <orderFile>ascending</orderFile>
            </configuration>
            <executions>
              <execution>
                <id>create-schema</id>
                <phase>${ks.impex.build.master.db.phase}</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <fileset>
                    <basedir>${project.build.directory}/gen/data</basedir>
                    <includes>
                      <include>initial-db/*/*-create-schema.sql</include>
                    </includes>
                  </fileset>
                </configuration>
              </execution>
              <execution>
                <id>load-data</id>
                <phase>${ks.impex.build.master.db.phase}</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <fileset>
                    <basedir>${project.build.directory}/gen/data</basedir>
                    <includes>
                      <include>initial-db/*/*data/*.sql</include>
                    </includes>
                  </fileset>
                </configuration>
              </execution>
              <execution>
                <id>add-constraints</id>
                <phase>${ks.impex.build.master.db.phase}</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <fileset>
                    <basedir>${project.build.directory}/gen/data</basedir>
                    <includes>
                      <include>initial-db/*/*-constraints.sql</include>
                    </includes>
                  </fileset>
                </configuration>
              </execution>
              <execution>
                <id>run-upgrades</id>
                <phase>${ks.impex.build.master.db.phase}</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <!-- A few sql files don't have the delimiter "/" on it's own row -->
                  <delimiterType>normal</delimiterType>
                  <fileset>
                    <basedir>${project.build.directory}/gen/data</basedir>
                    <includes>
                      <include>upgrades/*/*.sql</include>
                    </includes>
                  </fileset>
                </configuration>
              </execution>
              <execution>
                <!-- Perform cleanup on the imported data as needed -->
                <id>execute-post-process-sql</id>
                <phase>${ks.impex.build.master.db.phase}</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <sqlCommand>
                    UPDATE KS_DB_VERSION SET UPGRADE_TIME = NULL
                    /
                    purge recyclebin
                    /
                  </sqlCommand>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <!-- This profile commits any Impex changes to SCM -->
      <id>commit-impex-changes</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-scm-plugin</artifactId>
            <executions>
              <execution>
                <id>commit-impex-changes</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>add</goal>
                  <goal>checkin</goal>
                </goals>
                <configuration>
                  <message>Automated Impex update</message>
                  <includes>**/src/main/impex/*.xml,**/src/main/impex/*.dtd</includes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>