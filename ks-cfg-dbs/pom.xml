<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student</groupId>
    <artifactId>student</artifactId>
    <version>1.1.0-M8-SNAPSHOT</version>
  </parent>
  <groupId>org.kuali.student.db</groupId>
  <artifactId>ks-db</artifactId>
  <packaging>pom</packaging>
  <name>KS Databases</name>
  <description>Kuali Student Databases</description>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <modules>
    <module>ks-embedded-db</module>
    <module>ks-core-db</module>
    <module>ks-lum-db</module>
    <module>ks-rice-db</module>
    <module>ks-rice-client-db</module>
    <module>ks-rice-server-db</module>
  </modules>
  <build>
    <resources>
      <resource>
        <directory>${project.build.directory}/generated-impex</directory>
      </resource>
      <resource>
        <directory>${project.build.directory}/generated-sql</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.properties</groupId>
        <artifactId>maven-kuali-properties-plugin</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <configuration>
          <locations>
            <param>${user.home}/kuali/main/${environment}/ks-embedded-config.xml</param>
            <param>${additional.config.locations}</param>
          </locations>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <version>1.0.1-SNAPSHOT</version>
        <configuration>
          <dataXMLDir>${project.build.directory}/generated-impex/xml</dataXMLDir>
          <schemaDir>${project.build.directory}/generated-impex</schemaDir>
          <schemaXMLFile>${project.build.directory}/generated-impex/${project.artifactId}-schema.xml</schemaXMLFile>
          <trimArtifactId>true</trimArtifactId>
        </configuration>
        <executions>
          <execution>
            <id>morph-xml</id>
            <goals>
              <goal>morphschema</goal>
              <goal>morphdata</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-data-dtd</id>
            <goals>
              <goal>datadtd</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-oracle-sql</id>
            <goals>
              <goal>schemasql</goal>
              <goal>datasql</goal>
            </goals>
            <configuration>
              <targetDatabase>oracle</targetDatabase>
            </configuration>
          </execution>
          <execution>
            <id>generate-mysql-sql</id>
            <goals>
              <goal>schemasql</goal>
              <goal>datasql</goal>
            </goals>
            <configuration>
              <targetDatabase>mysql</targetDatabase>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14</artifactId>
            <version>${oracle.ojdbc.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>