<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student</groupId>
    <artifactId>student</artifactId>
    <version>1.1.0-M9-SNAPSHOT</version>
  </parent>
  <groupId>org.kuali.student.db</groupId>
  <artifactId>ks-db</artifactId>
  <packaging>pom</packaging>
  <name>KS Databases</name>
  <description>Kuali Student Databases</description>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <properties>
    <!-- Some example values for database specific properties -->

    <!-- Oracle JDBC url's don't contain a database name -->
    <ks.impex.url.oracle>jdbc:oracle:thin:@localhost:1521:XE</ks.impex.url.oracle>
    <ks.impex.dba.username.oracle>system</ks.impex.dba.username.oracle>
    <ks.impex.dba.password.oracle></ks.impex.dba.password.oracle>

    <!-- MySQL JDBC url's do contain a database name -->
    <ks.impex.url.mysql>jdbc:mysql://localhost/ksembedded</ks.impex.url.mysql>
    <ks.impex.dba.username.mysql>root</ks.impex.dba.username.mysql>
    <ks.impex.dba.password.mysql></ks.impex.dba.password.mysql>

    <!-- These 3 properties are required -->
    <ks.impex.url>${ks.impex.url.oracle}</ks.impex.url> <!-- JDBC url -->
    <ks.impex.dba.username>${ks.impex.dba.username.oracle}</ks.impex.dba.username> <!-- User with DBA privileges -->
    <ks.impex.dba.password>${ks.impex.dba.password.oracle}</ks.impex.dba.password> <!-- Password for the DBA user -->

    <!-- These properties are optional -->
    <!-- Platform specific logic generates default values for these -->
    
    <!-- A url for connecting directly to the database server ie no database specified -->
    <ks.impex.server.url></ks.impex.server.url>

    <!-- Aka "schema" for Oracle. This database/schema gets dropped / created by the DBA user-->
    <ks.impex.database.name></ks.impex.database.name>
    
    <!-- This is the user the application will connect to the database as. -->
    <!-- This user gets dropped / created by the DBA user -->
    <ks.impex.database.user></ks.impex.database.user>

    <!-- The password for the user -->
    <ks.impex.database.password></ks.impex.database.password>

    <!--  This is the format dates will be exported/imported as -->
    <ks.impex.date.format>yyyyMMddHHmmss</ks.impex.date.format>
    
    <!-- Any properties located in the properties file, override POM properties, but not system properties -->
    <ks.impex.properties>${user.home}/impex.properties</ks.impex.properties>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>${project.build.directory}/generated-impex</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <version>1.0.3</version>
        <configuration>
          <dataXMLDir>${project.build.directory}/generated-impex/xml</dataXMLDir>
          <schemaDir>${project.build.directory}/generated-impex</schemaDir>
          <schemaXMLFile>${project.build.directory}/generated-impex/${project.artifactId}.xml</schemaXMLFile>
          <dateFormat>${ks.impex.date.format}</dateFormat>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>${mysql.connector.version}</version>
          </dependency>
          <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14</artifactId>
            <version>${oracle.ojdbc.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.properties</groupId>
            <artifactId>maven-properties-plugin</artifactId>
            <version>1.0.0</version>
            <executions>
              <execution>
                <id>properties</id>
                <goals>
                  <goal>properties</goal>
                </goals>
                <configuration>
                  <properties>${ks.impex.properties}</properties>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>oracle-sql</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-oracle-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
                <configuration>
                  <targetDatabase>oracle</targetDatabase>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>mysql-sql</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-mysql-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
                <configuration>
                  <targetDatabase>mysql</targetDatabase>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>generate-sql</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-oracle-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
                <configuration>
                  <targetDatabase>oracle</targetDatabase>
                </configuration>
              </execution>
              <execution>
                <id>generate-mysql-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
                <configuration>
                  <targetDatabase>mysql</targetDatabase>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>reset-db</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.properties</groupId>
            <artifactId>maven-properties-plugin</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <executions>
              <execution>
                <id>properties</id>
                <goals>
                  <goal>properties</goal>
                </goals>
                <configuration>
                  <properties>${ks.impex.properties}</properties>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <configuration>
              <url>${ks.impex.url}</url>
              <username>${ks.impex.database.user}</username>
              <password>${ks.impex.database.password}</password>
            </configuration>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
              </execution>
              <execution>
                <id>purge-db</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>drop</goal>
                  <goal>create</goal>
                </goals>
                <configuration>
                  <serverUrl>${ks.impex.server.url}</serverUrl>
                  <username>${ks.impex.dba.username}</username>
                  <password>${ks.impex.dba.password}</password>
                  <database>${ks.impex.database.name}</database>
                  <databaseUser> ${ks.impex.database.user}</databaseUser>
                  <databasePassword>${ks.impex.database.password}</databasePassword>
                </configuration>
              </execution>
              <execution>
                <id>import-data</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>import</goal>
                </goals>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql.connector.version}</version>
              </dependency>
              <dependency>
                <groupId>com.oracle</groupId>
                <artifactId>ojdbc14</artifactId>
                <version>${oracle.ojdbc.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <modules>
    <module>ks-embedded-db</module>
