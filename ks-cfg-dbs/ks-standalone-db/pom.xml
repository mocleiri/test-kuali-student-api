<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.db</groupId>
    <artifactId>ks-db</artifactId>
    <version>1.1-SNAPSHOT</version>
  </parent>
  <artifactId>ks-standalone-db</artifactId>
  <name>KS Standalone Impex</name>
  <description>Kuali Student Standalone Impex</description>
  <properties>
    <ks.impex.username>KSSTANDALONE</ks.impex.username>
    <ks.impex.password>KSSTANDALONE</ks.impex.password>
  </properties>
  <profiles>
    <profile>
      <id>generate-xml</id>
      <properties>
        <ks.impex.username>${ks.impex.masterdb.username}</ks.impex.username>
        <ks.impex.password>${ks.impex.masterdb.password}</ks.impex.password>
        <ks.impex.export.tables.pattern>^KS.*</ks.impex.export.tables.pattern>
        <ks.impex.pre.export.phase>none</ks.impex.pre.export.phase>
      </properties>
    </profile>
    <profile>
      <id>oracle-db</id>
      <properties>
        <ks.impex.show.drop.config.phase>pre-clean</ks.impex.show.drop.config.phase>
        <ks.impex.show.create.config.phase>validate</ks.impex.show.create.config.phase>
        <ks.impex.show.connection.config.phase>verify</ks.impex.show.connection.config.phase>
      </properties>
    </profile>
  </profiles>
</project>