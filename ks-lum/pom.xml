<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.kuali.student.lum</groupId>
  <artifactId>ks-lum</artifactId>
  <version>1.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>KS LUM</name>
  <description>KS Learning Unit Management POM</description>
  <url>http://student.kuali.org/site/lum/${project.version}</url>
  <properties>
    <ks-core.version>1.1.0-SNAPSHOT</ks-core.version>
  </properties>
  <parent>
    <groupId>org.kuali.student.core</groupId>
    <artifactId>ks-core</artifactId>
    <version>1.1.0-SNAPSHOT</version>
  </parent>
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>ks-lum-api</module>
        <module>ks-lum-impl</module>
        <module>ks-lum-rice</module>
        <module>ks-lum-ui</module>
        <module>ks-lum-web</module>
      </modules>
    </profile>
    <profile>
      <id>embedded-only-war</id>
      <modules>
        <module>ks-lum-api</module>
        <module>ks-lum-impl</module>
        <module>ks-lum-rice</module>
        <module>ks-lum-ui</module>
      </modules>
    </profile>
    <profile>
      <id>standalone-only-wars</id>
      <modules>
        <module>ks-lum-api</module>
        <module>ks-lum-impl</module>
        <module>ks-lum-rice</module>
        <module>ks-lum-ui</module>
      </modules>
    </profile>
    <profile>
      <id>skip-lum-war</id>
      <modules>
        <module>ks-lum-api</module>
        <module>ks-lum-impl</module>
        <module>ks-lum-rice</module>
        <module>ks-lum-ui</module>
      </modules>
    </profile>
    <profile>
      <id>skip-developer-wars</id>
      <modules>
        <module>ks-lum-api</module>
        <module>ks-lum-impl</module>
        <module>ks-lum-rice</module>
        <module>ks-lum-ui</module>
      </modules>
    </profile>
    <profile>
      <id>skip-all-wars</id>
      <modules>
        <module>ks-lum-api</module>
        <module>ks-lum-impl</module>
        <module>ks-lum-rice</module>
        <module>ks-lum-ui</module>
      </modules>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>kuali.release</id>
      <url>https://test.kuali.org/maven</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>kuali.snapshot</id>
      <url>http://archiva.kuali.umd.edu/repository/snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
  </repositories>
  <scm>
    <connection>scm:svn:https://test.kuali.org/svn/student/trunk/ks-lum</connection>
    <developerConnection>scm:svn:https://test.kuali.org/svn/student/trunk/ks-lum</developerConnection>
  </scm>
  <distributionManagement>
    <site>
      <id>ks.site</id>
      <url>scp://student.kuali.org:/opt/www/student/site/lum/${project.version}</url>
    </site>
  </distributionManagement>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>${javadoc.plugin.version}</version>
        <configuration>
          <maxmemory>256m</maxmemory>
          <aggregate>true</aggregate>
          <show>private</show>
          <source>1.6</source>
          <links>
            <link>http://cxf.apache.org/javadoc/${cxf.version}/</link>
            <link>http://java.sun.com/javase/6/docs/api/</link>
            <link>http://java.sun.com/javaee/5/docs/api/</link>
            <link>http://static.springframework.org/spring/docs/${spring.version}/api/</link>
            <link>http://student.kuali.org/site/core/${ks-core.version}/apidocs/</link>
            <link>http://rice.kuali.org/docs/1.0.0/site/apidocs/</link>
          </links>
        </configuration>
        <reportSets>
          <reportSet>
            <reports>
              <report>javadoc</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
</project>