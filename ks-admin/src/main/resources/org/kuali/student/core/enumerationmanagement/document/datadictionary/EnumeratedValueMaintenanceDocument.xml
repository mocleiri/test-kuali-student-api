<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dd="http://rice.kuali.org/dd"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

  <bean id="EnumeratedValueMaintenanceDocument" parent="EnumeratedValueMaintenanceDocument-parentBean"/>
  <bean id="EnumeratedValueMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry" 
        p:businessObjectClass="org.kuali.student.core.enumerationmanagement.bo.EnumeratedValue"
        p:maintainableClass="org.kuali.rice.kns.maintenance.KualiMaintainableImpl">
    <property name="allowsNewOrCopy" value="false" />
    <property name="maintainableSections">
      <list>
        <ref bean="EnumeratedValueMaintenanceDocument-EnumeratedValueMaintenance"/>
      </list>
    </property>
    <property name="lockingKeys">
      <list>
        <value>id</value>
      </list>
    </property>
    <property name="documentTypeName" value="EnumeratedValueDocumentType"/>
  </bean>

  <!-- Maintenance Section Definitions -->

  <bean id="EnumeratedValueMaintenanceDocument-EnumeratedValueMaintenance" parent="EnumeratedValueMaintenanceDocument-EnumeratedValueMaintenance-parentBean"/>
  <bean id="EnumeratedValueMaintenanceDocument-EnumeratedValueMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="title" value="Enumeration Value Maintenance"/>
    <property name="maintainableItems">
      <list>
      	<bean parent="MaintainableFieldDefinition" p:name="enumerationId" p:alternateDisplayAttributeName="enumeration.name" p:unconditionallyReadOnly="true" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="code" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="abbrevValue" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="value" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="sortKey" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="activeFromDate" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="activeToDate" p:required="false"/>
      </list>
    </property>
  </bean>

</beans>