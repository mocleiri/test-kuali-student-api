<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="AtpType" parent="AtpType-parentBean" />
    <bean id="AtpType-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="org.kuali.student.core.atp.bo.AtpType" />
        <property name="titleAttribute" value="id" />
        <property name="objectLabel" value="Academic Time Period Type" />
        <property name="lookupDefinition">
            <ref bean="AtpType-lookupDefinition" />
        </property>
        <property name="inquiryDefinition">
            <ref bean="AtpType-inquiryDefinition" />
        </property>
        <property name="attributes">
            <list>
                <ref bean="AtpType-id" />
                <ref bean="AtpType-name" />
                <ref bean="AtpType-description" />
                <ref bean="AtpType-activeFromDate" />
                <ref bean="AtpType-activeToDate" />
                <ref bean="AtpType-active" />
                <ref bean="AtpType-seasonalTypeId" />
                <ref bean="AtpType-durationTypeId" />
            </list>
        </property>
    </bean>

    <alias alias="AtpType-id" name="CoreTypeReference-id" />
    <alias alias="AtpType-name" name="CoreTypeReference-name" />
    <alias alias="AtpType-description" name="CoreTypeReference-description" />
    <alias alias="AtpType-activeFromDate" name="CoreTypeReference-activeFromDate" />
    <alias alias="AtpType-activeToDate" name="CoreTypeReference-activeToDate" />
    <alias alias="AtpType-active" name="CoreTypeReference-active" />

    <bean id="AtpType-seasonalTypeId" parent="AtpType-seasonalTypeId-parentBean" />
    <bean id="AtpType-seasonalTypeId-parentBean" abstract="true" parent="CoreAttributeReference-typeId">
        <property name="shortLabel" value="Seas Typ" />
        <property name="summary" value="Id of the Seasonal Type" />
        <property name="name" value="seasonalTypeId" />
        <property name="label" value="Season" />
        <property name="description" value="Id of the Seasonal Type" />
        <property name="control">
	      <bean parent="SelectControlDefinition" p:valuesFinderClass="org.kuali.student.core.atp.bo.options.AtpSeasonTypeValuesFinder"/>
	    </property>
    </bean>

    <bean id="AtpType-durationTypeId" parent="AtpType-durationTypeId-parentBean" />
    <bean id="AtpType-durationTypeId-parentBean" abstract="true" parent="CoreAttributeReference-typeId">
        <property name="shortLabel" value="Duration Typ" />
        <property name="summary" value="Id of the Duration Type" />
        <property name="name" value="durationTypeId" />
        <property name="label" value="Duration" />
        <property name="description" value="Id of the Duration Type" />
        <property name="control">
	      <bean parent="SelectControlDefinition" p:valuesFinderClass="org.kuali.student.core.atp.bo.options.AtpDurationTypeValuesFinder"/>
	    </property>
    </bean>

    <bean id="AtpType-lookupDefinition" parent="AtpType-lookupDefinition-parentBean" />
    <bean id="AtpType-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    	<property name="title" value="ATP Type Lookup" />
        <property name="translateCodes" value="true" />
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="id" />
                <bean parent="FieldDefinition" p:attributeName="name" />
                <bean parent="FieldDefinition" p:attributeName="seasonalTypeId" />
                <bean parent="FieldDefinition" p:attributeName="durationTypeId" />
                <bean parent="FieldDefinition" p:attributeName="active" />
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="id" />
                <bean parent="FieldDefinition" p:attributeName="name" />
                <bean parent="FieldDefinition" p:attributeName="seasonalTypeId" p:alternateDisplayAttributeName="seasonalType.name"/>
                <bean parent="FieldDefinition" p:attributeName="durationTypeId" p:alternateDisplayAttributeName="durationType.name"/>
                <bean parent="FieldDefinition" p:attributeName="activeFromDate" />
                <bean parent="FieldDefinition" p:attributeName="activeToDate" />
            </list>
        </property>
    </bean>

    <bean id="AtpType-inquiryDefinition" parent="AtpType-inquiryDefinition-parentBean" />
    <bean id="AtpType-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
        <property name="title" value="ATP Type Inquiry" />
        <property name="inquirySections">
            <list>
                <bean parent="InquirySectionDefinition">
                    <property name="title" value="Atp Type" />
                    <property name="numberOfColumns" value="1" />
                    <property name="inquiryFields">
                        <list>
                            <bean parent="FieldDefinition" p:attributeName="id" />
                            <bean parent="FieldDefinition" p:attributeName="name" />
                            <bean parent="FieldDefinition" p:attributeName="description" />
                            <bean parent="FieldDefinition" p:attributeName="seasonalTypeId" p:alternateDisplayAttributeName="seasonalType.name"/>
                            <bean parent="FieldDefinition" p:attributeName="durationTypeId" p:alternateDisplayAttributeName="durationType.name"/>
                            <bean parent="FieldDefinition" p:attributeName="activeFromDate" />
                            <bean parent="FieldDefinition" p:attributeName="activeToDate" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>