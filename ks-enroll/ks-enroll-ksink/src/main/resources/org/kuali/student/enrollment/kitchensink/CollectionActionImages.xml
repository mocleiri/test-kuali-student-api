<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- The Interesting Bits -->

    <bean id="KS-KitchenSink-CollectionActionImages" parent="KS-KitchenSink-Collection-Base">
        <!-- KS-KitchenSink-Collection-Base is in KitchenSinkView.xml; parent="Uif-TableCollectionSection" -->
        <property name="lineActions">
            <list>
                <bean parent="Uif-ActionLink">
                    <property name="methodToCall" value="view"/>
                    <property name="actionImage">
                        <bean parent="Uif-Image">
                            <!-- TODO: use config param for image "source" -->
                            <property name="source" value="/ks-embedded-dev/ks-enroll-ksink/images/view.png"/>
                            <property name="title" value="View"/>
                            <property name="altText" value="View"/>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink">
                    <property name="methodToCall" value="edit"/>
                    <property name="actionImage">
                        <bean parent="Uif-Image">
                            <!-- TODO: use config param for image "source" -->
                            <property name="source" value="/ks-embedded-dev/ks-enroll-ksink/images/edit.png"/>
                            <property name="title" value="Edit"/>
                            <property name="altText" value="Edit"/>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink">
                    <property name="methodToCall" value="delete"/>
                    <property name="actionImage">
                        <bean parent="Uif-Image">
                            <!-- TODO: use config param for image "source" -->
                            <property name="source" value="/ks-embedded-dev/ks-enroll-ksink/images/delete.png"/>
                            <property name="title" value="Delete"/>
                            <property name="altText" value="Delete"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <!-- just the various containers for the interesting bits -->

    <bean id="KS-KitchenSink-CollectionActionImages-View" parent="KS-KitchenSink-FormView">
        <property name="headerText" value="Collections"/>
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-CollectionActionImages-Page">
                    <property name="headerText" value="Collection Action Images"/>
                    <property name="footer">
                        <bean parent="Uif-VerticalBoxSection">
                            <property name="header.render" value="false"/>
                            <property name="style" value="margin-top:10px"/>
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Message">
                                        <property name="style" value="margin-bottom:15px;font-size:125%"/>
                                        <property name="messageText">
                                            <value>
                                                This example shows how to replace the action links in the "Actions"
                                                column with image links.
                                            </value>
                                        </property>
                                    </bean>
                                    <bean parent="KS-KitchenSink-Link-To-Source"
                                          p:href="https://svn.kuali.org/repos/student/branches/ks-1.3/ks-enroll/ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/CollectionActionImages.xml"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-XML-Source"
                                          p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M2/krad/krad-web-framework/src/main/resources/org/kuali/rice/krad/uif/UifGroupDefinitions.xml"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-Java-Source"
                                          p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M2/krad/krad-web-framework/src/main/java/org/kuali/rice/krad/uif/container/CollectionGroup.java"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-API"
                                          p:href="http://site.origin.kuali.org/rice/2.2.0-M2/apidocs/org/kuali/rice/krad/uif/container/CollectionGroup.html"/>
                                    <bean parent="KS-KitchenSink-Link-To-Guide"
                                          p:href="http://site.kuali.org/rice/2.2.0-M2/reference/html/KRAD_Guide.html"/>
                                    <bean parent="KS-KitchenSink-Link-To-Bare">
                                        <property name="finalizeMethodAdditionalArguments">
                                            <list>
                                                <value>collectionOptions</value>
                                            </list>
                                        </property>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-CollectionActionImages-View-Bare" parent="KS-KitchenSink-FormView-Bare">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-CollectionActionImages-Page">
                    <property name="header.render" value="false"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-CollectionActionImages-Page" parent="KS-KitchenSink-Page">
        <property name="items">
            <list>
                <ref bean="KS-KitchenSink-CollectionActionImages"/>
            </list>
        </property>
    </bean>

</beans>