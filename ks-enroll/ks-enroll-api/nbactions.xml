<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-install no tests</actionName>
            <displayName>install no tests</displayName>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>test.single</actionName>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
                
            </goals>
            <properties>
                <test>${className}</test>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-install no tests debug</actionName>
            <displayName>install no tests debug</displayName>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
    </actions>
