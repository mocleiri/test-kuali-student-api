<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="ks_studentFacing_EnrollmentLaunchView" parent="KSFormView">
        <property name="id" value="enrollmentLaunchView"/>
        <property name="title" value="KS Enrollment"/>
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Page"/>
        </property>
        <property name="footer">
            <bean parent="Footer"/>
        </property>
        <property name="items">
            <list>
                <ref bean="links_layout"/>
            </list>
        </property>
        <property name="formClass" value="org.kuali.student.enrollment.main.form.LaunchForm"/>
    </bean>

    <bean id="links_layout" parent="Group">
        <property name="accordion.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="LabelField" p:labelText="Academic Calendar"/>
                <bean parent="LinkField" p:linkLabel="Academic Calendar with Terms" p:target="_self"
                          p:hrefText="@{#ConfigProperties['application.url']}/spring/maintenance?methodToCall=start&amp;dataObjectClassName=org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper&amp;returnLocation=@{#ConfigProperties['application.url']}/spring/launch?viewId=enrollmentLaunchView&amp;methodToCall=start"/>
                <bean parent="LinkField" p:linkLabel="Academic Calendar Lookup" p:target="_self"
                          p:hrefText="@{#ConfigProperties['application.url']}/spring/lookup?methodToCall=start&amp;id=2&amp;dataObjectClassName=org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper&amp;returnLocation=@{#ConfigProperties['application.url']}/spring/launch?viewId=enrollmentLaunchView&amp;methodToCall=start"/>
                <bean parent="LabelField" p:labelText="Course Offering"/>
                <bean parent="LinkField" p:linkLabel="Create a Course Offering" p:target="_self"
                          p:hrefText="@{#ConfigProperties['application.url']}/spring/maintenance?methodToCall=start&amp;dataObjectClassName=org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo&amp;returnLocation=@{#ConfigProperties['application.url']}/spring/launch?viewId=enrollmentLaunchView&amp;methodToCall=start"/>
                <bean parent="LinkField" p:linkLabel="Course Lookup" p:target="_self"
                          p:hrefText="@{#ConfigProperties['application.url']}/spring/lookup?methodToCall=start&amp;dataObjectClassName=org.kuali.student.lum.course.dto.CourseInfo&amp;returnLocation=@{#ConfigProperties['application.url']}/spring/launch?viewId=enrollmentLaunchView&amp;methodToCall=start"/>
                <bean parent="LabelField" p:labelText="Registration"/>
                <bean parent="LinkField" p:linkLabel="Register for Fall 2011 Classes" p:target="_self"
                          p:hrefText="@{#ConfigProperties['application.url']}/spring/registration?methodToCall=start&amp;viewId=studentRegistrationView&amp;termKey=testTermId1&amp;returnLocation=@{#ConfigProperties['application.url']}/spring/launch?viewId=enrollmentLaunchView&amp;methodToCall=start"/>
                <bean parent="LabelField" p:labelText="Grading" />
                <bean parent="LinkField" p:linkLabel="Grading" p:target="_self"
                          p:hrefText="@{#ConfigProperties['application.url']}/spring/grading?methodToCall=start&amp;viewId=GradingView&amp;returnLocation=@{#ConfigProperties['application.url']}/spring/launch?viewId=enrollmentLaunchView&amp;methodToCall=start"/>
                <bean parent="LinkField" p:linkLabel="View Term Grades" p:target="_self"
                        p:hrefText="@{#ConfigProperties['application.url']}/spring/grading?methodToCall=start&amp;viewId=StudentGradeView&amp;returnLocation=@{#ConfigProperties['application.url']}/spring/launch?viewId=enrollmentLaunchView&amp;methodToCall=start"/>

            </list>
        </property>
    </bean>
</beans>

