    <util:list id="termTypes-options">
        <bean parent="KeyLabelPair" p:key="kuali.atp.type.Fall" p:value="Fall"/>
        <bean parent="KeyLabelPair" p:key="kuali.atp.type.Winter" p:value="Winter"/>
        <bean parent="KeyLabelPair" p:key="kuali.atp.type.Summer" p:value="Summer"/>
        <bean parent="KeyLabelPair" p:key="kuali.atp.type.Spring" p:value="Spring"/>
    </util:list>

    <util:list id="termLength-options">
        <bean parent="KeyLabelPair" p:key="102" p:value="10 week term"/>
