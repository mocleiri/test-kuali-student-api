  <bean id="CourseOffering-LookupView" parent="KSLookupView">
    <property name="title" value="Course Offering Lookup" />
    <property name="dataObjectClassName" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo" />
     <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.grading.service.impl.GradeCourseOfferringLookupableImpl" />
     <property name="viewName" value="courseOfferingLookupForGrading"/>

    <property name="criteriaFields">
      <list>
        <bean parent="LookupCriteriaAttributeField" p:propertyName="id" />
        <bean parent="LookupCriteriaAttributeField" p:propertyName="courseId" />
        <bean parent="LookupCriteriaAttributeField" p:propertyName="termKey" p:required="true" p:defaultValue="201108" />
      </list>
    </property>
    <property name="resultFields">
      <list>
        <bean parent="AttributeField" p:propertyName="courseId" />
        <bean parent="AttributeField" p:propertyName="termKey"/>
        <bean parent="AttributeField" p:propertyName="descr" />
        <bean parent="AttributeField" p:propertyName="courseTitle" />
        <bean parent="AttributeField" p:propertyName="hasFinalExam" />
      </list>
    </property>
  </bean>

</beans>