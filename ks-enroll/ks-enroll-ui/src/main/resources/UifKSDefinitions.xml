    <bean id="KSTheme" abstract="true" parent="KSTheme-parentBean"/>
    <bean id="KSTheme-parentBean" parent="Uif-KradTheme">
        <property name="cssFiles">
            <list merge="true">
                <value>ks-enroll/css/enroll.css</value>
            </list>
        </property>
        <property name="scriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/enroll.js</value>
            </list>
        </property>
    </bean>

    <bean id="KSFormView" abstract="true" parent="Uif-FormView">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
    </bean>

    <bean id="KSLookupView" abstract="true" parent="Uif-KSLookupView-parentBean"/>

    <bean id="Uif-KSLookupView-parentBean" abstract="true"
          class="org.kuali.student.enrollment.uif.view.KSLookupView" parent="Uif-LookupView">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
    </bean>

    <bean id="KSInquiryFooter" parent="KSInquiryFooter-parent"/>

    <!-- We are overriding the lookup footer bean to customize the default CLOSE button action. On Close button action(if it's not rendered in lightbox), We need to return to the enrollment
      home page instead of closing the window (window.close). As the rice uses nested beans, it's not possible to override the close button bean. But, looks like rice team is working
      on creating seperate beans instead of nested beans. Once we get that, we should be able to override just the close button bean instead of overriding the entire footer bean-->
    <bean id="KSInquiryFooter-parent" parent="Uif-InquiryFooter" abstract="true">
    <property name="items">
      <list>
        <bean parent="Uif-PrimaryActionButton" p:methodToCall="export" p:actionLabel="export"
              p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_EXPORT]}"
              p:onClickScript="writeHiddenToForm(&quot;unblockUIOnLoading&quot;, &quot;true&quot;);"/>
        <bean parent="Uif-PrimaryActionButton" p:methodToCall="returnToPrevious" p:actionLabel="Cancel"
              p:render="@{#view.renderedInLightBox and formHistory != null and !formHistory?.historyEntries?.empty}"/>
        <bean parent="Uif-PrimaryActionButton" p:methodToCall="returnToHub" p:actionLabel="Home"
              p:render="@{#view.renderedInLightBox and formHistory != null and (formHistory?.historyEntries?.size() > 1)}"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Close" p:render="@{#view.renderedInLightBox}"
              p:onClickScript="e.preventDefault();closeLightbox();return false;"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Close" p:render="@{!#view.renderedInLightBox}"
              p:methodToCall="close"/>
      </list>
    </property>
  </bean>

    <bean id="KSInquiryView" abstract="true" parent="Uif-InquiryView">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
        <property name="footer">
            <ref bean="KSInquiryFooter"/>
        </property>
    </bean>

    <bean id="KSMaintenanceView" abstract="true" parent="Uif-MaintenanceView">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
    </bean>

    <!--Added by Bonnie-->
    <!--This footer can be used for maintenance views: create a new or edit when we only want to see submit and cancel buttons -->
    <bean id="KSDocumentPageFooter_SubmitCancel" parent="KSDocumentPageFooter_SubmitCancel-parent"/>
    <bean id="KSDocumentPageFooter_SubmitCancel-parent" parent="Uif-DocumentPageFooter" abstract="true">
        <property name="items">
            <list>
                <bean parent="Uif-PrimaryActionButton" p:methodToCall="route" p:actionLabel="submit" p:performClientSideValidation="true"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}"/>
                <bean parent="Uif-ActionLink" p:methodToCall="cancel" p:actionLabel="cancel"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CANCEL]}"/>

            </list>
        </property>
    </bean>

    <bean id="KSGroup" abstract="true" parent="Uif-VerticalBoxSection">
      <property name="disclosure">
        <bean parent="KSDisclosure"/>
      </property>
    </bean>


    <bean id="KSDisclosure" abstract="true" parent="Uif-Disclosure-parentBean">
      <property name="collapseImageSrc" value="@{#ConfigProperties['krad.externalizable.images.url']}h3_collapse-back-ks.png"/>
      <property name="expandImageSrc" value="@{#ConfigProperties['krad.externalizable.images.url']}h3_expand-back-ks.png"/>
    </bean>


    <bean id="ScheduleControl" parent="ScheduleControl-parentBean"/>
    <bean id="ScheduleControl-parentBean" abstract="true"
          class="org.kuali.student.enrollment.uif.control.ScheduleControl" scope="prototype">
        <property name="template" value="/ks-enroll/WEB-INF/jsp/schedule.jsp"/>
        <property name="sundayFirst" value="false"/>
        <property name="startTime" value="5"/>
        <property name="endTime" value="20"/>
        <property name="dayType" value="ONE_LETTER"/>
        <property name="useLetterKeys" value="false"/>
        <property name="omitWeekend" value="false"/>
        <property name="omitAMPMSuffix" value="false"/>
        <property name="militaryTime" value="false"/>
    </bean>

    <bean id="ScheduleCartControl" parent="ScheduleCartControl-parentBean"/>
    <bean id="ScheduleCartControl-parentBean" abstract="true"
          class="org.kuali.student.enrollment.uif.control.ScheduleCartControl" scope="prototype">
        <property name="template" value="/ks-enroll/WEB-INF/jsp/scheduleCart.jsp"/>
    </bean>

    <bean id="TimePreviewControl" parent="TimePreviewControl-parentBean"/>
    <bean id="TimePreviewControl-parentBean" abstract="true"
          class="org.kuali.student.enrollment.uif.control.TimePreviewControl" scope="prototype">
        <property name="template" value="/ks-enroll/WEB-INF/jsp/timePreview.jsp"/>
    </bean>

    <bean id="ActionField_SmallSecondary_Override" parent="ActionField_SmallSecondary_Override-parentBean"/>
    <bean id="ActionField_SmallSecondary_Override-parentBean" abstract="true"
          class="org.kuali.student.enrollment.uif.field.ActionFieldJsOverride">
        <property name="template" value="/krad/WEB-INF/jsp/templates/field/actionField.jsp"/>
        <property name="cssClasses" value="ui-priority-secondary-sm"/>
    </bean>

    <bean id="KSHeader_Empty" parent="Uif-HeaderOne">
      <property name="items">
          <list/>
      </property>
    </bean>

    <bean id="KSInputField" abstract="true" parent="Uif-InputField"
          p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="labelTop"
          p:labelPlacement="TOP" p:fieldLabel.requiredMessagePlacement="LEFT"
          p:instructionalMessage.render="false" />

    <!-- If the action button is in collection, this will submits the form (useful for redirect) instead of KRAD's default ajax callback and update the collection component -->
    <bean id="KS-SubmitActionLink" parent="Uif-ActionLink" p:clientSideJs="jq('#kualiForm').submit();" abstract="true" />

    <bean id="KS-Link" parent="Uif-Link">
        <property name="lightBox">
            <bean parent="Uif-LightBox"/>
        </property>
        <property name="target" value="_blank"/>
    </bean>

    <bean id="KS-Edit-Link" parent="KS-Link" p:order="10">
        <property name="linkText" value="Edit"/>
        <property name="finalizeMethodToCall" value="getMaintenanceActionLink"/>
        <property name="finalizeMethodAdditionalArguments">
            <list>
                <value>maintenanceEdit</value>
            </list>
        </property>
        <property name="render" value="@{#ViewHelper.allowsMaintenanceEditAction(#line)}"/>
    </bean>

    <bean id="KS-Disclosure-HorizontalCollectionSection" parent="KS-Disclosure-HorizontalCollectionSection-parentBean"/>

    <bean id="KS-Disclosure-HorizontalCollectionSection-parentBean" parent="Uif-StackedCollectionSection">
        <property name="layoutManager">
          <bean parent="Uif-StackedCollectionLayout-WithGridItems">
            <property name="template" value="/krad/WEB-INF/jsp/templates/layout/stackedList.jsp"/>
            <property name="lineGroupPrototype">
              <bean parent="Uif-HorizontalBoxSection">
                <property name="header">
                  <bean parent="Uif-HeaderFour"/>
                </property>
                <property name="disclosure.renderImage" value="true"/>
                <property name="disclosure.defaultOpen" value="true"/>
              </bean>
            </property>
            <property name="addLineGroup">
              <bean parent="Uif-CollectionHorizontalBoxItem">
                <property name="cssClasses">
                  <list merge="true">
                    <value>uif-collectionAddItem</value>
                  </list>
                </property>
              </bean>
            </property>
            <property name="subCollectionFieldGroupPrototype">
              <bean parent="Uif-HorizontalFieldGroup" p:fieldLabel.render="true"/>
            </property>
          </bean>
        </property>
    </bean>

</beans>