    <import resource="classpath:ks-KeyDateInfo-dictionary.xml"/>

    <!-- KeyDateInfo-->
    <bean id="keyDateInfoUI" parent="keyDateInfo-parent">
        <property name="objectLabel" value="Key Date Info"/>
        <property name="attributes">
            <list>
                <ref bean="keyDateInfoUI.startDate"/>
                <ref bean="keyDateInfoUI.endDate"/>
                
   				<!--  other attributes not used by UI -->                  
                <ref bean="keyDateInfo.key"/>
                <ref bean="keyDateInfo.typeKey"/>
                <ref bean="keyDateInfo.stateKey"/>
                <ref bean="keyDateInfo.name"/>
                <ref bean="keyDateInfo.descr"/>
                <ref bean="keyDateInfo.isAllDay"/>
                <ref bean="keyDateInfo.isDateRange"/>
                <ref bean="keyDateInfo.attributes"/>                
            </list>
        </property>
    </bean>
    
    <bean id="keyDateInfoUI.startDate" parent="keyDateInfo.startDate-parent">
        <property name="label" value="Start Date" />
        <property name="required" value="true"/>
        <property name="controlField">
      		<bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
    	</property>
    	<property name="formatterClass" value="org.kuali.rice.core.web.format.DateFormatter"/>
    </bean>

    <bean id="keyDateInfoUI.endDate" parent="keyDateInfo.endDate-parent">
        <property name="label" value="End Date" />
        <property name="required" value="true"/>
        <property name="controlField">
      		<bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
    	</property>
    	<property name="formatterClass" value="org.kuali.rice.core.web.format.DateFormatter"/>
    </bean>
    
      <bean id="TermInfo-MaintenanceView" parent="MaintenanceView">
     <property name="title" value="TermInfo Maintenance"/>
     <property name="dataObjectClassName" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
     <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.acal.service.TermInfoMaintainableImpl" />
     
     <property name="items">
       <list merge="true">
          <bean parent="MaintenanceGroupSectionGridLayout">
          	 <property name="title" value="Term"/>
             <property name="items">
               <list>
                <bean parent="AttributeField" p:propertyName="typeKey">
                    <property name="control">
              			<bean parent="SelectControl"/>
            		</property>
            		<property name="optionsFinder">
              			<bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermInfoTypeKeyValues"/>
            		</property>
                </bean>
                <bean parent="AttributeField" p:propertyName="startDate"/>
                <bean parent="AttributeField" p:propertyName="endDate"/>
               </list>
             </property>             
          </bean>      
       </list>
     </property>
  </bean>  


  <bean id="TermInfoMaintenanceDocument" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
    <property name="maintainableClass" value="org.kuali.student.enrollment.class2.acal.service.TermInfoMaintainableImpl"/>
    <property name="documentTypeName" value="TermInfoMaintenanceDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    <property name="lockingKeys">
      <list>
        <value>key</value>
      </list>
    </property>
  </bean>  
    
</beans>
