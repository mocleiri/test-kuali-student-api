	<!-- Overwrite some academicCalendarInfo attributes for UI -->
    <import resource="classpath:ks-CourseOfferingInfo-dictionary.xml"/>
    
	<bean id="courseOfferingInfoUI" parent="courseOfferingInfo-parent">
        <property name="objectLabel" value="Course Offering"/>
        <property name="titleAttribute" value="id"/>     
        <property name="attributes">
            <list>
                <ref bean="courseOfferingInfoUI.id"/>
                <ref bean="courseOfferingInfoUI.courseId"/>                
                <ref bean="courseOfferingInfoUI.termKey"/>
                
                <!--  other attributes not used by UI -->
                <ref bean="courseOfferingInfo.typeKey"/>
                <ref bean="courseOfferingInfo.stateKey"/>
                <ref bean="courseOfferingInfo.descr"/>
                <ref bean="courseOfferingInfo.courseOfferingCode"/>
                <ref bean="courseOfferingInfo.courseNumberSuffix"/>
                <ref bean="courseOfferingInfo.courseTitle"/>
                <ref bean="courseOfferingInfo.creditOptions"/>
                <ref bean="courseOfferingInfo.expenditure"/>
                <ref bean="courseOfferingInfo.fees"/>
                <ref bean="courseOfferingInfo.formatIds"/>
                <ref bean="courseOfferingInfo.fundingSource"/>
                <ref bean="courseOfferingInfo.gradeRosterLevelTypeKey"/>
                <ref bean="courseOfferingInfo.hasWaitlist"/>
                <ref bean="courseOfferingInfo.instructors"/>
                <ref bean="courseOfferingInfo.isFinancialAidEligible"/>
                <ref bean="courseOfferingInfo.isHonorsOffering"/>
                <ref bean="courseOfferingInfo.isWaitlistCheckinRequired"/>
                <ref bean="courseOfferingInfo.jointOfferingIds"/>
                <ref bean="courseOfferingInfo.maximumEnrollment"/>
                <ref bean="courseOfferingInfo.minimumEnrollment"/>
                <ref bean="courseOfferingInfo.registrationOrderTypeKey"/>
                <ref bean="courseOfferingInfo.revenues"/>
                <ref bean="courseOfferingInfo.subjectArea"/>
                <ref bean="courseOfferingInfo.unitsContentOwner"/>
                <ref bean="courseOfferingInfo.unitsDeployment"/>
                <ref bean="courseOfferingInfo.waitlistCheckinFrequency"/>
                <ref bean="courseOfferingInfo.waitlistMaximum"/>
                <ref bean="courseOfferingInfo.waitlistTypeKey"/>                
            </list>
        </property>
    </bean>

	<bean id="courseOfferingInfoUI.id" parent="courseOfferingInfo.id-parent">
        <property name="label" value="Course Offering ID" />
        <property name="required" value="false"/>
        <property name="validationPattern" >
      		<bean parent="AnyCharacterValidationPattern"
            	  p:allowWhitespace="false" />
    	</property>
    	<property name="controlField">
      		<bean parent="TextControl" p:size="60"/>
    	</property> 
    </bean>    

	<bean id="courseOfferingInfoUI.courseId" parent="courseOfferingInfo.courseId-parent">
        <property name="label" value="Course ID" />
        <property name="required" value="true"/>
        <property name="validationPattern" >
      		<bean parent="AnyCharacterValidationPattern"
            	  p:allowWhitespace="false" />
    	</property>
    	<property name="controlField">
      		<bean parent="TextControl" p:size="60"/>
    	</property> 
    </bean>

	<bean id="courseOfferingInfoUI.termKey" parent="courseOfferingInfo.termKey-parent">
        <property name="label" value="Term" />
        <property name="required" value="true"/>
        <property name="validationPattern" >
      		<bean parent="AnyCharacterValidationPattern"
            	  p:allowWhitespace="false" />
    	</property>
    	<property name="controlField">
      		<bean parent="TextControl" p:size="60"/>
    	</property> 
    </bean>   

    <bean id="CourseOfferingInfo-MaintenanceView" parent="MaintenanceView">
     <property name="title" value="Course Offering Maintenance"/>
     <property name="dataObjectClassName" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo"/>
     <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.courseoffering.service.CourseOfferingInfoMaintainableImpl" />
     <property name="additionalCssFiles" ref="ks-css"/>
     <property name="items">
       <list merge="true">
          <bean parent="MaintenanceGroupSectionGridLayout">
          	 <property name="title" value="creat a new Course Offering"/>
             <property name="items">
               <list>
                <bean parent="AttributeField" p:propertyName="termKey">
                <!-- 
                    <property name="control">
              			<bean parent="SelectControl"/>
            		</property>
            		<property name="optionsFinder">
              			<bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermKeyValues"/>
            		</property>
            	-->	
            	</bean>		                
                <bean parent="AttributeField" p:propertyName="courseId"/>
               </list>
             </property>             
          </bean>

          <bean parent="MaintenanceCollectionGroupSection">
              <property name="title" value="Instructors"/>  
              <property name="collectionObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.OfferingInstructorInfo"/>
              <property name="propertyName" value="instructors"/>
              <property name="items">
                <list>
                  <bean parent="AttributeField" p:propertyName="personId" p:label="Instructor ID">
                  	
                    <!-- 
                    <property name="control">
              			<bean parent="SelectControl"/>
            		</property>
            		<property name="optionsFinder">
              			<bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.personKeyValues"/>
            		</property>
            		-->
                  </bean>                             
                </list>
              </property>   
              <property name="layoutManager.summaryTitle" value="Instructor"/> 
              <property name="layoutManager.summaryFields">              
                <list>
                  <value>personId</value> 
                </list>                             
              </property>
           </bean>  
       </list>
     </property>
    </bean>  


  <bean id="CourseOfferingInfoMaintenanceDocument" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo"/>
    <property name="maintainableClass" value="org.kuali.student.enrollment.class2.courseoffering.service.CourseOfferingInfoMaintainableImpl"/>
    <property name="documentTypeName" value="CourseOfferingInfoMaintenanceDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    <property name="lockingKeys">
      <list>
        <value>id</value>
      </list>
    </property>
  </bean>      
 
</beans>