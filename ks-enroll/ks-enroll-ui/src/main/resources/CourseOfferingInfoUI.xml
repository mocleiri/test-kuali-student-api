	<!-- Overwrite some CourseOfferingInfo attributes for UI -->
    <import resource="classpath:ks-CourseOfferingInfo-dictionary.xml"/>
    
    <bean id="CourseOfferingInfoUI" parent="CourseOfferingInfo-parent">
        <property name="objectLabel" value="Course Offering"/>
        <property name="titleAttribute" value="id"/>     
        <property name="attributes">
            <list>
                <ref bean="CourseOfferingInfoUI.id"/>
                <ref bean="CourseOfferingInfoUI.courseId"/>
                <ref bean="CourseOfferingInfoUI.termKey"/>
                <ref bean="CourseOfferingInfoUI.subjectArea"/>
                <ref bean="CourseOfferingInfoUI.courseOfferingCode"/>
                <ref bean="CourseOfferingInfoUI.maximumEnrollment"/>
                
                <!--  other attributes not used by UI -->		
                <ref bean="CourseOfferingInfo.typeKey"/>
                <ref bean="CourseOfferingInfo.stateKey"/>
                <ref bean="CourseOfferingInfo.courseNumberSuffix"/>
                <ref bean="CourseOfferingInfo.courseTitle"/>
                <ref bean="CourseOfferingInfo.isHonorsOffering"/>
                <ref bean="CourseOfferingInfo.hasFinalExam"/>
                <ref bean="CourseOfferingInfo.minimumEnrollment"/>
                <ref bean="CourseOfferingInfo.gradeRosterLevelTypeKey"/>
                <ref bean="CourseOfferingInfo.hasWaitlist"/>
                <ref bean="CourseOfferingInfo.waitlistTypeKey"/>
                <ref bean="CourseOfferingInfo.waitlistMaximum"/>
                <ref bean="CourseOfferingInfo.isWaitlistCheckinRequired"/>
                <ref bean="CourseOfferingInfo.fundingSource"/>
                <ref bean="CourseOfferingInfo.isFinancialAidEligible"/>
                <ref bean="CourseOfferingInfo.registrationOrderTypeKey"/>						
            </list>
        </property>
        <property name="complexAttributes">
            <list>
                <ref bean="CourseOfferingInfo.descr"/>
                <ref bean="CourseOfferingInfo.creditOptions"/> 
                <ref bean="CourseOfferingInfo.expenditure"/>
                <ref bean="CourseOfferingInfo.waitlistCheckinFrequency"/>                
                <ref bean="CourseOfferingInfo.meta"/>                
            </list>
        </property> 
    </bean>

    <bean id="CourseOfferingInfoUI.id" parent="CourseOfferingInfo.id-parent">
        <property name="label" value="Course Offering ID" />
        <property name="required" value="false"/>
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint" />
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="60"/>
        </property> 
    </bean>    

    <bean id="CourseOfferingInfoUI.courseId" parent="CourseOfferingInfo.courseId-parent">
        <property name="label" value="Course ID" />
        <property name="required" value="false"/>
        <property name="summary" value=""/>
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint" />
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="60"/>
        </property> 
    </bean>

    <bean id="CourseOfferingInfoUI.courseOfferingCode" parent="CourseOfferingInfo.courseOfferingCode-parent">
        <property name="label" value="Course Code" />
        <property name="required" value="true"/>
        <property name="summary" value=""/>
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint" />
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="16"/>
        </property>
    </bean>

    <bean id="CourseOfferingInfoUI.termKey" parent="CourseOfferingInfo.termKey-parent">
        <property name="label" value="Term" />
        <property name="required" value="true"/>
        <property name="summary" value=""/>
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint" />
        </property>
        <property name="controlField">
            <bean parent="SelectControl"/>
        </property>
        <property name="optionsFinder">
            <bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermKeyValues"/>
        </property>
    </bean>   

    <bean id="CourseOfferingInfoUI.subjectArea" parent="CourseOfferingInfo.subjectArea-parent">
        <property name="label" value="Subject Area" />
        <property name="required" value="false"/>
        <property name="summary" value=""/>
        <property name="controlField">
            <bean parent="TextControl" p:size="60"/>
        </property>
    </bean>

    <bean id="CourseOfferingInfoUI.maximumEnrollment" parent="CourseOfferingInfo.maximumEnrollment-parent">
         <property name="required" value="true"/>
         <property name="summary" value=""/>
    </bean>

