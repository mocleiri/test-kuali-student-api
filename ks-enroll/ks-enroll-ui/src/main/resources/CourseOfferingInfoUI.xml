    <bean id="CourseOfferingInfo-MaintenanceView" parent="KSMaintenanceView">
        <property name="title" value="Course Offering Maintenance"/>
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo"/>
        <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.courseoffering.service.CourseOfferingInfoMaintainableImpl" />
        <property name="header">
             <ref bean="KSHeader_Empty" />
        </property>
        <property name="items">
            <!--<list merge="true">-->
            <!-- remove merge="true" would not inherit Document Overview section -->
            <list>
                <bean parent="MaintenanceGroupSectionGridLayout">
                    <property name="title" value="Create a New Course Offering"/>
                    <property name="items">
                        <list>
                            <bean parent="AttributeField" p:propertyName="termKey">
                                <property name="fieldLookup.dataObjectClassName" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
                                <property name="fieldLookup.fieldConversions" value="key:termKey"/>
                                <property name="control">
              			            <bean parent="SelectControl"/>
            		            </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermKeyValues"/>
                                </property>
                             </bean>
                            <bean parent="AttributeField" p:propertyName="courseOfferingCode">
                                <property name="fieldLookup.dataObjectClassName" value="org.kuali.student.lum.course.dto.CourseInfo"/>
                                <property name="fieldLookup.fieldConversions">
                                    <map>
                                        <entry key="code" value="courseOfferingCode"/>
                                    </map>
                                </property> 
                            </bean>
                            <bean parent="AttributeField" p:propertyName="maximumEnrollment" />
                        </list>
                    </property>             
                </bean>
          
                <bean parent="MaintenanceCollectionGroupSection">
                    <property name="title" value="Instructors"/>  
                    <property name="collectionObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.OfferingInstructorInfo"/>
                    <property name="propertyName" value="instructors"/>
                    <property name="items">
                        <list>
                            <bean parent="AttributeField" p:propertyName="personId" p:label="Instructor ID">
                                <property name="fieldLookup.dataObjectClassName" value="org.kuali.rice.kim.bo.impl.PersonImpl"/>
                                <property name="fieldLookup.fieldConversions">
                                    <map>
                                        <entry key="principalId" value="personId"/>
                                    </map>
                                </property> 
                            </bean>                             
                        </list>
                    </property>   
                    <property name="layoutManager.summaryTitle" value="Instructor"/> 
                    <property name="layoutManager.summaryFields">              
                        <list>
                            <value>personId</value> 
                        </list>                             
                    </property>
                </bean>  
           
            </list>
        </property>
        <property name="footer">
	        <ref bean="KSFooter_SubmitCancel" />
        </property>
    </bean>  


    <bean id="CourseOfferingInfoMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo"/>
        <property name="maintainableClass" value="org.kuali.student.enrollment.class2.courseoffering.service.CourseOfferingInfoMaintainableImpl"/>
        <property name="businessRulesClass" value="org.kuali.student.enrollment.class2.courseoffering.validation.impl.CourseOfferingRule" />
        <property name="documentTypeName" value="CourseOfferingInfoMaintenanceDocument"/>
        <property name="documentAuthorizerClass" value="org.kuali.rice.krad.document.authorization.MaintenanceDocumentAuthorizerBase"/>
        <property name="lockingKeys">
            <list>
                <value>id</value>
            </list>
        </property>
    </bean>      
 
</beans>
