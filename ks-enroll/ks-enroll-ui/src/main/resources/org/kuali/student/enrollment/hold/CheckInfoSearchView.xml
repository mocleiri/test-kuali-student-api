    <bean id="KS-CheckInfo-Search" parent="KSFormView" p:applyDirtyCheck="true"
          p:id="checkInfoSearchView" p:headerText="Manage Checks">
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Uif-Page"/>
        </property>        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>ks-enrollment-home</value>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-CheckInfoSearch-View" />
                <ref bean="KS-CheckInfoSearch-Create" />
            </list>
        </property>
    </bean>

    <bean id="KS-CheckInfoSearch-View" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="View Existing Checks" />
        <property name="items">
            <list>
                <bean parent="Uif-HeaderThree" p:headerText="Check Type" p:style="margin-bottom: -0.5em;"/>
                <bean parent="Uif-HorizontalBoxSubSection" p:headerText="Select a Check Type to view existing Checks">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="" >
                            <property name="control">
                                <bean parent="Uif-DropdownControl"/>
                            </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton" p:actionLabel="View Checks" p:methodToCall="view" p:style="font-size: 90%;"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-CheckInfoSearch-Create" parent="Uif-VerticalBoxSection" p:headerText="Create a New Check">
        <property name="items">
            <list>
                <bean parent="Uif-SecondaryActionButton" p:actionLabel="Create Check" p:methodToCall="openCreateForm" p:style="font-size: 90%;"/>
            </list>
        </property>
    </bean>

</beans>