    <bean id="KS-CheckInfo-Search" parent="KSFormView" p:applyDirtyCheck="true"
          p:id="checkInfoSearchView" p:headerText="Manage Checks" p:renderHeader="false">
        <property name="entryPageId" value="checkInfoSearch-SearchPage" />
        <property name="formClass" value="org.kuali.student.enrollment.class1.check.form.CheckInfoForm" />
        <property name="cssClasses">
            <list merge="true">
                <value>ks-enrollment-home</value>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-CheckInfoSearch-SearchPage" />
            </list>
        </property>
    </bean>

    <bean id="KS-CheckInfoSearch-SearchPage" parent="Uif-Page">
        <property name="id" value="checkInfoSearch-SearchPage"/>
        <property name="headerText" value="Advanced Search: Check" />
        <property name="items">
            <list>
               <ref bean="KS-CheckInfoSearch-CriteriaSection"/>
               <ref bean="KS-CheckInfoSearch-ResultSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CheckInfoSearch-CriteriaSection" parent="Uif-VerticalBoxSection">
        <property name="disclosure.render" value="false"/>
        <property name="style" value="margin-bottom:0;"/>
        <property name="items">
            <list>
                <bean parent="Uif-GridSubSection">
                    <property name="headerText" value="Enter one or more fields"/>
                    <property name="layoutManager.numberOfColumns" value="2"/>
                    <property name="layoutManager.applyDefaultCellWidths" value="false" />
                    <property name="style" value="margin-bottom:0;"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalFieldGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Check Name" p:propertyName="name" >
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:watermarkText="Enter Check Name" p:size="15"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Check Description" p:propertyName="descr" p:instructionalText="Enter a full description of the purpose of the check">
                                            <property name="control">
                                                <bean parent="Uif-SmallTextAreaControl"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Check Type" p:propertyName="typeKey">
                                            <property name="control">
                                                <bean parent="Uif-DropdownControl" p:required="true"/>
                                            </property>
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class1.check.keyvalues.CheckTypeKeyValues"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Hold Issue" p:propertyName="holdName"
                                              p:required="true" p:progressiveRender="typeKey eq 'hold'">
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:size="25"/>
                                            </property>
                                            <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.core.hold.dto.HoldIssueInfo"/>
                                            <property name="quickfinder.fieldConversions">
                                                <map>
                                                    <entry key="id" value="holdIssueId"/>
                                                    <entry key="name" value="holdName"/>
                                                </map>
                                            </property>
                                            <property name="quickfinder.quickfinderAction">
                                                <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
                                            </property>
                                            <property name="quickfinder.lightBoxLookup">
                                                <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Academic Calendar Event"
                                              p:propertyName="milestoneTypeKey"
                                              p:required="true" p:progressiveRender="typeKey eq 'milestone'">
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:size="25"/>
                                            </property>
                                            <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.core.hold.dto.HoldIssueInfo"/>
                                            <property name="quickfinder.fieldConversions">
                                                <map>
                                                    <entry key="id" value="holdIssueId"/>
                                                    <entry key="name" value="holdName"/>
                                                </map>
                                            </property>
                                            <property name="quickfinder.quickfinderAction">
                                                <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
                                            </property>
                                            <property name="quickfinder.lightBoxLookup">
                                                <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Process" p:propertyName="childProcessKey"
                                              p:required="true" p:progressiveRender="typeKey eq 'process'">
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:size="25"/>
                                            </property>
                                            <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.core.process.dto.ProcessInfo"/>
                                            <property name="quickfinder.fieldConversions">
                                                <map>
                                                    <entry key="key" value="childProcessKey"/>
                                                </map>
                                            </property>
                                            <property name="quickfinder.quickfinderAction">
                                                <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
                                            </property>
                                            <property name="quickfinder.lightBoxLookup">
                                                <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Process State" p:propertyName="stateKey"
                                              p:required="true" p:progressiveRender="typeKey != 'select'">
                                            <property name="control">
                                                <bean parent="Uif-VerticalRadioControl">
                                                    <property name="options">
                                                        <list>
                                                            <bean parent="Uif-KeyLabelPair" p:key="active" p:value="Active"/>
                                                            <bean parent="Uif-KeyLabelPair" p:key="disabled" p:value="Disabled"/>
                                                            <bean parent="Uif-KeyLabelPair" p:key="inactive" p:value="Inactive"/>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-HorizontalFieldGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Search" p:methodToCall="search"/>
                                        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Clear Values" p:methodToCall="clear"/>
                                        <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:methodToCall="close"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-CheckInfoSearch-ResultSection" parent="Uif-TableCollectionSection"
          p:layoutManager.numberOfColumns="6" p:renderAddLine="false">
        <property name="collectionObjectClass" value="org.kuali.student.r2.core.process.dto.CheckInfo" />
        <property name="propertyName" value="checkInfoList" />
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="true" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map>
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 4, 'asc' ]]"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField"
                      p:label="CHECK NAME"
                      p:propertyName="name" />
                <bean parent="Uif-DataField"
                      p:label="CHECK TYPE"
                      p:propertyName="typeKey"/>
                <bean parent="Uif-DataField"
                      p:label="CHECK DESCRIPTION"
                      p:propertyName="descr.plain"/>
                <bean parent="Uif-DataField"
                      p:id="state"
                      p:label="STATE"
                      p:propertyName="stateKey"/>
            </list>
        </property>
        <property name="layoutManager.actionFieldPrototype">
            <bean parent="Uif-HorizontalFieldGroup" p:align="left" p:required="false" p:label="Actions" p:style="display:inline;"/>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="Uif-ActionLink" p:methodToCall="edit" p:actionLabel="Edit" />
                <bean parent="Uif-ActionLink" p:methodToCall="delete" p:preSubmitCall="confirmDeletionResponse('Are you sure you want to delete this hold issue?')" p:actionLabel="Delete" />
            </list>
        </property>
    </bean>

</beans>