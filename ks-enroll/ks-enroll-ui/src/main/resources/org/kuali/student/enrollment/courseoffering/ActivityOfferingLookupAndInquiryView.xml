<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="classpath:ks-ActivityOfferingInfo-dictionary.xml"/>
    <import resource="classpath:UifKSDefinitions.xml"/>

    <!-- LookupView -->
    <bean id="KS-ActivityOffering-LookupView" parent="KSLookupView">
        <property name="title" value="ActivityOffering Lookup " />
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.courseoffering.dto.ActivityOfferingInfo" />
        <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingLookupableImpl" />

        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="id" />
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="Uif-DataField" p:propertyName="id" />
                <bean parent="Uif-DataField" p:propertyName="name"/>
                <bean parent="Uif-DataField" p:propertyName="typeKey" />
                <bean parent="Uif-DataField" p:propertyName="stateKey" />
                <bean parent="Uif-DataField" p:propertyName="termId" />
            </list>
        </property>
    </bean>

    <!-- InquiryView -->
    <bean id="KS-ActivityOffering-InquiryView" parent="KSInquiryView"
        p:title="ActivityOffering Inquiry"
        p:dataObjectClassName="org.kuali.student.enrollment.courseoffering.dto.ActivityOfferingInfo"
        p:viewHelperServiceClassName="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingInquirableImpl">
        <property name="page.header">
            <ref bean="KSHeader_Empty" />
        </property>
        <property name="Items">
            <list>
                <bean parent="Uif-VerticalBoxSection"
                      p:header.render="false"
                      p:disclosure.render="false"
                      p:id="KS-HolidayCalendar-View-Page">
                    <property name="items">
                        <list>
                            <ref bean="KS-ActivityOffering-MetaSection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ActivityOffering-MetaSection" parent="Uif-VerticalBoxSection"
          p:title="ActivityOffering Information">
        <property name="header">
            <bean parent="Uif-HeaderField-Three"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-GridGroup"
                      p:layoutManager.numberOfColumns="2"
                      p:layoutManager.applyDefaultCellWidths="false">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField"
                                  p:propertyName="id"
                                  p:label="ID"
                                  p:labelField.width="40%"
                                  p:width="60%"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField"
                                  p:propertyName="name"
                                  p:label="Name"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField"
                                  p:propertyName="typeKey"
                                  p:label="Type"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField"
                                  p:propertyName="stateKey"
                                  p:label="State"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField"
                                  p:propertyName="termId"
                                  p:label="Term ID"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>