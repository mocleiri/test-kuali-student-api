<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

    <bean id="KS-HolidayCalendar-ViewPage" parent="Uif-Page"
          p:id="holidayCalendarViewPage"
          p:title="@{holidayCalendarInfo.name}"
          p:header.id="KS-HolidayCalendar-View-header">
        <property name="header">
            <bean parent="Uif-HeaderField-Two"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="header.items">
            <list>
                <bean parent="Uif-ActionLink" p:methodToCall="toCopy" p:actionLabel="Copy" p:style="text-align:center;"/>
                <bean parent="Uif-ActionLink" p:methodToCall="toEdit" p:actionLabel="Edit" p:style="text-align:center;"/>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection"
                      p:header.render="false"
                      p:disclosure.render="false"
                      p:id="KS-HolidayCalendar-View-Page">
                    <property name="items">
                        <list>
                            <ref bean="KS-HolidayCalendar-View-Meta"/>
                            <ref bean="KS-HolidayCalendar-View-Holidays"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-HolidayCalendar-View-Meta" parent="Uif-Disclosure-VerticalBoxSection"
          p:title="Holiday Calendar Information"
          p:id="KS-HolidayCalendar-View-Meta">
        <property name="header">
            <bean parent="Uif-HeaderField-Three"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-GridGroup"
                      p:id="KS-HolidayCalendar-View-Meta-GridGroup"
                      p:layoutManager.numberOfColumns="2"
                      p:layoutManager.applyDefaultCellWidths="false">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField"
                                  p:propertyName="holidayCalendarInfo.name"
                                  p:label="Holiday Calendar Name"
                                  p:id="KS-HolidayCalendar-View-Meta-name"
                                  p:labelField.width="40%"
                                  p:width="60%"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField"
                                  p:propertyName="adminOrgName"
                                  p:label="Organization"
                                  p:id="KS-HolidayCalendar-View-Meta-adminOrgName"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField"
                                  p:propertyName="holidayCalendarInfo.startDate"
                                  p:label="Start Date"
                                  p:id="KS-HolidayCalendar-View-Meta-startDate"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField"
                                  p:propertyName="holidayCalendarInfo.endDate"
                                  p:label="End Date"
                                  p:id="KS-HolidayCalendar-View-Meta-endDate"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField"
                                  p:propertyName="stateName"
                                  p:label="State"
                                  p:id="KS-HolidayCalendar-View-Meta-endDate"
                                  p:readOnly="true"
                                  p:labelField.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-HolidayCalendar-View-Holidays" parent="Uif-TableCollectionSection"
            p:title="Holidays"
            p:id="KS-HolidayCalendar-View-Holidays"
            p:collectionObjectClass="org.kuali.student.enrollment.class2.acal.dto.HolidayWrapper"
            p:propertyName="holidays"
            p:renderAddLine="false"
            p:renderLineActions="false"
            p:layoutManager.numberOfColumns="4"
            p:layoutManager.applyDefaultCellWidths="false"
            p:layoutManager.renderSequenceField="false"
            p:layoutManager.sequencePropertyName="startDate">
        <property name="header">
            <bean parent="Uif-HeaderField-Three"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField"
                      p:propertyName="typeName"
                      p:id="KS-HolidayCalendar-View-Holidays-name"
                      p:readOnly="true"
                      p:style="font-weight:bold;">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField"
                      p:label="Start Date"
                      p:propertyName="startDate"
                      p:readOnly="true"
                      p:id="KS-HolidayCalendar-View-Holidays-startDate">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField"
                      p:label="End Date"
                      p:propertyName="endDate"
                      p:readOnly="true"
                      p:id="KS-HolidayCalendar-View-Holidays-endDate">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField"
                      p:label="Instructional"
                      p:propertyName="holidayInfo.isInstructionalDay"
                      p:id="KS-HolidayCalendar-View-Holidays-isInstructionalDay"
                      p:align="center">
					<property name="control">
						<bean parent="Uif-CheckboxControl" p:disabled="true"/>
					</property>
                </bean>
            </list>
        </property>
        <property name="layoutManager.richTable.componentOptions">
            <!-- see http://datatables.net/ref for all options -->
            <map merge="true">
                <entry key="bFilter" value="false"/>
                <entry key="bInfo" value="false"/>
                <entry key="bLengthChange" value="false"/>
                <entry key="bPaginate" value="false"/>
                <entry key="aaSorting" value="[[1,'asc'],[2,'asc']]"/>
                <entry key="aoColumns"
                       value="[ {'bSortable':false, 'sWidth':'40%'},
                                {'bSortable':false, 'sTitle':'Start Date', 'sWidth':'20%'},
                                {'bSortable':false, 'sTitle':'End Date', 'sWidth':'20%'},
                                {'bSortable':false, 'sTitle':'Instructional', 'sWidth':'20%', 'sClass':'ks-cell-align-center'}
                            ]"/>
            </map>
        </property>
    </bean>

</beans>