<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--<bean id="ActivityOfferingInfo" parent="ActivityOfferingInfo-parent">
        <property name="titleAttribute" value="id"/>
    </bean>

    <bean id="ActivityOfferingInfo.id" parent="ActivityOfferingInfo.id-parent">
        <property name="label" value="ID"/>
    </bean>-->

    <!-- LookupView -->
    <bean id="KS-ActivityOfferingWrapper-LookupView" parent="KSLookupView">
        <property name="headerText" value="ActivityOffering Lookup " />
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingWrapperLookupableImpl" />

        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="id" />
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="Uif-DataField" p:propertyName="id" />
                <bean parent="Uif-DataField" p:propertyName="name"/>
                <bean parent="Uif-DataField" p:propertyName="typeKey" />
                <bean parent="Uif-DataField" p:propertyName="stateKey" />
                <bean parent="Uif-DataField" p:propertyName="termId" />
            </list>
        </property>
    </bean>


    <bean id="KS-ActivityOfferingWrapper-InquiryView" parent="KSInquiryView"
        p:headerText="ActivityOffering Inquiry (Wrapper)"
        p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper"
        p:viewHelperServiceClass="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingWrapperInquirableImpl">
        <property name="page.header">
            <ref bean="KSHeader_Empty" />
        </property>
        <property name="Items">
            <list>
                <bean parent="Uif-VerticalBoxSection"
                      p:header.render="false"
                      p:disclosure.render="false"
                      p:id="KS-HolidayCalendar-View-Page">
                    <property name="items">
                        <list>
                            <ref bean="KS-ActivityOfferingWrapper-MetaSection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ActivityOfferingWrapper-MetaSection" parent="Uif-VerticalBoxSection"
          p:headerText="ActivityOffering Information">
        <property name="header">
            <bean parent="Uif-HeaderThree"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-GridGroup"
                      p:layoutManager.numberOfColumns="2"
                      p:layoutManager.applyDefaultCellWidths="false">
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.id" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.name"/>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.typeKey" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.stateKey" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.termId" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.termCode" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.courseOfferingId" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.courseOfferingTitle" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.courseOfferingCode" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.activityCode" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.activityId"/>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.formatOfferingId" p:label="Format Offering Id"/>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.maximumEnrollment" p:label="Total Maximum Enrollment"/>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.isMaxEnrollmentEstimate" p:label="Maximum Enrollment is an estimate"/>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.isEvaluated" p:label="This course requires an evaluation"/>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.isHonorsOffering"/>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.activityOfferingURL"/>
                            <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="4"
                                      p:layoutManager.style="width: 100%; display:block;">
                                    <property name="headerText" value="Affiliated Personnel" />
                                    <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.OfferingInstructorWrapper" />
                                    <property name="propertyName" value="instructors" />
                                    <property name="layoutManager.renderSequenceField" value="false" />
                                    <property name="layoutManager.separateAddLine" value="false" />
                                    <property name="layoutManager.richTable.render" value="false" />
                                    <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                    <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                    <property name="items">
                                        <list>
                                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.personId" p:label="ID" />
                                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.personName" p:label="Name" />
                                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.typeKey" p:label="AFFILIATION" p:readOnly="true">
                                                <property name="control">
                                                    <bean parent="Uif-DropdownControl" p:options-ref="aoInstructors-options" />
                                                </property>
                                            </bean>
                                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.percentageEffort" p:label="INST.EFFORT" />
                                        </list>
                                    </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>