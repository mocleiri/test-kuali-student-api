<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="classpath:ks-EnrollmentFeeInfo-dictionary.xml"/>
    <import resource="classpath:UifKSDefinitions.xml"/>

    <!-- EnrollmentFeeInfo-->
    <bean id="EnrollmentFeeInfo" parent="EnrollmentFeeInfo-parent">
        <property name="titleAttribute" value="id"/>
    </bean>



    <!-- LookupView -->
    <bean id="KS-EnrollmentFee-LookupView" parent="KSLookupView">
        <property name="title" value="Enrollment Fee Lookup (Search: To be implemented soon) " />
        <property name="dataObjectClassName" value="org.kuali.student.r2.core.fee.dto.EnrollmentFeeInfo" />
        <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.EnrollmentFeeLookupableImpl" />

        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="id" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="descr" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="stateKey"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="typeKey" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="termId" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="setOrgId" />

            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="Uif-InputField" p:propertyName="id"/>
                <bean parent="Uif-DataField" p:propertyName="descr"/>
                <bean parent="Uif-DataField" p:propertyName="stateKey" />
                <bean parent="Uif-DataField" p:propertyName="typeKey" />
                <!--<bean parent="Uif-DataField" p:propertyName="setOrgId" />
                <bean parent="Uif-DataField" p:propertyName="setRefObjectId" /> -->
            </list>
        </property>
    </bean>

    <!-- InquiryView -->
    <bean id="KS-EnrollmentFee-InquiryView" parent="KSInquiryView"
          p:title="EnrollmentFee Inquiry"
          p:dataObjectClassName="org.kuali.student.r2.core.fee.dto.EnrollmentFeeInfo"
          p:viewHelperServiceClassName="org.kuali.student.enrollment.class2.courseoffering.service.impl.EnrollmentFeeInquirableImpl">
        <property name="items">
            <list>
                <bean parent="Uif-GridSection">
                <property name="layoutManager.numberOfColumns" value="2" />
                <property name="items">
                    <list>
                        <bean parent="Uif-DataField" p:propertyName="id" />
                        <bean parent="Uif-DataField" p:propertyName="title" />
                        <bean parent="Uif-DataField" p:propertyName="numOfPages" />
                    </list>
                </property>
                </bean>
            </list>
        </property>
      </bean>

</beans>