    <bean id="KS-ActivityOfferingWrapper-InquiryView" parent="KSInquiryView"
        p:headerText="ActivityOffering Inquiry"
        p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper"
        p:viewHelperServiceClass="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingWrapperInquirableImpl">
        <property name="page.header">
            <ref bean="KSHeader_Empty" />
        </property>
        <property name="Items">
            <list>
                <bean parent="Uif-VerticalBoxSection"
                      p:header.render="false"
                      p:disclosure.render="false"
                      p:id="KS-HolidayCalendar-View-Page">
                    <property name="items">
                        <list>
                            <ref bean="KS-ActivityOfferingWrapper-MetaSection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ActivityOfferingWrapper-MetaSection" parent="Uif-VerticalBoxSection">
        <property name="header">
            <bean parent="Uif-HeaderThree"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-GridGroup"
                      p:layoutManager.numberOfColumns="2"
                      p:layoutManager.applyDefaultCellWidths="false">
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.courseOfferingCode" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.activityCode" />
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.courseOfferingTitle" />
                            <bean parent="Uif-DataField" p:propertyName="termName" p:label="Term"/>
                            <bean parent="Uif-DataField" p:propertyName="typeName" p:label="Type"/>
                            <bean parent="Uif-DataField" p:propertyName="formatOfferingName" p:label="Format Offering"/>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.maximumEnrollment" p:label="Total Maximum Enrollment"/>
                            <bean parent="Uif-DataField" p:propertyName="stateName" p:label="State"/>
                            <bean parent="Uif-DataField" p:propertyName="isEvaluatedUI" p:label="This course requires an evaluation"/>
                            <bean parent="Uif-DataField" p:propertyName="isHonorsOfferingUI" p:label="Honors Offering"/>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.activityOfferingURL"/>
                            <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="4"
                                      p:layoutManager.style="width: 100%; display:block;">
                                    <property name="headerText" value="Affiliated Personnel" />
                                    <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.OfferingInstructorWrapper" />
                                    <property name="propertyName" value="instructors" />
                                    <property name="layoutManager.renderSequenceField" value="false" />
                                    <property name="layoutManager.separateAddLine" value="false" />
                                    <property name="layoutManager.richTable.render" value="false" />
                                    <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                    <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                    <property name="items">
                                        <list>
                                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.personId" p:label="ID" />
                                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.personName" p:label="Name" />
                                            <bean parent="Uif-InputField" p:propertyName="typeName" p:label="AFFILIATION"/>
                                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.percentageEffort" p:label="INST.EFFORT" />
                                        </list>
                                    </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>