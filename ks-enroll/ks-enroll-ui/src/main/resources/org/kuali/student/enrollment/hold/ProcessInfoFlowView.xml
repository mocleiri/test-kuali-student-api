    <bean id="KS-ProcessInfo-Search" parent="KSFormView" p:applyDirtyCheck="true"
          p:id="processInfoFormView" p:headerText="Manage Processes" p:entryPageId="processInfoSearch">
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>ks-enrollment-home</value>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-ProcessInfoPage-Search" />
            </list>
        </property>
    </bean>

    <bean id="KS-ProcessInfoPage-Search" parent="Uif-Page">
        <property name="id" value="processInfoSearch" />
        <property name="headerText" value="View Existing Processes" />
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-HeaderThree" p:headerText="Process Category" p:style="margin-bottom: -0.5em;"/>
                            <bean parent="Uif-HorizontalBoxSubSection" p:headerText="Select a Process Category to view existing Processes">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-InputField" p:propertyName="" >
                                            <property name="control">
                                                <bean parent="Uif-DropdownControl"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-SecondaryActionButton" p:actionLabel="View Processes" p:methodToCall="search" p:style="font-size: 90%;"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-VerticalBoxSection" p:headerText="Create a New Process">
                    <property name="items">
                        <list>
                            <bean parent="Uif-SecondaryActionButton" p:actionLabel="Create Process" p:methodToCall="create" p:style="font-size: 90%;"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean name="KS-ProcessInfoPage-View" parent="Uif-Page" p:headerText="Processes">
        <property name="id" value="processInfoView" />
        <property name="items">
            <list>
                <bean parent="Uif-TableCollectionSection"
                      p:layoutManager.numberOfColumns="3" p:renderAddLine="false">
                    <property name="collectionObjectClass" value="org.kuali.student.r2.core.process.dto.ProcessInfo" />
                    <property name="propertyName" value="processInfos" />
                    <property name="collectionLookup.quickfinderAction.render" value="false" />
                    <property name="layoutManager.renderSequenceField" value="false" />
                    <property name="layoutManager.applyDefaultCellWidths" value="true" />
                    <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                    <property name="layoutManager.richTable.templateOptions">
                        <map>
                            <entry key="sDom" value="rtip"/>
                            <entry key="aaSorting" value="[[ 1, 'asc' ]]"/>
                        </map>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField"
                                  p:label="PROCESS CATEGORY"
                                  p:propertyName="typeKey" />
                            <bean parent="Uif-DataField"
                                  p:label="PROCESS"
                                  p:propertyName="name"/>
                        </list>
                    </property>
                    <property name="layoutManager.actionFieldPrototype">
                        <bean parent="Uif-HorizontalFieldGroup" p:align="left" p:required="false" p:label="Actions" p:style="display:inline;"/>
                    </property>
                    <property name="lineActions">
                        <list>
                            <bean parent="KS-SubmitActionLink" p:methodToCall="" p:actionLabel="View" />
                            <bean parent="KS-SubmitActionLink" p:methodToCall="" p:actionLabel="Edit" />
                            <bean parent="KS-SubmitActionLink" p:methodToCall="" p:actionLabel="Delete" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>