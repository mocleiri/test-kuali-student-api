<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

    <bean id="KS-HolidayCalendar-EditPage" parent="Uif-Page"
          p:id="holidayCalendarEditPage"
          p:title="@{holidayCalendarInfo.name != null? holidayCalendarInfo.name : 'New Holiday Calendar'}"
          p:disclosure.render="false"
          p:header.id="KS-HolidayCalendar-EditPage-header">
        <property name="header">
            <bean parent="Uif-HeaderField-Two"/>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-HolidayCalendar-MetaSection"/>
                <ref bean="KS-HolidayCalendar-HolidaySection"/>
            </list>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Save" p:clientSideJs="saveForm();" />
                        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Set as Official" p:methodToCall="setOfficial" p:clientSideJs="submitForm();" p:render="@{official eq true}"/>
                        <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:methodToCall="close"/>
                        <bean parent="Uif-ActionLink" p:actionLabel="Delete" p:methodToCall="delete" p:render="@{delete eq true}"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KS-HolidayCalendar-MetaSection" parent="Uif-VerticalBoxSection" p:layoutManager.orientation="HORIZONTAL">
        <property name="title" value="Calendar Information" />
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                 <bean parent="Uif-InputField" p:label="Holiday Calendar Name"
					p:labelPlacement="TOP" p:labelField.renderColon="false"
					p:propertyName="holidayCalendarInfo.name" p:required="true">
					<property name="control">
						<bean parent="Uif-TextControl" p:size="30" />
					</property>
				</bean>
                <bean parent="Uif-InputField" p:propertyName="holidayCalendarInfo.adminOrgId"
                      p:label="Organization" p:labelField.renderColon="false" p:labelField.style="display:block;">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:options-ref="hcorg-options"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Start Date" p:labelPlacement="TOP" p:required="true"
				     p:labelField.renderColon="false" p:labelField.styleClasses="labelTop"
					p:propertyName="holidayCalendarInfo.startDate">
                    <property name="validCharactersConstraint">
						<bean parent="BasicDatePatternConstraint" />
					</property>
					<property name="control">
						<bean parent="Uif-DateControl" />
					</property>
				</bean>
                <bean parent="Uif-InputField" p:label="End Date" p:labelPlacement="TOP" p:required="true"
					p:labelField.styleClasses="labelTop" p:labelField.renderColon="false"
					p:propertyName="holidayCalendarInfo.endDate">
                    <property name="validCharactersConstraint">
						<bean parent="BasicDatePatternConstraint" />
					</property>
					<property name="control">
						<bean parent="Uif-DateControl" />
					</property>
				</bean>
            </list>
        </property>
    </bean>

	<bean id="KS-HolidayCalendar-HolidaySection" parent="Uif-TableCollectionSection"
		p:layoutManager.numberOfColumns="8">
		<property name="title" value="Holidays" />
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.acal.dto.HolidayWrapper" />
		<property name="propertyName" value="holidays" />
		<property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.separateAddLine" value="false" />
        <property name="layoutManager.richTable.render" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
		<property name="items">
			<list>
                <bean parent="Uif-InputField-LabelTop" p:label="Holiday Type" p:propertyName="holidayInfo.typeKey"  p:required="true" p:render="@{#isAddLine}" p:finalizeMethodToCall="populateHolidayTypes">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="typeName" p:label="Holiday Type"  p:readOnly="true" p:render="@{!#isAddLine}" p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="30" />
                    </property>
                </bean>
                <bean parent="Uif-InputField-LabelTop" p:label="Start Date" p:propertyName="startDate" p:required="true"  p:width="130px">
                    <property name="validCharactersConstraint">
                        <bean parent="BasicDatePatternConstraint" />
                    </property>
                    <property name="control">
                        <bean parent="Uif-DateControl" />
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:label="Start Time" p:style="width: 160px" >
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField-LabelTop" p:label="Start Time" p:labelField.render="false" p:propertyName="startTime">
                                <property name="validCharactersConstraint">
                                    <bean parent="TimePatternConstraint" />
                                </property>
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="5"  p:watermarkText="HH:mm"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField-LabelTop" p:label="AM/PM" p:labelField.render="false" p:propertyName="startTimeAmPm">
                                 <property name="control">
                                    <bean parent="Uif-DropdownControl" p:options-ref="hctime-options"/>
                                 </property>
                             </bean>
                        </list>
                    </property>
                </bean>
               <!--TODO:Change endDate to not required-->
				<bean parent="Uif-InputField" p:label="End Date" p:propertyName="endDate" p:required="true" p:width="130px">
                    <property name="validCharactersConstraint">
						<bean parent="BasicDatePatternConstraint" />
					</property>
                    <property name="control">
						<bean parent="Uif-DateControl" />
					</property>
				</bean>
                <bean parent="Uif-HorizontalFieldGroup" p:label="End Time" p:style="width: 160px">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField-LabelTop" p:label="End Time" p:labelField.render="false" p:propertyName="endTime" p:width="60px">
                                <property name="validCharactersConstraint">
                                    <bean parent="TimePatternConstraint" />
                                </property>
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="5"  p:watermarkText="HH:mm"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField-LabelTop" p:label="AM/PM" p:labelField.render="false" p:propertyName="endTimeAmPm">
                                 <property name="control">
                                    <bean parent="Uif-DropdownControl" p:options-ref="hctime-options"/>
                                 </property>
                             </bean>
                        </list>
                    </property>
                </bean>
	            <bean parent="Uif-InputField" p:label="All Day" p:propertyName="holidayInfo.isAllDay"  p:width="50px">
					<property name="control">
						<bean parent="Uif-CheckboxControl"/>
					</property>
				</bean>
                <bean parent="Uif-InputField" p:label="Date Range" p:propertyName="holidayInfo.isDateRange" p:width="50px">
					<property name="control">
						<bean parent="Uif-CheckboxControl"/>
					</property>
				</bean>
				<bean parent="Uif-InputField" p:label="Instructional" p:propertyName="holidayInfo.isInstructionalDay" p:width="50px">
					<property name="control">
						<bean parent="Uif-CheckboxControl" />
					</property>
				</bean>
			</list>
		</property>
	</bean>

    <util:list id="hcorg-options">
       <bean parent="Uif-KeyLabelPair" p:key="102" p:value="Registrar's Office"/>
    </util:list>

    <util:list id="hctime-options">
        <bean parent="Uif-KeyLabelPair" p:key="AM" p:value="am"/>
        <bean parent="Uif-KeyLabelPair" p:key="PM" p:value="pm"/>
    </util:list>

</beans>

