    <bean id="KS-CourseOfferingManagement-ManageCourseOfferingsPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="manageCourseOffingsPage"
          p:headerText="">
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-CourseOfferingManagement-CriteriaSection"/>
                <ref bean="KS-CourseOfferingManagement-CourseOfferingResultSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-CriteriaSection" parent="Uif-HorizontalBoxSection">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalFieldGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-InputField" p:propertyName="termCode" p:label="Term" p:labelPlacement="LEFT" p:required="true">
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:size="7" p:watermarkText="FAL2009" p:minLength="7" p:maxLength="7"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-SecondaryActionButton" p:performClientSideValidation="true" p:actionLabel="Set" p:methodToCall="searchForTerm"/>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-HorizontalFieldGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-InputField" p:propertyName="radioSelection" p:label="" p:width="auto" p:required="true">
                                            <property name="control">
                                                <bean parent="Uif-VerticalRadioControl">
                                                    <property name="options">
                                                        <list>
                                                            <bean parent="Uif-KeyLabelPair" p:key="courseOfferingCode" p:value="Course ID"/>
                                                            <bean parent="Uif-KeyLabelPair" p:key="subjectCode" p:value="Subject Code"/>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField" p:propertyName="inputCode" p:label="" p:required="true">
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:size="10"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-SecondaryActionButton" p:performClientSideValidation="true" p:actionLabel="Show" p:methodToCall="show"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
     </bean>

    <bean id="KS-CourseOfferingManagement-CourseOfferingResultSection" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="@{subjectCode}" />
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-SecondaryActionButton" p:actionLabel="Create Course Offering" p:methodToCall=""/>
                <ref bean="KS-CourseOfferingManagement-CourseOfferingListSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-CourseOfferingListSection" parent="Uif-TableCollectionSection"
          p:layoutManager.numberOfColumns="3"  p:renderAddLine="false">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo" />
        <property name="propertyName" value="courseOfferingList" />
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="true" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 1, 'desc' ]]"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField"
                      p:label="COURSE ID"
                      p:propertyName="courseOfferingCode" />
                <bean parent="Uif-DataField"
                      p:label="TITLE"
                      p:propertyName="courseOfferingTitle"/>
                <bean parent="Uif-DataField"
                      p:label="STATUS"
                      p:propertyName="stateKey"/>
            </list>
        </property>
        <property name="layoutManager.actionFieldPrototype">
            <bean parent="Uif-HorizontalFieldGroup" p:align="center" p:required="false" p:label="Actions" p:style="display:inline;"/>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="KS-SubmitActionLink" p:methodToCall="loadAOs" p:actionLabel="Edit Activity Offerings" />
                <bean parent="KS-SubmitActionLink" p:methodToCall="viewCO" p:actionLabel="View" />
                <bean parent="KS-SubmitActionLink" p:methodToCall="editCO" p:actionLabel="Edit" />
                <bean parent="KS-SubmitActionLink" p:clientSideJs="confirmDeletion('Are you sure you want to delete the holiday calendar?')" p:methodToCall="deleteCO" p:actionLabel="Delete" />
            </list>
        </property>
    </bean>

</beans>