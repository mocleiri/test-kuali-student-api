    <bean id="CourseOfferingInfo" parent="CourseOfferingInfo-parent">
        <property name="titleAttribute" value="id"/>
    </bean>

    <bean id="KS-CourseOfferingManagement-ManageCourseOfferingsPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="manageCourseOfferingsPage"
          p:headerText="">
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-CourseOfferingManagement-CriteriaSection"/>
                <ref bean="KS-CourseOfferingManagement-CourseOfferingResultSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-CourseOfferingResultSection" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="@{subjectCode}" />
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-Label" p:labelText="Current Course Offerings" p:render="@{!courseOfferingList.empty}"/>
                <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Create Course Offering" p:methodToCall="createCourseOffering" p:render="@{!courseOfferingList.empty}"/>
                <ref bean="KS-CourseOfferingManagement-CourseOfferingListSection"/>
                <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Create Course Offering" p:methodToCall="createCourseOffering"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-CourseOfferingListSection" parent="Uif-TableCollectionSection"
          p:layoutManager.numberOfColumns="3"  p:renderAddLine="false">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo" />
        <property name="propertyName" value="courseOfferingList" />
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="true" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 0, 'asc' ]]"/>
                <entry key="bPaginate" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:propertyName="courseOfferingCode">
                    <property name="inquiry">
                        <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingEditWrapper" p:inquiryParameters="id" />
                    </property>
                </bean>
                <bean parent="Uif-DataField"
                      p:label="TITLE"
                      p:propertyName="courseOfferingTitle"/>
                <bean parent="Uif-DataField"
                      p:label="CREDITS"
                      p:propertyName="creditCnt"/>
                <bean parent="Uif-DataField"
                      p:label="GRADING"
                      p:propertyName="gradingOptionId"/>
                <!--<bean parent="Uif-DataField"-->
                      <!--p:label="STATUS"-->
                      <!--p:propertyName="stateKey"/>-->
            </list>
        </property>
        <property name="layoutManager.actionFieldPrototype">
            <bean parent="Uif-HorizontalFieldGroup" p:align="left" p:required="false" p:label="ACTIONS" p:style="display:inline;"/>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="KS-SubmitActionLink" p:methodToCall="loadAOs" p:actionLabel="Manage" />
                <bean parent="KS-SubmitActionLink" p:methodToCall="edit" p:actionLabel="Edit  " />
                <bean parent="KS-SubmitActionLink" p:methodToCall="deleteCoConfirmation" p:actionLabel="Delete" p:render = "@{#line.stateKey eq 'kuali.lui.state.draft' or #line.stateKey eq 'kuali.lui.course.offering.state.draft' or #line.stateKey eq 'kuali.lui.course.offering.state.planned'}" />
            </list>
        </property>
    </bean>

</beans>
