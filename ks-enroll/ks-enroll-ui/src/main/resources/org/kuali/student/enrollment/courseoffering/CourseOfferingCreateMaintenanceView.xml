    <!-- DTO DEFINITION FOR the Wrapper -->
    <bean id="CourseOfferingCreateWrapper" parent="CourseOfferingCreateWrapper-parentBean"/>

      <bean id="CourseOfferingCreateWrapper-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingCreateWrapper"/>
        <property name="titleAttribute" value="coInfo.id"/>
        <property name="attributes">
          <list>
          </list>
        </property>
        <property name="objectLabel" value="Course Offering"/>
        <property name="primaryKeys">
          <list>
            <value>coInfo.id</value>
          </list>
        </property>
    </bean>

    <!-- Maintenace View-->
    <bean id="KS-CourseOffering-Create-MaintenanceView" parent="KSMaintenanceView">
        <property name="headerText" value="Create Course Offering"/>
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingCreateWrapper"/>
        <property name="formClass" value="org.kuali.rice.krad.web.form.MaintenanceForm"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingCreateMaintainableImpl" />
        <property name="singlePageView" value="true"/>
        <property name="items">
            <list>
                <ref bean="KS-CourseOffering-MetaSection"/>
                <ref bean="KS-CourseOffering-LinkSection"/>
                <ref bean="KS-CreateFromCatalog"/>
                <ref bean="KS-CreateFromTermOffering"/>
            </list>
        </property>
        <property name="page.header.lowerGroup.render" value="false"/>
        <property name="page.footer.items">
            <list>
                <bean parent="Uif-PrimaryActionButton" p:methodToCall="route" p:id="createOfferingButton" p:actionLabel="Create Offering" p:performClientSideValidation="true"
                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}" p:disabled="@{!document.newMaintainableObject.dataObject.enableCreateButton}">
                </bean>
            <bean parent="Uif-ActionLink" p:methodToCall="cancel" p:actionLabel="cancel"
                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CANCEL]}"/>
            </list>
        </property>
        <property name="header.cssClasses">
          <list merge="true">
            <value>ks-borderBottom2</value>
          </list>
        </property>
        <property name="additionalCssFiles">
            <list merge="true">
                <value>ks-enroll/css/acal.css</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/courseOffering.js</value>
            </list>
        </property>
        <property name="expressionVariables">
            <map merge="true">
                <entry key="showCatalogLink" value="document.newMaintainableObject.dataObject.showCatalogLink"/>
                <entry key="showAllSections" value="document.newMaintainableObject.dataObject.showAllSections"/>
                <entry key="showTermOfferingLink" value="document.newMaintainableObject.dataObject.showTermOfferingLink"/>
                <entry key="noOfTermOfferings" value="document.newMaintainableObject.dataObject.noOfTermOfferings"/>
            </map>
        </property>
    </bean>

    <bean id="KS-CourseOffering-LinkSection" parent="Uif-HorizontalBoxSection" p:render="@{#showAllSections}">
        <property name="disclosure.render" value="false"/>
        <property name="cssClasses">
          <list merge="true">
            <value>ks-borderBottom</value>
          </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:methodToCall="createFromCatalog" p:style="font-weight:bold;" p:actionLabel="Create from Catalog" p:render="@{#showCatalogLink}"/>
                <bean parent="Uif-Message" p:messageText="Create from Catalog" p:style="font-weight:bold;" p:render="@{!#showCatalogLink}"/>
                <bean parent="Uif-Message" p:messageText="  |  " p:style="font-weight:bold;"/>
                <bean parent="Uif-ActionLink" p:methodToCall="createFromTermOffering" p:style="font-weight:bold;" p:actionLabel="Create from Term Offering (@{#noOfTermOfferings})" p:render="@{#showTermOfferingLink}"/>
                <bean parent="Uif-Message" p:messageText="Create from Existing Offering (@{#noOfTermOfferings})" p:style="font-weight:bold;" p:render="@{!#showTermOfferingLink}"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOffering-MetaSection" parent="Uif-HorizontalBoxSection">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="targetTermCode"
                      p:label="Target Term" p:labelPlacement="TOP" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="10" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="catalogCourseCode"
                      p:label="Catalog Course Code" p:labelPlacement="TOP" p:required="true" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="10" />
                    </property>
                    <property name="quickfinder.dataObjectClassName" value="org.kuali.student.lum.course.dto.CourseInfo"/>
                    <property name="quickfinder.fieldConversions">
                        <map>
                            <entry key="code" value="catalogCourseCode"/>
                        </map>
                    </property>
                    <property name="quickfinder.quickfinderAction">
                        <bean parent="Uif-ActionLink" p:actionLabel="Search" p:style="display:block" p:methodToCall="performLookup"/>
                    </property>
                    <property name="quickfinder.lightBoxLookup">
                        <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                    </property>
                </bean>

                <bean parent="Uif-InputField" p:propertyName="invalidCatalogCourseCodeError" p:readOnly="true" p:fieldLabel.renderColon="false" p:style="color:red">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="10" />
                    </property>
                </bean>

                <bean parent="Uif-InputField" p:propertyName="invalidTargetTermError" p:readOnly="true" p:fieldLabel.renderColon="false" p:style="color:red">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="10" />
                    </property>
                </bean>

                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="loadCourseCatalog" p:actionLabel="Show"
                              p:performClientSideValidation="true" p:style="margin-top:15px;" p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}"/>

                <bean parent="Uif-VerticalFieldGroup" p:style="margin-left:100px;">
                  <property name="group.instructionalText" value="Course Catalog Details"/>
                  <property name="group.instructionalMessage">
                      <bean parent="Uif-InstructionalMessage" p:style="font-weight:bold;font-size:15px;"/>
                  </property>
                  <property name="group.instructionalMessage.cssClasses">
                      <list merge="true">
                        <value>ks-borderBottom</value>
                      </list>
                  </property>
                  <property name="items">
                    <list>
                      <bean parent="Uif-InputField" p:propertyName="course.code" p:label="Catalog Course Code" p:readOnly="true">
                        <property name="control">
                          <bean parent="Uif-TextControl" p:size="5"/>
                        </property>
                      </bean>
                      <bean parent="Uif-InputField" p:propertyName="course.courseTitle" p:label="Course Title" p:readOnly="true">
                        <property name="control">
                          <bean parent="Uif-TextControl" p:size="21"/>
                        </property>
                      </bean>
                      <bean parent="Uif-InputField" p:propertyName="creditCount" p:label="Credits" p:readOnly="true">
                        <property name="control">
                          <bean parent="Uif-TextControl" p:size="5"/>
                        </property>
                      </bean>
                    </list>
                  </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-CreateFromCatalog" parent="Uif-VerticalBoxSection" p:render="@{!#showCatalogLink and #showAllSections}">
         <property name="items">
            <list>
                 <ref bean="KS-CourseOfferingCodeSubSection"/>
                 <ref bean="KS-FormatOfferingSubSection"/>
                 <ref bean="KS-ExistingOfferingsSubSection"/>
            </list>
         </property>
    </bean>

    <bean id="KS-CourseOfferingCodeSubSection" parent="Uif-VerticalBoxSubSection" >
        <property name="disclosure.render" value="false"/>
        <property name="headerText" value="Create Course Offering Code"/>
        <property name="items">
            <list>
                 <bean parent="Uif-InputField" p:propertyName="createErrorMessage" p:readOnly="true" p:fieldLabel.renderColon="false" p:style="color:red">
                     <property name="control">
                         <bean parent="Uif-TextControl" p:size="10" />
                     </property>
                 </bean>
                 <bean parent="Uif-HorizontalBoxSubSection">
                     <property name="items">
                         <list>
                             <bean parent="Uif-InputField" p:propertyName="course.code"
                                   p:label="Catalog Course Code" p:labelPlacement="TOP" p:readOnly="true" p:fieldLabel.renderColon="false">
                                 <property name="control">
                                     <bean parent="Uif-TextControl" p:size="10" />
                                 </property>
                             </bean>
                             <bean parent="Uif-InputField" p:propertyName="courseOfferingSuffix"
                                   p:label="Add Suffix" p:labelPlacement="TOP" p:fieldLabel.renderColon="false">
                                 <property name="control">
                                     <bean parent="Uif-TextControl" p:size="10" />
                                 </property>
                             </bean>
                         </list>
                     </property>
                 </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-FormatOfferingSubSection" parent="Uif-TableCollectionSubSection" p:collectionLookup.render="false">
		<property name="headerText" value="Add Delivery Formats" />
		<property name="collectionObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.FormatOfferingInfo" />
		<property name="propertyName" value="formatOfferingList" />
		<property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.richTable.render" value="false" />
        <property name="addLineActions">
          <list>
            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="addLine" p:actionLabel="add"
                  p:actionEvent="addLine" p:onClickScript=" enableCreateOffering(); "/>
          </list>
        </property>
		<property name="items">
           <list>
               <bean parent="Uif-InputField" p:propertyName="formatId" p:readOnlyDisplayReplacementPropertyName="name"  p:required="true"
                      p:label="FORMAT" p:labelPlacement="TOP" p:readOnly="@{!#isAddLine}">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.FormatOfferingTypeForCreateCOTypeKeyValues"/>
                    </property>
                </bean>
               <bean parent="Uif-InputField" p:propertyName="gradeRosterLevelTypeKey"
                      p:label="GRADE ROSTER LEVEL" p:required="true" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.GradeRosterLevelKeyValues"/>
                    </property>
                </bean>
               <bean parent="Uif-InputField" p:propertyName="finalExamLevelTypeKey"
                      p:label="FINAL EXAM DRIVER ACTIVITY" p:required="true" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                   <property name="optionsFinder">
                       <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.FinalExamDriverKeyValues"/>
                   </property>
                </bean>
           </list>
         </property>
    </bean>

    <bean id="KS-ExistingOfferingsSubSection" parent="Uif-TableCollectionSubSection" p:collectionLookup.render="false" p:readOnly="true">
		<property name="headerText" value="Existing Offerings for @{document.newMaintainableObject.dataObject.term?.name}" />
		<property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ExistingCourseOffering" />
		<property name="propertyName" value="existingCourseOfferings" />
		<property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
		<property name="items">
           <list>
               <bean parent="Uif-InputField" p:propertyName="courseOfferingCode" p:label="COURSE OFFERING CODE" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
               <bean parent="Uif-InputField" p:propertyName="courseTitle" p:label="COURSE TITLE" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="credits" p:label="CREDITS" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="grading" p:label="GRADING" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
           </list>
         </property>
    </bean>

    <bean id="KS-ConfigureCourseOfferingCopySubSection" parent="Uif-VerticalBoxSection" p:disclosure.render="true">
        <property name="header">
            <bean parent="Uif-HeaderSix" p:headerText="Configure Course Offering Copy"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="excludeCancelledActivityOfferings" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl">
                            <property name="checkboxLabel" value="Exclude cancelled activity offerings"/>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="excludeSchedulingInformation" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl">
                            <property name="checkboxLabel" value="Exclude scheduling information"/>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="excludeInstructorInformation" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl">
                            <property name="checkboxLabel" value="Exclude instructor information"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="KS-CreateFromTermOffering" parent="Uif-VerticalBoxSection" p:render="@{!#showTermOfferingLink and #showAllSections}">
        <property name="items">
        <list>
            <ref bean="KS-ConfigureCourseOfferingCopySubSection"/>
            <ref bean="KS-ExistingTermOfferingsSubSection"/>
        </list>
        </property>
    </bean>

    <bean id="KS-ExistingTermOfferingsSubSection" parent="Uif-TableCollectionSubSection" p:collectionLookup.render="false" p:renderAddLine="false">
		<property name="headerText" value="Previous Term Offerings" />
		<property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ExistingCourseOffering" />
		<property name="propertyName" value="existingTermOfferings" />
		<property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
		<property name="items">
           <list>
               <bean parent="Uif-InputField" p:propertyName="termCode" p:label="SOURCE TERM" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
               <bean parent="Uif-InputField" p:propertyName="courseOfferingCode" p:label="COURSE OFFERING CODE" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
               <bean parent="Uif-InputField" p:propertyName="courseTitle" p:label="COURSE TITLE" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="credits" p:label="CREDITS" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="grading" p:label="GRADING" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
           </list>
         </property>
        <property name="lineActions">
            <list>
                <bean parent="Uif-ActionLink" p:methodToCall="copyExistingCourseOffering" p:actionLabel="Copy" />
            </list>
        </property>
    </bean>

    <!-- MAINTENACE DOCUMENT DEFINITION -->

    <bean id="CourseOfferingCreateMaintenanceDocument" parent="CourseOfferingCreateMaintenanceDocument-parentBean"/>

    <bean id="CourseOfferingCreateMaintenanceDocument-parentBean" abstract="true" parent="uifMaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingCreateWrapper"/>
        <property name="maintainableClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingCreateMaintainableImpl"/>
        <property name="businessRulesClass" value="org.kuali.student.enrollment.class2.courseoffering.rule.CourseOfferingCreateRule" />
        <property name="documentTypeName" value="CourseOfferingCreateMaintenanceDocument"/>
        <property name="lockingKeys">
            <list>
                <value>coInfo.id</value>
            </list>
        </property>
    </bean>

</beans>