    <bean id="CheckInfo-CreateView" parent="KSFormView">
        <property name="id" value="checkCreateView"/>
        <property name="headerText" value="Create Checks"/>
        <property name="formClass"
                  value="org.kuali.student.enrollment.class1.hold.service.form.CheckInfoCreateForm"/>
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Uif-Page"/>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField-LabelTop" p:label="Check Name" p:propertyName="name"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="25"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField-LabelTop" p:label="Check Description" p:propertyName="descr">
                    <property name="control">
                        <bean parent="Uif-SmallTextAreaControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField-LabelTop" p:label="Check Types" p:propertyName="typeKey"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class1.hold.service.keyvalues.ProcessInfoTypeKeyValues"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField-LabelTop" p:label="Process State" p:propertyName="stateKey"
                             p:required="true">
                <property name="control">
                    <bean parent="Uif-VerticalRadioControl" >
                        <property name="options">
                            <list>
                                <bean parent="Uif-KeyLabelPair" p:key="active" p:value="Active"/>
                                <bean parent="Uif-KeyLabelPair" p:key="disabled" p:value="Disabled"/>
                                <bean parent="Uif-KeyLabelPair" p:key="inactive" p:value="Inactive"/>
                            </list>
                        </property>
                    </bean>
                </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-SecondaryActionButton" p:actionLabel="Save" p:methodToCall="create"/>
                            <bean parent="Uif-SecondaryActionButton" p:actionLabel="Cancel" p:methodToCall="close"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/common.js</value>
            </list>
        </property>

    </bean>
</beans>