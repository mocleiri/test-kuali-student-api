<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

    <bean id="KS-HolidayCalendar-ViewPage" parent="Uif-Page"
          p:id="holidayCalendarViewPage"
          p:headerText="@{holidayCalendarInfo.name}">
        <property name="header">
            <bean parent="Uif-HeaderTwo">
                <property name="cssClasses">
                    <list merge="true">
                        <value>ks-header</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="header.rightGroup">
            <bean parent="Uif-HorizontalBoxGroup">
                <property name="items">
                    <list>
                        <bean parent="Uif-ActionLink" p:methodToCall="toCopy" p:actionLabel="Copy" p:style="text-align:center;"/>
                        <bean parent="Uif-ActionLink" p:methodToCall="toEdit" p:actionLabel="Edit" p:style="text-align:center;"/>
                        <bean parent="Uif-ActionLink" p:actionScript="confirmDeletion('Are you sure you want to delete the holiday calendar?')" p:render="@{!officialUI}" p:methodToCall="delete" p:actionLabel="Delete" p:style="text-align:center;"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection"
                      p:header.render="false"
                      p:disclosure.render="false">
                    <property name="items">
                        <list>
                            <ref bean="KS-HolidayCalendar-View-Meta"/>
                            <ref bean="KS-HolidayCalendar-View-Holidays"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-HolidayCalendar-View-Meta" parent="Uif-Disclosure-VerticalBoxSection"
          p:headerText="Holiday Calendar Information">
        <property name="header">
            <bean parent="Uif-HeaderThree"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:messageText="@{updateTimeString}" p:cssClasses="font-light12"/>
                <bean parent="Uif-GridGroup"
                      p:layoutManager.numberOfColumns="2"
                      p:layoutManager.applyDefaultCellWidths="false">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField"
                                  p:propertyName="holidayCalendarInfo.name"
                                  p:label="Holiday Calendar Name"
                                  p:fieldLabel.width="40%"
                                  p:width="60%"
                                  p:readOnly="true"
                                  p:required="false"
                                  p:fieldLabel.renderColon="false"/>
                            <bean parent="Uif-InputField"
                                  p:propertyName="adminOrgName"
                                  p:label="Organization"
                                  p:readOnly="true"
                                  p:required="false"
                                  p:fieldLabel.renderColon="false"/>
                            <bean parent="Uif-InputField"
                                  p:propertyName="holidayCalendarInfo.startDate"
                                  p:label="Start Date"
                                  p:readOnly="true"
                                  p:required="false"
                                  p:fieldLabel.renderColon="false"/>
                            <bean parent="Uif-InputField"
                                  p:propertyName="holidayCalendarInfo.endDate"
                                  p:label="End Date"
                                  p:readOnly="true"
                                  p:required="false"
                                  p:fieldLabel.renderColon="false"/>
                            <bean parent="Uif-InputField"
                                  p:propertyName="stateName"
                                  p:label="State"
                                  p:readOnly="true"
                                  p:required="false"
                                  p:fieldLabel.renderColon="false"/>
                        </list>
                    </property>
                    <property name="layoutManager.cssClasses">
                        <list merge="true">
                            <value>ks-hcal-info-table</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>ks-hcal-info</value>
            </list>
        </property>
    </bean>

    <bean id="KS-HolidayCalendar-View-Holidays" parent="Uif-TableCollectionSection"
            p:headerText="Holidays"
            p:collectionObjectClass="org.kuali.student.enrollment.class2.acal.dto.HolidayWrapper"
            p:propertyName="holidays"
            p:renderAddLine="false"
            p:renderLineActions="false"
            p:layoutManager.numberOfColumns="4"
            p:layoutManager.applyDefaultCellWidths="false"
            p:layoutManager.renderSequenceField="false">
        <property name="header">
            <bean parent="Uif-HeaderThree"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField"
                      p:propertyName="typeName"
                      p:readOnly="true"
                      p:style="font-weight:bold;"/>
                <bean parent="Uif-InputField"
                      p:label="Start Date"
                      p:propertyName="startDateUI"
                      p:readOnly="true"/>
                <bean parent="Uif-DataField"
                      p:label="End Date"
                      p:propertyName="endDateUI"
                      p:readOnly="true"/>
                <bean parent="Uif-DataField"
                      p:label="Instructional"
                      p:propertyName="holidayInfo.isInstructionalDay"
                      p:readOnly="true"
                      p:readOnlyDisplayReplacement="@{#line.holidayInfo.isInstructionalDay ? 'Yes' : ' '}"/>
            </list>
        </property>
        <property name="layoutManager.richTable.templateOptions">
            <!-- see http://datatables.net/ref for all options -->
            <map merge="true">
                <entry key="bFilter" value="false"/>
                <entry key="bInfo" value="false"/>
                <entry key="bLengthChange" value="false"/>
                <entry key="bPaginate" value="false"/>
                <entry key="aaSorting" value="[[1,'asc'],[2,'asc']]"/>
                <entry key="aoColumns"
                       value="[ {'bSortable':false, 'sWidth':'40%'},
                                {'bSortable':false, 'sType':'kuali_date', 'sTitle':'Start Date', 'sWidth':'20%'},
                                {'bSortable':false, 'sType':'kuali_date', 'sTitle':'End Date', 'sWidth':'20%'},
                                {'bSortable':false, 'sTitle':'Instructional', 'sWidth':'20%', 'sClass':'ks-cell-align-center'}
                           ]"/>
            </map>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>ks-hcal-holidays</value>
            </list>
        </property>
        <property name="layoutManager.cssClasses">
            <list merge="true">
                <value>ks-hcal-holidays-table</value>
            </list>
        </property>
    </bean>

</beans>