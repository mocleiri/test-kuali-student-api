    <!-- PopulationWrapper MaintenanceView -->
    <bean id="KS-PopulationWrapper-MaintenanceView" parent="KSMaintenanceView">
        <property name="headerText" value="Create a New Population"/>
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.population.dto.PopulationWrapper"/>
        <property name="formClass" value="org.kuali.rice.krad.web.form.MaintenanceForm"/>
        <property name="singlePageView" value="true"/>
        <property name="page.header.lowerGroup.render" value="false"/>
        <property name="header">
            <ref bean="KSHeader_Empty" />
        </property>
        <!--<property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingEditMaintainableImpl" />-->
        <property name="items">
            <list>
                <ref bean="KS-PopulationWrapper-LinkSection"/>
                <ref bean="KS-PopulationWrapper-CreateByRule"/>
                <ref bean="KS-PopulationWrapper-CreateByCombiningPopulations"/>
            </list>
        </property>
        <property name="page.footer.items">
            <list>
                <bean parent="Uif-PrimaryActionButton" p:methodToCall="route" p:actionLabel="Create Population" p:performClientSideValidation="true"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}"  p:disabled="@{#dp.enableCreateButton}"/>
                <bean parent="Uif-ActionLink" p:methodToCall="cancel" p:actionLabel="Cancel"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CANCEL]}"/>
            </list>
        </property>
    </bean>

    <bean id="KS-PopulationWrapper-LinkSection" parent="Uif-HorizontalBoxSection" p:render="@{document.newMaintainableObject.dataObject.showLinkSection}">
        <property name="disclosure.render" value="false"/>
        <property name="cssClasses">
            <list merge="true">
                <value>ks-borderBottom</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:methodToCall="createByRule" p:style="font-weight:bold;" p:actionLabel="By Rule" p:render="@{document.newMaintainableObject.dataObject.showByRuleLink}"/>
                <bean parent="Uif-MessageField" p:messageText="By Rule" p:style="font-weight:bold;" p:render="@{!document.newMaintainableObject.dataObject.showByRuleLink}"/>
                <!--<bean parent="Uif-MessageField" p:messageText="  |  " p:style="font-weight:bold;"/>-->
                <bean parent="Uif-ActionLink" p:methodToCall="createByCombiningPopulations" p:style="font-weight:bold;" p:actionLabel="By Combining Populations" p:render="@{!#dp.showByRuleLink}"/>
                <bean parent="Uif-MessageField" p:messageText="By Combining Populations" p:style="font-weight:bold;" p:render="@{#dp.showByRuleLink}"/>
            </list>
        </property>
    </bean>

    <bean id="KS-PopulationWrapper-CreateByRule" parent="Uif-VerticalBoxSection" p:render="@{!#dp.showByRuleLink}">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="populationInfo.name" p:label="Name"
                      p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="40" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="populationInfo.descr" p:label="Description"
                      p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="43" />
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-PopulationWrapper-CreateByCombiningPopulations" parent="Uif-VerticalBoxSection" p:render="@{#dp.showByRuleLink}">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="populationInfo.name" p:label="Name"
                      p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="40" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="populationInfo.descr" p:label="Description"
                      p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="43" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="operationType" p:label="Operation"
                      p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:defaultValue="kuali.population.rule.type.union" p:required="true">
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl" />
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.population.keyvalue.OperationKeyValues" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="populationRuleInfo.referencePopulationId"
                      p:label="Reference Population" p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:required="true"
                      p:refreshWhenChangedPropertyNames="@{#dp.operationType}"
                      p:progressiveRender="@{#dp.operationType eq 'kuali.population.rule.type.exclusion'}">
        <!--p:readOnly="@{!(#dp.operationType eq 'kuali.population.rule.type.exclusion')}">-->
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="40" />
                    </property>
                </bean>
                <ref bean="KS-PopulationWrapper-AddPopulationsSection"/>

            </list>
        </property>
    </bean>

