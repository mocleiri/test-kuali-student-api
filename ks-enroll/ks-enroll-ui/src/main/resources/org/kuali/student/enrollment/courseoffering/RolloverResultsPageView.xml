        <bean id="KS-RolloverResultsPage-View" parent="KSFormView" p:applyDirtyCheck="true"
              p:id="rolloverResultsPageView" p:headerText="Roll Over Details"
              p:entryPageId="selectTermForRolloverDetails"
              p:viewHelperServiceClass="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingViewHelperServiceImpl"
              p:formClass="org.kuali.student.enrollment.class2.courseoffering.form.CourseOfferingRolloverManagementForm">
            <property name="header">
                <bean parent="Uif-HeaderOne"/>
            </property>

            <property name="footer">
                <bean parent="Uif-FooterBase"/>
            </property>

            <property name="items">
                <list>
                    <bean id="KS-RolloverResultsPage-SelectTermPage" parent="Uif-Page" p:disclosure.render="false"
                          p:id="selectTermForRolloverDetails"
                          p:headerText="">
                        <property name="header">
                            <bean parent="Uif-HeaderTwo"/>
                        </property>
                        <property name="items">
                            <list>
                               <bean parent="Uif-VerticalBoxGroup">
                                    <property name="items">
                                        <list>
                                             <bean parent="Uif-Message" p:messageText="Specify a term to review the details of the associated rollover."/>
                                             <bean parent="Uif-HorizontalBoxSection">
                                                  <property name="items">
                                                       <list>
                                                         <bean parent="Uif-InputField" p:propertyName="rolloverTargetTerm" p:label="Term">
                                                            <property name="control">
                                                               <bean parent="Uif-TextControl" p:size="10" p:watermarkText="Fall 2012p" p:minLength="10" p:maxLength="10"/>
                                                            </property>
                                                         </bean>
                                                         <bean parent="Uif-SecondaryActionButton" p:performClientSideValidation="true" p:actionLabel="Go" p:methodToCall="goRolloverTerm" p:valign="bottom"/>
                                                       </list>
                                                  </property>
                                             </bean>
                                             <bean parent="Uif-GridSection" p:headerText="Fall 2012 Rollover" p:layoutManager.numberOfColumns="5">
                                                <property name="items">
                                                    <list>
                                                        <bean parent="Uif-HorizontalBoxSubSection" p:headerText="Source Term">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:propertyName="rolloverSourceTerm"/>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection" p:headerText="Date Initiated">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:propertyName="dateInitiated"/>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection" p:headerText="Course Offerings Not Rolled Over" >
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:propertyName="courseOfferingsNotAllowed"/>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-InputField" p:propertyName="displayedTargetTermCode" p:label="Configuration Options" >
                                                            <property name="control">
                                                                <bean parent="Uif-VerticalCheckboxesControl">
                                                                    <property name="options">
                                                                        <list>
                                                                            <bean parent="Uif-KeyLabelPair" p:key="checkBox1" p:value="Exclude cancelled course offerings"/>
                                                                            <bean parent="Uif-KeyLabelPair" p:key="checkBox2" p:value="Refresh rollover with catalog versions"/>
                                                                            <bean parent="Uif-KeyLabelPair" p:key="checkBox3" p:value="Exclude scheduling information"/>
                                                                            <bean parent="Uif-KeyLabelPair" p:key="checkBox4" p:value="Exclude instructor information"/>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection" p:headerText="Date Completed">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:propertyName="dateCompleted"/>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection" p:headerText="Activity Offerings Not Rolled Over" >
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:propertyName="activityOfferingsNotAllowed"/>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                     </list>
                                                </property>
                                             </bean>
                                        </list>
                                    </property>
                                </bean>
                            </list>
                        </property>


                    </bean>
                </list>
            </property>
        </bean>
    </beans>