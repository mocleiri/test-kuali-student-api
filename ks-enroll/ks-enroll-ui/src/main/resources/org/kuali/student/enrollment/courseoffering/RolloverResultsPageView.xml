        <bean id="KS-RolloverResultsPage-View" parent="KSFormView" p:applyDirtyCheck="true"
              p:id="rolloverResultsPageView" p:headerText="Roll Over Details"
              p:entryPageId="selectTermForRolloverDetails"
              p:viewHelperServiceClass="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingViewHelperServiceImpl"
              p:formClass="org.kuali.student.enrollment.class2.courseoffering.form.CourseOfferingRolloverManagementForm">
            <property name="header">
                <bean parent="Uif-HeaderOne"/>
            </property>

            <property name="footer">
                <bean parent="Uif-FooterBase"/>
            </property>

            <property name="items">
                <list>
                    <bean id="KS-RolloverResultsPage-SelectTermPage" parent="Uif-Page" p:disclosure.render="false"
                          p:id="selectTermForRolloverDetails"
                          p:headerText="">
                        <property name="header">
                            <bean parent="Uif-HeaderTwo"/>
                        </property>
                        <property name="items">
                            <list>
                               <bean parent="Uif-VerticalBoxGroup">
                                    <property name="items">
                                        <list>
                                             <bean parent="Uif-Message" p:messageText="Specify a term to review the details of the associated rollover."/>
                                             <bean parent="Uif-HorizontalBoxSection">
                                                  <property name="items">
                                                       <list>
                                                         <bean parent="Uif-InputField" p:propertyName="rolloverTargetTerm" p:label="Term" p:required="true">
                                                            <property name="control">
                                                               <bean parent="Uif-TextControl" p:size="9" p:watermarkText="Fall 2012" p:minLength="9" p:maxLength="9" />
                                                            </property>

                                                         </bean>
                                                         <bean parent="Uif-SecondaryActionButton-Small" p:performClientSideValidation="true" p:actionLabel="Go" p:methodToCall="goRolloverTerm" p:valign="bottom"/>
                                                         <bean parent="Uif-Message" p:messageText="Enter Valid Term" p:render="@{rolloverSourceTerm=='' and rolloverTargetTerm!=''}" p:style="color:red;"/>
                                                       </list>
                                                  </property>
                                             </bean>
                                             <bean id="KS-RolloverResultsInfoSection" parent="Uif-GridSection" p:headerText="@{rolloverTargetTerm!=''?rolloverTargetTerm: 'Enter valid Term'} Rollover"
                                                   p:layoutManager.numberOfColumns="3" p:render="@{rolloverTargetTerm!='' and rolloverSourceTerm!=''}">
                                                <property name="items">
                                                    <list>
                                                        <bean parent="Uif-HorizontalBoxSubSection" p:colSpan="3" p:style="background-color:#C0C0C0;">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:label="Status"
                                                                          p:propertyName="statusField">
                                                                    </bean>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:label="Source Term"
                                                                          p:labelPlacement="TOP" p:fieldLabel.renderColon="false"
                                                                          p:propertyName="rolloverSourceTerm">
                                                                    </bean>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:label="Date Initiated"
                                                                          p:labelPlacement="TOP" p:fieldLabel.renderColon="false"
                                                                          p:propertyName="dateInitiated">
                                                                    </bean>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:label="Course Offerings"
                                                                          p:labelPlacement="TOP" p:fieldLabel.renderColon="false"
                                                                          p:propertyName="courseOfferingsAllowed">
                                                                    </bean>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-InputField" p:labelPlacement="TOP"
                                                                          p:propertyName="displayedTargetTermCode"
                                                                          p:fieldLabel.renderColon="false" p:label="Configuration Options">
                                                                        <property name="control">
                                                                            <bean parent="Uif-VerticalCheckboxesControl">
                                                                                <property name="options">
                                                                                    <list>
                                                                                        <bean parent="Uif-KeyLabelPair" p:key="checkBox1" p:value="Exclude cancelled course offerings"/>
                                                                                        <bean parent="Uif-KeyLabelPair" p:key="checkBox2" p:value="Refresh rollover with catalog versions"/>
                                                                                        <bean parent="Uif-KeyLabelPair" p:key="checkBox3" p:value="Exclude scheduling information"/>
                                                                                        <bean parent="Uif-KeyLabelPair" p:key="checkBox4" p:value="Exclude instructor information"/>
                                                                                    </list>
                                                                                </property>
                                                                            </bean>
                                                                        </property>
                                                                    </bean>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:label="Date Completed"
                                                                          p:labelPlacement="TOP" p:fieldLabel.renderColon="false"
                                                                          p:propertyName="dateCompleted">
                                                                    </bean>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                        <bean parent="Uif-HorizontalBoxSubSection">
                                                            <property name="items">
                                                                <list>
                                                                    <bean parent="Uif-DataField" p:label="Activity Offerings"
                                                                          p:labelPlacement="TOP" p:fieldLabel.renderColon="false"
                                                                          p:propertyName="activityOfferingsAllowed">
                                                                    </bean>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                    </list>
                                                </property>
                                             </bean>   <!-- grid section-->
                                             <bean parent="Uif-TableCollectionSection" p:headerText="Non-Transitioned Course Offerings"
                                                   p:layoutManager.numberOfColumns="3" p:renderAddLine="false"
                                                   p:renderLineActions="false" p:render="@{rolloverTargetTerm!='' and rolloverSourceTerm!=''}">

                                                 <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.SocRolloverResultItemWrapper"/>
                                                 <property name="propertyName" value="socRolloverResultItems"/>
                                                 <property name="collectionLookup.quickfinderAction.render" value="false" />
                                                 <property name="layoutManager.renderSequenceField" value="false" />
                                                 <property name="layoutManager.applyDefaultCellWidths" value="true" />
                                                 <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                                 <property name="items">
                                                   <list>

                                                             <bean parent="Uif-DataField" p:propertyName="course"/>
                                                             <bean parent="Uif-DataField" p:propertyName="state"/>
                                                             <bean parent="Uif-DataField" p:propertyName="message"/>
                                                   </list>
                                               </property>
                                             </bean>  <!-- -->
                                        </list>
                                    </property>
                                </bean>
                            </list>
                        </property>
                    </bean>
                </list>
            </property>
        </bean>
    </beans>