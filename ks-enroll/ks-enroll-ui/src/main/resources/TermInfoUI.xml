    <!-- TermInfo-->
    <import resource="classpath:ks-TermInfo-dictionary.xml"/>
    <import resource="classpath:UifKSDefinitions.xml"/>
    
    <bean id="TermInfoUI" parent="TermInfo-parent">
       	<property name="objectLabel" value="Term Info"/>
        <property name="titleAttribute" value="key"/>
        <property name="attributes">
            <list>
                <ref bean="TermInfoUI.key"/>
                <ref bean="TermInfoUI.typeKey"/>
                <ref bean="TermInfoUI.startDate"/>
                <ref bean="TermInfoUI.endDate"/>  
                
                <!--  other attributes not used by UI -->           
                <ref bean="TermInfo.stateKey"/>
                <ref bean="TermInfo.name"/>       
            </list>
        </property>
        <property name="complexAttributes">
            <list>
                <ref bean="TermInfo.descr"/>          
            </list>
        </property>
    </bean>
    
	<bean id="TermInfoUI.key" parent="TermInfo.key-parent">
        <property name="label" value="Key" />
        <property name="required" value="false"/>
        <property name="unique" value="true"/> 
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint"/>
        </property>
    	<property name="controlField">
      		<bean parent="TextControl" p:size="60"/>
    	</property> 
    	<property name="control">
      		<bean parent="TextControlDefinition" p:size="60"/>
	    </property>
    </bean>

	<bean id="TermInfoUI.typeKey" parent="TermInfo.typeKey-parent">
        <property name="label" value="Term" />
        <property name="required" value="true"/>
        <property name="unique" value="true"/> 
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint"/>
        </property>
    	<property name="controlField">
      		<bean parent="TextControl" p:size="60"/>
    	</property>
    	<property name="control">
      		<bean parent="TextControlDefinition" p:size="60"/>
	    </property>
        <property name="summary"  value="Type of the Term"/>
    </bean>
    
    <bean id="TermInfoUI.startDate" parent="TermInfo.startDate-parent">
        <property name="label" value="Start Date" />
        <property name="required" value="true"/>
        <property name="minLength" value="10" />
        <property name="controlField">
      		<bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
    	</property>
    	<property name="formatterClass" value="org.kuali.rice.core.web.format.DateFormatter"/>
        <property name="summary"  value="Official start date of the Term"/>
    </bean>

    <bean id="TermInfoUI.endDate" parent="TermInfo.endDate-parent">
        <property name="label" value="End Date" />
        <property name="required" value="true"/>
        <property name="minLength" value="10" />
        <property name="controlField">
      		<bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
    	</property>
    	<property name="formatterClass" value="org.kuali.rice.core.web.format.DateFormatter"/>
        <property name="summary"  value="Official end date of the Term"/>
    </bean>

  <bean id="TermInfo-LookupView" parent="KSLookupView">
    <property name="title" value="Term Info Lookup (by Key)" />
    <property name="dataObjectClassName" value="org.kuali.student.enrollment.acal.dto.TermInfo" />
    <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.acal.service.TermInfoLookupableImpl" />
    
    <property name="criteriaFields">
      <list>
        <bean parent="LookupCriteriaAttributeField" p:propertyName="key" />
<!--    <bean parent="LookupCriteriaAttributeField" p:propertyName="typeKey"/> -->
      </list>
    </property>
    <property name="resultFields">
      <list>
		<bean parent="AttributeField" p:propertyName="key" />
        <bean parent="AttributeField" p:propertyName="typeKey" /> 		
        <bean parent="AttributeField" p:propertyName="startDate" />
        <bean parent="AttributeField" p:propertyName="endDate" />       
      </list>
    </property>
  </bean>

  <bean id="TermInfo-InquiryView" parent="KSInquiryView">
     <property name="title" value="Term Info Inquiry"/>
     <property name="dataObjectClassName" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
     <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.acal.service.TermInfoInquiryViewHelperServiceImpl" />
     
     <property name="Items">
         <list>
           <bean parent="GroupSectionGridLayout">
             <property name="layoutManager.numberOfColumns" value="2"/>
             <property name="title" value="Term Info Inquiry"/>
             <property name="items">
               <list>
                <bean parent="AttributeField" p:propertyName="key"/>
                <bean parent="AttributeField" p:propertyName="typeKey"/>
                <bean parent="AttributeField" p:propertyName="startDate"/>
                <bean parent="AttributeField" p:propertyName="endDate"/>                
               </list>
             </property>             
           </bean>
         </list>
     </property>
  </bean>
    
  <bean id="TermInfo-MaintenanceView" parent="KSMaintenanceView">
     <property name="title" value="TermInfo Maintenance"/>
     <property name="dataObjectClassName" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
     <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.acal.service.TermInfoMaintainableImpl" />
     
     <property name="items">
       <list merge="true">
          <bean parent="MaintenanceGroupSectionGridLayout">
          	 <property name="title" value="Term"/>
             <property name="items">
               <list>
                <bean parent="AttributeField" p:propertyName="typeKey">
                    <property name="control">
              			<bean parent="SelectControl"/>
            		</property>
            		<property name="optionsFinder">
              			<bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermInfoTypeKeyValues"/>
            		</property>
                </bean>
                <bean parent="AttributeField" p:propertyName="startDate"/>
                <bean parent="AttributeField" p:propertyName="endDate"/>
               </list>
             </property>             
          </bean> 
          <!-- 
          <bean parent="MaintenanceCollectionGroupSection">
              <property name="title" value="Academic Calendar Terms"/>  
              <property name="collectionObjectClass" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
              <property name="propertyName" value="fiscalOfficer.accounts"/>
              <property name="items">
                <list>
                  <bean parent="AttributeField" p:propertyName="startDate"/>
                  <bean parent="AttributeField" p:propertyName="endDate"/>
                </list>
              </property>   
              <property name="layoutManager.summaryTitle" value="Term"/> 
              <property name="layoutManager.summaryFields">
                <list>
                  <value>number</value>
                </list>
              </property>
           </bean> 
           -->       
       </list>
     </property>
  </bean>  


  <bean id="TermInfoMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
    <property name="dataObjectClass" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
    <property name="maintainableClass" value="org.kuali.student.enrollment.class2.acal.service.TermInfoMaintainableImpl"/>
    <property name="documentTypeName" value="TermInfoMaintenanceDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.rice.krad.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    <property name="lockingKeys">
      <list>
        <value>key</value>
      </list>
    </property>
  </bean>  

</beans>