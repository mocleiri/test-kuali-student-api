	<!-- Overwrite some RegistrationGroupInfo attributes for UI -->
    <import resource="classpath:ks-RegistrationGroupInfo-dictionary.xml"/>

    <bean id="RegistrationGroupInfoUI" parent="RegistrationGroupInfo-parent">
        <property name="objectLabel" value="Registration Group"/>
        <property name="titleAttribute" value="id"/>
        <property name="attributes">
            <list>

                <!--  other attributes not used by UI -->
                <ref bean="RegistrationGroupInfo.courseOfferingId"/>
                <ref bean="RegistrationGroupInfo.registrationCode"/>
                <ref bean="RegistrationGroupInfo.isHonorsOffering"/>
                <ref bean="RegistrationGroupInfo.maximumEnrollment"/>
                <ref bean="RegistrationGroupInfo.minimumEnrollment"/>
                <ref bean="RegistrationGroupInfo.hasWaitlist"/>
                <ref bean="RegistrationGroupInfo.waitlistTypeKey"/>
                <ref bean="RegistrationGroupInfo.waitlistMaximum"/>
                <ref bean="RegistrationGroupInfo.isWaitlistCheckinRequired"/>
                <ref bean="RegistrationGroupInfo.id"/>
                <ref bean="RegistrationGroupInfo.typeKey"/>
                <ref bean="RegistrationGroupInfo.stateKey"/>
                <ref bean="RegistrationGroupInfo.name"/>
            </list>
        </property>
        <property name="complexAttributes">
            <list>
                <ref bean="RegistrationGroupInfo.waitlistCheckinFrequency"/>
                <ref bean="RegistrationGroupInfo.descr"/>
                <ref bean="RegistrationGroupInfo.meta"/>
            </list>
        </property>
    </bean>

    <bean id="RegistrationGroupInfoUI.maximumEnrollment" parent="RegistrationGroupInfo.maximumEnrollment-parent">
        <property name="label" value="Maximum Enrollment" />
        <property name="required" value="false"/>
        <property name="unique" value="false"/>
        <property name="validationPattern" >
            <bean parent="NumericValidationPattern" />
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="10"/>
        </property>
    </bean>

</beans>