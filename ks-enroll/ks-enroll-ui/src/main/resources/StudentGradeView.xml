   <bean id="studentGradeView" parent="KSFormView" p:header.style="border-bottom: 2px solid #000000">
   	  <property name="id" value="StudentGradeView"/>
      <property name="title" value="@{title}" />
	  <property name="entryPageId" value="selectTermPage"/>
      <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.grading.service.impl.GradingViewHelperServiceImpl"/>

      <property name="header">
        <bean parent="HeaderTwo"/>
      </property>

       <property name="additionalCssFiles">
           <list >
                <value>/krad/css/ks/ks-theme.css</value>
                <value>/krad/css/ks/fss-theme-ks.css</value>
                <value>/ks-enroll/css/grading.css</value>
           </list>
       </property>

      <property name="items">
          <list>
          	<bean parent="Page" p:id="selectTermPage">
          		<property name="items">
               		<list>
          				<ref bean="studentGradeView-selectTerm"/>
 					</list>
 				</property>
                <property name="footer">
                    <ref bean="Student_Footer_selectTerm" />
                </property>
 			</bean>
              <bean parent="Page" p:id="creditDetailsPage">
                    <property name="items">
                         <list>
                            <ref bean="studentGradeView-creditDetails"/>
                       </list>
                   </property>
                  <property name="footer">
                    <ref bean="Student_Footer_creditDetails" />
                  </property>
               </bean>
          </list>
      </property>
       <property name="footer.render" value="false"/>
      <property name="formClass" value="org.kuali.student.enrollment.class2.grading.form.StudentGradeForm" />
   </bean>

   <bean id="studentGradeView-selectTerm" parent="GroupGridLayout">
       <property name="disclosure.render" value="false"/>
      <property name="items">
        <list>
          <bean parent="InputField_Form" p:propertyName="selectedTerm" p:label="Select Term" p:required="true">
            <property name="control">
              <bean parent="SelectControl"/>
            </property>
            <property name="optionsFinder">
                <bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermIdValues"/>
            </property>
          </bean>
        </list>
      </property>
   </bean>

    <bean id="studentGradeView-creditDetails" parent="CollectionGroupTableLayout" p:layoutManager.numberOfColumns="3">
      <property name="disclosure.render" value="false"/>
      <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.grading.dataobject.StudentCredit"/>
      <property name="propertyName" value="creditList"/>
      <property name="renderAddLine" value="false"/>
      <property name="renderLineActions" value="false"/>
      <property name="layoutManager.sequencePropertyName" value="courseId"/>
      <property name="layoutManager.sequenceFieldPrototype.label" value="Course ID"/>
      <property name="bindingInfo.bindToForm" value="true"/>
      <property name="items">
        <list>
          <bean parent="InputField" p:propertyName="courseName" p:label="Course Name" p:readOnly="true">
              <property name="control">
              <bean parent="TextControl" p:size="26" />
            </property>
          </bean>
          <bean parent="InputField" p:propertyName="credits" p:label="Credits" p:readOnly="true">
              <property name="control">
              <bean parent="TextControl" p:size="26" />
            </property>
          </bean>
          <bean parent="InputField" p:propertyName="grade" p:label="Grade" p:readOnly="true">
            <property name="control">
              <bean parent="TextControl" p:size="26" >
              </bean>
            </property>
          </bean>
        </list>
      </property>
   </bean>

   <bean id="Student_Footer_selectTerm" parent="Footer">
      <property name="items">

        <list>
          <bean parent="ActionField_Secondary" p:methodToCall="viewGrades" p:actionLabel="View Grades"/>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
        </list>
      </property>
  </bean>

  <bean id="Student_Footer_creditDetails" parent="Footer">
      <property name="items">

        <list>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
          <bean parent="ActionLinkField" p:methodToCall="backToTerm" p:actionLabel="Back to Term Records"/>
        </list>
      </property>
  </bean>

</beans>