   <bean id="gradingView" parent="KSFormView" p:header.style="border-bottom: 2px solid #000000">
   	  <property name="id" value="GradingView"/>
      <property name="title" value="@{title}" />
	  <property name="entryPageId" value="selectTermPage"/>
      <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.grading.service.impl.GradingViewHelperServiceImpl"/>

      <property name="header">
        <bean parent="HeaderTwo"/>
      </property>

      <!--<property name="propertyReplacers">
        <list>
            <bean parent="PropertyReplacer" p:propertyName="title"
              p:condition="#view.currentPageId eq 'page2'" p:replacement="@{selectedCourseOffering.courseTitle}"/>
        </list>
      </property>-->
      <property name="additionalCssFiles">
      <list >
        <value>/krad/css/ks/ks-theme.css</value>
        <value>/krad/css/ks/fss-theme-ks.css</value>
        <value>/ks-enroll/css/grading.css</value>
      </list>
    </property>

      <property name="items">
          <list>
            <bean parent="Page" p:id="selectTermPage">
          		<property name="items">
               		<list>
          				<ref bean="studentGradeView-page1"/>
 					</list>
 				</property>
                <property name="footer">
                    <ref bean="GradingView_Footer_selectTermPage" />
                </property>
 			</bean>
          	<bean parent="Page" p:id="page1">
          		<property name="items">
               		<list>
          				<ref bean="GradingView-page1"/>
 					</list>
 				</property>
                <property name="footer">
                    <ref bean="Grading_Footer_page1" />
                </property>
 			</bean>
              <bean parent="Page" p:id="page2">
                    <property name="items">
                         <list>
                            <ref bean="GradingView-page2"/>
                       </list>
                   </property>
                  <property name="footer">
                    <ref bean="Grading_Footer_page2" />
                  </property>
               </bean>
          </list>
      </property>
      <property name="footer.render" value="false"/>
      <property name="formClass" value="org.kuali.student.enrollment.class2.grading.form.GradingForm" />
   </bean>
   
   <bean id="GradingView-page1" parent="GroupGridLayout">
       <property name="accordion.render" value="false"/>
      <property name="items">
        <list>
          <ref bean="courseOfferingList"/>
        </list>
      </property>
   </bean>

    <bean id="GradingView_Footer_selectTermPage" parent="Footer">
      <property name="items">

        <list>
          <bean parent="ActionField_Secondary" p:methodToCall="loadCourses" p:actionLabel="Next"/>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
        </list>
      </property>
  </bean>

    <bean id="courseOfferingList" parent="CollectionGroup">
      <property name="summary" value="@{selectedTerm}"/>
      <property name="styleClasses" value="group-border"/>
      <property name="summaryMessageField.styleClasses" value="font-bold"/>
      <property name="accordion.render" value="false"/>
      <property name="collectionObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo"/>
      <property name="propertyName" value="courseOfferingInfoList"/>
      <property name="renderAddLine" value="false"/>
      <property name="renderLineActions" value="false"/>
      <property name="bindingInfo.bindToForm" value="true"/>
      <property name="layoutManager.lineGroupPrototype.accordion.render" value="false"/>
      <property name="layoutManager.lineGroupPrototype.footer.render" value="false"/>
      <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
      <property name="header.styleClasses" value="header-borderBottom"/>
      <property name="header.group">
         <bean parent="GroupBodyOnly">
             <property name="layoutManager.orientation" value="VERTICAL"/>
             <property name="items">
                <list>
                   <bean parent="MessageField" p:messageText="My Courses" p:styleClasses="title-bold"/>
                   <bean parent="MessageField" p:messageText="Click to view/edit roster or enter grades" p:styleClasses="font-light"/>
                </list>
             </property>
         </bean>
      </property>
      <property name="items">
         <list>
            <bean parent="ActionLinkField" p:methodToCall="loadStudents" p:actionLabel="@{#line.courseTitle}" p:labelField.render="false" p:onClickScript="writeHiddenToForm(&quot;actionParameters[selectedLineIndex]&quot;, &quot;@{#index}&quot;);"/>
         </list>
      </property>
      <property name="footer">
          <bean parent="Footer" p:styleClasses="header-borderTop">
            <property name="items">
                <list>
                    <bean parent="MessageField" p:messageText="Grades are due:" p:styleClasses="font-light12"/>
                    <bean parent="MessageField" p:messageText="@{gradeDueDate}" p:styleClasses="font-light"/>
                </list>
            </property>
          </bean>
      </property>
   </bean>

    <bean id="GradingView-page2" parent="GroupGridLayout">
       <property name="accordion.render" value="false"/>
      <property name="items">
        <list>
          <ref bean="gradeStudentGroup"/>
        </list>
      </property>
   </bean>

    <bean id="gradeStudentGroup" parent="CollectionGroupTableLayout" p:layoutManager.numberOfColumns="3">
      <property name="accordion.render" value="false"/>
      <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.grading.dataobject.GradeStudent"/>
      <property name="propertyName" value="students"/>
      <property name="renderAddLine" value="false"/>
      <property name="layoutManager.sequencePropertyName" value="studentId"/>
      <property name="layoutManager.sequenceFieldPrototype.label" value="Student ID"/>
      <property name="layoutManager.sequenceFieldPrototype.fieldInquiry.dataObjectClassName" value="org.kuali.rice.kim.bo.impl.PersonImpl"/>
      <property name="layoutManager.sequenceFieldPrototype.fieldInquiry.inquiryParameters">
        <map>
          <entry key="form.studentId" value="principalId"/>
        </map>
      </property>
      <property name="bindingInfo.bindToForm" value="true"/>
      <property name="renderLineActions" value="@{readOnly eq false}"/>
      <property name="items">
        <list>
          <bean parent="AttributeField" p:propertyName="firstName" p:label="First Name" p:readOnly="true">
              <property name="control">
              <bean parent="TextControl" p:size="26" />
            </property>
          </bean>
          <bean parent="AttributeField" p:propertyName="lastName" p:label="Last Name" p:readOnly="true">
              <property name="control">
              <bean parent="TextControl" p:size="26" />
            </property>
          </bean>
          <bean parent="AttributeField" p:propertyName="selectedGrade" p:label="Grade" p:finalizeMethodToCall="populateGradeOptions" p:readOnly="@{readOnly}">
            <property name="control">
              <bean parent="SelectControl">
              </bean>
            </property>
              <property name="propertyReplacers">
             <list>
                <bean parent="PropertyReplacer" p:propertyName="control" p:condition="#line.percentGrade eq true">
                    <property name="replacement">
                    <bean parent="TextControl" p:size="26"/>
              </property>
                </bean>
             </list>
          </property>
          </bean>
        </list>
      </property>
        <property name="actionFields">
              <list>
                  <bean parent="ActionField_Small" p:methodToCall="unassignGrade" p:actionLabel="No Grade" p:title="No Grade"/>
              </list>
        </property>
   </bean>

   <bean id="Grading_Footer_page1" parent="Footer">
      <property name="items">
        <list>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
        </list>
      </property>
  </bean>

   <bean id="Grading_Footer_page2" parent="Footer">
      <property name="items">
        <list>
          <bean parent="ActionField_Secondary" p:clientSideJs="saveForm();" p:actionLabel="Save" p:render="@{readOnly eq false}"/>
          <bean parent="ActionField_Secondary" p:actionLabel="Submit" p:render="@{readOnly eq false}" p:methodToCall="submit"/>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
          <bean parent="ActionLinkField" p:methodToCall="backToGrading" p:actionLabel="Back to Grading" p:style="text-align:center;"/>
        </list>

      </property>
  </bean>

</beans>