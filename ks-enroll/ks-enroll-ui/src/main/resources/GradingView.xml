   <bean id="gradingView" parent="FormView">
   	  <property name="id" value="GradingView"/>
      <property name="title" value="Grading" />
	  <property name="entryPageId" value="page1"/>
      <property name="items">
          <list>
          	<bean parent="Page_Accordion" p:id="page1">
          		<property name="items">
               		<list>
          				<ref bean="GradingView-page1"/>
 					</list>
 				</property>
                <property name="footer">
                    <ref bean="Footer_page1" />
                </property>
 			</bean>
          </list>
      </property>
        <property name="additionalCssFiles" ref="ks-css"/>
       <property name="footer.render" value="false"/>
      <property name="formClass" value="org.kuali.student.enrollment.class2.grading.form.GradingForm" />
      <!--<property name="defaultBindingObjectPath" value="academicCalendarInfo" />-->
   </bean>
   
   <bean id="GradingView-page1" parent="GroupGridLayout">
      <property name="title" value="Select Course"/>
       <property name="accordion.render" value="false"/>
      <property name="items">
        <list>
          <bean parent="AttributeField_Form" p:propertyName="selectedCourse" p:label="Course" p:required="true" p:maxLength="50">
            <property name="control">
              <bean parent="SelectControl"/>
            </property>
            <property name="optionsFinder">
              <bean class="org.kuali.student.enrollment.class2.grading.keyvalue.CourseOfferingKeyValues"/>
            </property>
          </bean>
        </list>
      </property>
   </bean>

    <bean id="GradingView-page2" parent="GroupGridLayout">
      <property name="title" value="Select Course"/>
       <property name="accordion.render" value="false"/>
      <property name="items">
        <list>
          <bean parent="AttributeField_Form" p:propertyName="selectedCourse" p:label="Course" p:required="true" p:maxLength="50">
            <property name="control">
              <bean parent="SelectControl"/>
            </property>
            <property name="optionsFinder">
              <bean class="org.kuali.student.enrollment.class2.grading.keyvalue.CourseOfferingKeyValues"/>
            </property>
          </bean>
        </list>
      </property>
   </bean>

   <bean id="Footer_page1" parent="Footer">
      <property name="items">

        <list>
          <bean parent="ActionField_Secondary" p:methodToCall="loadGradeRoster" p:actionLabel="Load Grade Roster"/>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
        </list>

      </property>
  </bean>

</beans>