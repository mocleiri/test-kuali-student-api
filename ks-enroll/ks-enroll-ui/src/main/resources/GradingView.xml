   <bean id="gradingView" parent="KSFormView">
   	  <property name="id" value="GradingView"/>
      <property name="title" value="Grading" />
	  <property name="entryPageId" value="page1"/>
      <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.grading.service.impl.GradingViewHelperServiceImpl"/>
       
      <property name="items">
          <list>
          	<bean parent="Page" p:id="page1">
          		<property name="items">
               		<list>
          				<ref bean="GradingView-page1"/>
 					</list>
 				</property>
                <property name="footer">
                    <ref bean="Grading_Footer_page1" />
                </property>
 			</bean>
              <bean parent="Page" p:id="page2">
                    <property name="items">
                         <list>
                            <ref bean="GradingView-page2"/>
                       </list>
                   </property>
                  <property name="footer">
                    <ref bean="Grading_Footer_page2" />
                  </property>
               </bean>
          </list>
      </property>
       <property name="footer.render" value="false"/>
      <property name="formClass" value="org.kuali.student.enrollment.class2.grading.form.GradingForm" />
   </bean>
   
   <bean id="GradingView-page1" parent="GroupGridLayout">
       <property name="accordion.render" value="false"/>
      <property name="items">
        <list>
          <ref bean="courseOfferingList"/>
        </list>
      </property>
   </bean>

    <bean id="courseOfferingList" parent="CollectionGroup">
      <property name="title" value="My Courses"/>
      <property name="summary" value="Click to view/edit roster or enter grades"/>
      <property name="accordion.render" value="false"/>
      <property name="collectionObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo"/>
      <property name="propertyName" value="courseOfferingInfoList"/>
      <property name="renderAddLine" value="false"/>
      <property name="renderLineActions" value="false"/>
      <property name="bindingInfo.bindToForm" value="true"/>
      <property name="layoutManager.lineGroupPrototype.accordion.render" value="false"/>
      <property name="layoutManager.lineGroupPrototype.footer.styleClasses" value=""/>
      <property name="layoutManager.lineGroupPrototype.header.styleClasses" value=""/>
        <property name="items">
          <list>
            <bean parent="ActionLinkField" p:methodToCall="loadStudents" p:actionLabel="@{#line.courseTitle}" p:labelField.render="false" p:onClickScript="writeHiddenToForm(&quot;actionParameters[selectedLineIndex]&quot;, &quot;@{#index}&quot;);"/>
          </list>
        </property>
   </bean>

    <bean id="GradingView-page2" parent="GroupGridLayout">
       <property name="accordion.render" value="false"/>
      <property name="items">
        <list>
          <ref bean="gradeStudentGroup"/>
        </list>
      </property>
   </bean>

    <bean id="gradeStudentGroup" parent="CollectionGroupTableLayout" p:layoutManager.numberOfColumns="3">
      <property name="title" value="Grade Roster"/>
      <property name="accordion.render" value="false"/>
      <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.grading.dataobject.GradeStudent"/>
      <property name="propertyName" value="students"/>
      <property name="renderAddLine" value="false"/>
      <property name="layoutManager.sequencePropertyName" value="studentId"/>
      <property name="layoutManager.sequenceFieldPrototype.label" value="Student ID"/>
      <property name="bindingInfo.bindToForm" value="true"/>
      <property name="items">
        <list>
          <bean parent="AttributeField" p:propertyName="firstName" p:label="First Name" p:readOnly="true">
              <property name="control">
              <bean parent="TextControl" p:size="26" />
            </property>
          </bean>
          <bean parent="AttributeField" p:propertyName="lastName" p:label="Last Name" p:readOnly="true">
              <property name="control">
              <bean parent="TextControl" p:size="26" />
            </property>
          </bean>
          <bean parent="AttributeField" p:propertyName="selectedGrade" p:label="Grade" p:finalizeMethodToCall="populateGradeOptions">
            <property name="control">
              <bean parent="SelectControl">
              </bean>
            </property>
              <property name="propertyReplacers">
             <list>
                <bean parent="PropertyReplacer" p:propertyName="control" p:condition="#line.percentGrade eq false">
                    <property name="replacement">
                    <bean parent="TextControl" p:size="26"/>
              </property>
                </bean>
             </list>
          </property>
          </bean>
        </list>
      </property>
        <property name="actionFields">
              <list>
                  <bean parent="ActionField_Small" p:methodToCall="unassignGrade" p:actionLabel="No Grade" p:title="No Grade" />
              </list>
        </property>
   </bean>

   <bean id="Grading_Footer_page1" parent="Footer">
      <property name="items">

        <list>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
        </list>
      </property>
  </bean>

   <bean id="Grading_Footer_page2" parent="Footer">
      <property name="items">
        <list>
          <bean parent="ActionField_Secondary" p:clientSideJs="saveForm();" p:actionLabel="Save" p:render="@{saveEnabled eq true}"/>
          <bean parent="ActionField_Secondary" p:actionLabel="Submit" p:render="@{submitEnabled eq true}"/>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
        </list>

      </property>
  </bean>

</beans>