    <bean id="ks_studentFacing_registrationView" parent="KSFormView">
        <property name="id" value="studentRegistrationView"/>
        <property name="title" value="Registration"/>
        <property name="singlePageView" value="true" />
        <property name="page">
            <bean parent="Page" />
        </property>
        <property name="footer">
          <bean parent="Footer"/>
        </property>
        <property name="items">
            <list>
                <ref bean="ks_studentFacing_registrationView_section1"/>
                <ref bean="ks_studentFacing_registrationView_section2"/>
                <ref bean="ks_studentFacing_registrationView_nosection_group1"/>
                <ref bean="ks_studentFacing_registrationView_resultsection_courseOfferings"/>
            </list>
        </property>
        <property name="formClass" value="org.kuali.student.enrollment.class2.registration.form.RegistrationForm"/>
<!--
        <property name="defaultBindingObjectPath" value="travelAccount1"/>
-->
    </bean>

    <bean id="ks_studentFacing_registrationView_section1" parent="GroupSection">
        <property name="title" value="Browse Classes"/>
        <property name="items">
            <list>
                <ref bean="ks_studentFacing_registrationView_section1_group1"/>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_section2" parent="GroupSection">
        <property name="title" value="Fast Find"/>
        <property name="items">
            <list>
                <ref bean="ks_studentFacing_registrationView_section2_group1"/>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_section1_group1" parent="GroupGridLayout">
        <property name="items">
            <list>
                <bean parent="AttributeField_Form" p:propertyName="termKey">
                    <property name="control">
                        <bean parent="HiddenControl"/>
                    </property>
                </bean>
                <bean parent="AttributeField_Form" p:propertyName="subjectArea" p:label="By Programs/Departments 2"
                      p:readOnly="false" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="SelectControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.SubjectAreaKeyValues"/>
                    </property>
<!--
                    <property name="fieldLookup.dataObjectClassName" value="edu.sampleu.travel.bo.TravelAccount"/>
                    <property name="fieldLookup.fieldConversions">
                        <map>
                            <entry key="number" value="field1"/>
                        </map>
                    </property>
-->
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_section2_group1" parent="GroupGridLayout">
        <property name="items">
            <list>
                <bean parent="AttributeField_Form" p:propertyName="courseNameOrNumber" p:label="Enter the Course Name or Number"
                      p:readOnly="false" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="TextControl" p:size="20"/>
                    </property>
<!--
                    <property name="fieldSuggest.render" value="true"/>
                    <property name="fieldSuggest.sourcePropertyName" value="accountTypeCode"/>
                    <property name="fieldSuggest.suggestQuery.dataObjectClassName"
                              value="edu.sampleu.travel.bo.TravelAccountType"/>
-->
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_nosection_group1" parent="GroupGridLayout">
        <property name="items">
            <list>
                <bean parent="ActionField" p:methodToCall="searchCourseOfferings" p:actionLabel="View Courses"/>
                <bean parent="ActionField" p:methodToCall="clearSearchValues" p:actionLabel="Clear Values"/>
            </list>
        </property>
    </bean>



    <bean id="ks_studentFacing_registrationView_resultsection_courseOfferings" parent="CollectionGroup">
        <property name="title"
            value="Click a class to show/hide detail" />
        <property name="accordion.render" value="true" />
        <property name="collectionObjectClass"
            value="org.kuali.student.enrollment.class2.registration.dto.CourseOfferingWrapper" />
        <property name="propertyName" value="courseOfferingWrappers" />
        <property name="readOnly" value="true" />
<!--
        <property name="layoutManager.renderSequenceField" value="true"/>
        <property name="layoutManager.renderAddLine" value="false" />
        <property name="layoutManager.tableTools.render" value="false"/>
-->
        <property name="layoutManager.summaryFields">
            <list>
                <value>courseOffering.courseTitle</value>
            </list>
        </property>
        <property name="items">
            <list>
<!--
                <bean parent="AttributeField" p:propertyName="courseOffering.courseTitle" p:label="Course" />
                <bean parent="AttributeField" p:propertyName="field2" p:label="Field 2"
                    p:required="true" />
                <bean parent="AttributeField" p:propertyName="field3" p:label="Field 3"
                    p:required="true" />
                <bean parent="AttributeField" p:propertyName="field4" p:label="Field 4"
                    p:required="true" />
-->
            </list>
        </property>
        <property name="subCollections">
            <list>
                <ref bean="ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups" />
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups" parent="CollectionGroup">
        <property name="accordion.render" value="false" />
        <property name="collectionObjectClass"
            value="org.kuali.student.enrollment.class2.registration.dto.RegistrationGroupWrapper" />
        <property name="propertyName" value="registrationGroupWrappers" />
<!-- TODO delyea - figure out if readOnly means no sorting and if that matters -->
        <property name="readOnly" value="true" />
<!--
        <property name="layoutManager.renderSequenceField" value="true"/>
        <property name="layoutManager.renderAddLine" value="false" />
        <property name="layoutManager.tableTools.render" value="false"/>
-->
        <property name="items">
            <list>
                <bean parent="AttributeField" p:propertyName="registrationGroup.registrationCode" p:label="Registration Code" />
<!--
                <bean parent="AttributeField" p:propertyName="field2" p:label="SubField 2"
                    p:required="true" />
                <bean parent="AttributeField" p:propertyName="field3" p:label="SubField 3"
                    p:required="true" />
                <bean parent="AttributeField" p:propertyName="field4" p:label="SubField 4"
                    p:required="true" />
-->
            </list>
        </property>
    </bean>


</beans>