    <bean id="ks_studentFacing_registrationView" parent="KSFormView">
        <property name="id" value="studentRegistrationView"/>
        <property name="title" value="Registration"/>
        <property name="entryPageId" value="termSelectionPage"/>
        <property name="styleClasses" value="registration"/>
        <property name="viewHelperServiceClassName"
                  value="org.kuali.student.enrollment.class2.registration.service.RegistrationViewHelperServiceImpl"/>
        <property name="footer">
            <bean parent="Footer"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Page" p:id="termSelectionPage">
                    <property name="items">
                        <list>
                            <ref bean="termSelector"/>
                            <ref bean="Registration_Footer_termSelectionPage"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Page" p:id="registrationPage">
                    <property name="items">
                        <list>
                            <ref bean="registration_grid_layout"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="formClass" value="org.kuali.student.enrollment.class2.registration.form.RegistrationForm"/>
    </bean>

    <bean id="termSelector" parent="GroupGridLayout">
        <property name="accordion.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="AttributeField_Form" p:propertyName="termKey" p:label="Select Term" p:required="true">
                    <property name="control">
                        <bean parent="SelectControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermKeyValues"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="Registration_Footer_termSelectionPage" parent="Footer">
        <property name="items">
            <list>
                <bean parent="ActionField_Secondary" p:methodToCall="showRegistration"
                      p:actionLabel="Show Registration"/>
            </list>
        </property>
    </bean>

    <bean id="registration_grid_layout" parent="GroupGridLayout">
        <property name="accordion.render" value="false"/>
        <property name="layoutManager.numberOfColumns" value="10"/>
        <property name="layoutManager.renderAlternatingHeaderColumns" value="false"/>
        <property name="items">
            <list>
                <ref bean="registration_search_panel"/>
                <ref bean="registration_schedule_panel"/>
            </list>
        </property>
    </bean>

    <bean id="registration_search_panel" parent="Group"
          p:layoutManager.orientation="VERTICAL" p:colSpan="6">
        <property name="accordion.render" value="false"/>
        <property name="items">
            <list>
                <ref bean="ks_studentFacing_registrationView_searchFunctions"/>
                <ref bean="ks_studentFacing_registrationView_search_buttons"/>
                <ref bean="ks_studentFacing_registrationView_resultsection_courseOfferings"/>
            </list>
        </property>
    </bean>

    <bean id="registration_schedule_panel" parent="Group"
          p:layoutManager.orientation="VERTICAL" p:colSpan="4" p:styleClasses="registration-schedule-group">
        <property name="accordion.render" value="false"/>
        <property name="items">
            <list>
                <ref bean="registration_schedule_panel_schedule"/>
                <ref bean="registration_schedule_panel_cart"/>
            </list>
        </property>
    </bean>

    <bean id="registration_schedule_panel_schedule" parent="Group"
          p:layoutManager.orientation="VERTICAL" p:styleClasses="registration-schedule-wrapper">
        <property name="accordion.render" value="false"/>
        <property name="header">
            <bean parent="HeaderThree" p:headerText="Your Schedule"/>
        </property>
        <property name="items">
            <list>
                <bean id="RegScheduleTable" parent="AttributeField_Form" abstract="true"
                      p:labelField.renderColon="false" p:propertyName="registeredCoursesJsArray">
                    <property name="control">
                        <bean parent="ScheduleControl"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="registration_schedule_panel_cart" parent="Group"
          p:layoutManager.orientation="VERTICAL" p:styleClasses="registration-schedule-wrapper">
        <property name="accordion.render" value="false"/>
        <property name="header">
            <bean parent="HeaderThree" p:headerText="Registration Cart"/>
        </property>
        <property name="items">
            <list>
                <bean id="RegScheduleCart" parent="AttributeField_Form" abstract="true"
                      p:labelField.renderColon="false" p:propertyName="cartCoursesJsArray"
                      p:finalizeMethodToCall="checkSubmitItemRender">
                    <property name="control">
                        <bean parent="ScheduleCartControl" p:scheduleId="RegScheduleTable" p:removeText="Remove"
                              p:removeJsFunction="removeFromCart"/>
                    </property>
                </bean>
                <bean parent="MessageField" p:messageText="Your cart is empty"
                      p:finalizeMethodToCall="checkRenderCartEmpty"/>
                <bean parent="ActionField" p:jumpToIdAfterSubmit="TOP" p:finalizeMethodToCall="checkSubmitItemRender"
                      p:methodToCall="submitRegistration" p:actionLabel="Submit Registration"/>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_searchFunctions" parent="Group"
          p:layoutManager.orientation="HORIZONTAL">
        <property name="accordion.render" value="false"/>
        <property name="items">
            <list>
                <ref bean="ks_studentFacing_registrationView_browse"/>
                <ref bean="ks_studentFacing_registrationView_fast_find"/>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_browse" parent="Group">
        <property name="title" value="Browse Classes"/>
        <property name="accordion.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="AttributeField_Form" p:propertyName="subjectArea" p:label="By Programs/Departments"
                      p:labelPlacement="TOP" p:labelField.renderColon="false">
                    <property name="control">
                        <bean parent="SelectControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.SubjectAreaKeyValues"/>
                    </property>
                </bean>
                <bean parent="AttributeField_Form" p:labelField.renderColon="false" p:propertyName="termKey">
                    <property name="control">
                        <bean parent="HiddenControl"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_fast_find" parent="Group" p:styleClasses="fastFind-group">
        <property name="title" value="Fast Find"/>
        <property name="accordion.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="AttributeField_Form" p:propertyName="courseOfferingCode"
                      p:label="Enter the Course Code"
                      p:labelPlacement="TOP" p:labelField.renderColon="false">
                    <property name="control">
                        <bean parent="TextControl" p:size="20"/>
                    </property>
                    <!--
                                        <property name="fieldSuggest.render" value="true" />
                                        <property name="fieldSuggest.sourcePropertyName" value="courseOfferingCode" />
                                        <property name="fieldSuggest.suggestQuery.queryMethodToCall"
                                            value="" />
                                        <property name="fieldSuggest.suggestQuery.queryMethodInvokerConfig"
                                            value="" />
                    -->
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_search_buttons" parent="Group"
          p:layoutManager.orientation="HORIZONTAL">
        <property name="accordion.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="ActionField" p:methodToCall="searchCourseOfferings" p:actionLabel="View Courses"
                      p:jumpToIdAfterSubmit="TOP"/>
                <bean parent="ActionField" p:methodToCall="clearSearchValues" p:actionLabel="Clear Values"
                      p:jumpToIdAfterSubmit="TOP"/>
            </list>
        </property>
    </bean>


    <bean id="ks_studentFacing_registrationView_resultsection_courseOfferings" parent="CollectionGroup"
          p:styleClasses="courseOffering-collection">
        <property name="summary"
                  value="Click a class to show/hide detail.  Hover over a time to preview effect on Your Schedule."/>
        <property name="accordion.render" value="false"/>
        <property name="collectionObjectClass"
                  value="org.kuali.student.enrollment.class2.registration.dto.CourseOfferingWrapper"/>
        <property name="propertyName" value="courseOfferingWrappers"/>
        <property name="renderAddLine" value="false"/>
        <property name="readOnly" value="true"/>
        <property name="layoutManager.summaryTitle" value=""/>
        <property name="layoutManager.lineGroupPrototype">
            <bean parent="KSGroup" p:layoutManager.orientation="VERTICAL"
                  p:styleClasses="courseOffering-item" p:footer-ref="Footer">
                <property name="accordion.defaultOpen" value="false"/>
                <property name="accordion.render" value="true"/>
            </bean>
        </property>
        <property name="layoutManager.subCollectionFieldGroupPrototype">
            <bean parent="FieldGroup" p:labelField.render="false" p:group.header.render="false"/>
        </property>
        <property name="layoutManager.summaryFields">
            <list>
                <value>courseOffering.courseOfferingCode</value>
                <value>courseOffering.courseTitle</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="AttributeField" p:labelField.render="false" p:propertyName="courseOffering.descr.plain"
                      p:readOnly="true"/>
                <bean parent="AttributeField" p:label="Instructor(s)" p:propertyName="instructorsList"
                      p:readOnly="true"/>
                <bean parent="AttributeField" p:label="Prerequisites" p:propertyName="prereq"
                      p:readOnly="true"/>
            </list>
        </property>
        <property name="subCollections">
            <list>
                <ref bean="ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups"/>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups" parent="CollectionGroup"
          p:layoutManager.lineGroupPrototype.accordion.render="false"
          p:summary="Add a course to your cart or register with a single click:">
        <property name="accordion.render" value="false"/>
        <property name="collectionObjectClass"
                  value="org.kuali.student.enrollment.class2.registration.dto.RegistrationGroupWrapper"/>
        <property name="propertyName" value="registrationGroupWrappers"/>
        <property name="renderAddLine" value="false"/>
        <property name="finalizeMethodToCall" value="checkRegElements"/>
        <property name="readOnly" value="false"/>
        <property name="layoutManager.lineGroupPrototype.styleClasses" value="regGroup-item"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="actionFields">
            <list>
                <bean parent="ActionField_SmallSecondary_Override" p:methodToCall="addToCart"
                      p:clientSideJs="updateCollectionAndRelatedItem(jq(this),'ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups','registration_schedule_panel')"
                      p:actionLabel="Add to Cart"/>
                <bean parent="ActionField_SmallSecondary_Override" p:methodToCall="registerClass"
                      p:clientSideJs="updateCollectionAndRelatedItem(jq(this),'ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups','registration_schedule_panel')"
                      p:actionLabel="1-Click Registration"/>
                <bean parent="ActionField_SmallSecondary_Override" p:methodToCall="dropClass"
                      p:clientSideJs="updateCollectionAndRelatedItem(jq(this),'ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups','registration_schedule_panel')"
                      p:actionLabel="Drop Course"/>
                <bean parent="ActionField_SmallSecondary_Override" p:methodToCall="removeFromCart"
                      p:clientSideJs="updateCollectionAndRelatedItem(jq(this),'ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups','registration_schedule_panel')"
                      p:actionLabel="Remove From Cart"/>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="AttributeField" p:labelField.renderColon="false"
                      p:propertyName="registrationGroup.maximumEnrollment" p:readOnly="true"/>
                <bean parent="AttributeField" p:labelField.renderColon="false"
                      p:propertyName="registrationGroup.isHonorsOffering" p:readOnly="true"/>
                <bean parent="AttributeField" p:labelField.renderColon="false"
                      p:propertyName="registrationGroup.hasWaitlist" p:readOnly="true"/>

            </list>
        </property>
        <property name="subCollections">
            <list>
                <ref bean="ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups_activityOfferings"/>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups_activityOfferings"
          parent="CollectionGroup"
          p:layoutManager.lineGroupPrototype.accordion.render="false">
        <property name="accordion.render" value="false"/>
        <property name="collectionObjectClass"
                  value="org.kuali.student.enrollment.class2.registration.dto.ActivityOfferingWrapper"/>
        <property name="propertyName" value="activityOfferingWrappers"/>
        <property name="renderAddLine" value="false"/>
        <property name="readOnly" value="true"/>
        <property name="layoutManager.lineGroupPrototype">
            <bean parent="Group" p:header.render="false" p:layoutManager.orientation="VERTICAL"
                  p:styleClasses="activityOffering-item" p:footer-ref="Footer"/>
        </property>
        <property name="layoutManager.subCollectionFieldGroupPrototype">
            <bean parent="FieldGroup" p:labelField.render="false" p:group.header.render="false"/>
        </property>
        <property name="items">
            <list>
                <bean parent="AttributeField" p:styleClasses="activityOfferingType" p:labelField.render="false"
                      p:propertyName="typeName"/>
            </list>
        </property>
        <property name="subCollections">
            <list>
                <ref bean="ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups_activityOfferings_schedules"/>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_resultsection_courseOfferings_regGroups_activityOfferings_schedules"
          parent="CollectionGroup"
          p:layoutManager.lineGroupPrototype.accordion.render="false">
        <property name="accordion.render" value="false"/>
        <property name="collectionObjectClass"
                  value="org.kuali.student.enrollment.class2.registration.dto.MeetingScheduleWrapper"/>
        <property name="propertyName" value="meetingScheduleWrappers"/>
        <property name="renderAddLine" value="false"/>
        <property name="readOnly" value="true"/>
        <property name="layoutManager.lineGroupPrototype">
            <bean parent="Group" p:header.render="false" p:layoutManager.orientation="VERTICAL"
                  p:styleClasses="meetingTime-item" p:footer-ref="Footer"/>
        </property>
        <property name="layoutManager.subCollectionFieldGroupPrototype">
            <bean parent="FieldGroup" p:labelField.render="false" p:group.header.render="false"/>
        </property>
        <property name="items">
            <list>
                <bean parent="AttributeField" p:styleClasses="displayableTime" p:labelField.render="false"
                      p:propertyName="displayableTime"/>
                <bean parent="AttributeField_Form" p:readOnly="false" p:labelField.render="false"
                      p:propertyName="regGroupTimesJsObject">
                    <property name="control">
                        <bean parent="TimePreviewControl" p:hoverComponentClass="meetingTime-item"
                              p:scheduleId="RegScheduleTable"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>