    <bean id="ks_studentFacing_registrationView" parent="KSFormView">
        <property name="id" value="studentRegistrationView"/>
        <property name="title" value="Registration"/>
        <property name="singlePageView" value="true" />
        <property name="items">
            <list>
                <bean parent="Page_Accordion" p:id="page1">
                    <property name="items">
                        <list>
                            <ref bean="ks_studentFacing_registrationView_section1"/>
                            <ref bean="ks_studentFacing_registrationView_section2"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="formClass" value="org.kuali.student.enrollment.class2.registration.form.RegistrationForm"/>
<!--
        <property name="defaultBindingObjectPath" value="travelAccount1"/>
-->
    </bean>

    <bean id="ks_studentFacing_registrationView_section1" parent="GroupSection">
        <property name="title" value="Browse Classes"/>
        <property name="items">
            <list>
                <ref bean="ks_studentFacing_registrationView_section1_group1"/>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_section2" parent="GroupSection">
        <property name="title" value="Fast Find"/>
        <property name="items">
            <list>
                <ref bean="ks_studentFacing_registrationView_section2_group1"/>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_section1_group1" parent="GroupGridLayout">
        <property name="title" value="By Programs/Departments"/>
        <property name="items">
            <list>
                <bean parent="AttributeField_Form" p:propertyName="programs" p:label="By Programs/Departments 2"
                      p:readOnly="false">
                    <property name="control">
                        <bean parent="SelectControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.SubjectAreaKeyValues"/>
                    </property>
<!--
                    <property name="fieldLookup.dataObjectClassName" value="edu.sampleu.travel.bo.TravelAccount"/>
                    <property name="fieldLookup.fieldConversions">
                        <map>
                            <entry key="number" value="field1"/>
                        </map>
                    </property>
-->
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ks_studentFacing_registrationView_section2_group1" parent="GroupGridLayout">
        <property name="title" value="Enter the Course Name or Number"/>
        <property name="items">
            <list>
                <bean parent="AttributeField_Form" p:propertyName="courseNameOrNumber" p:label="Enter the Course Name or Number 2"
                      p:readOnly="false">
                    <property name="control">
                        <bean parent="TextControl" p:size="20"/>
                    </property>
<!--
                    <property name="fieldSuggest.render" value="true"/>
                    <property name="fieldSuggest.sourcePropertyName" value="accountTypeCode"/>
                    <property name="fieldSuggest.suggestQuery.dataObjectClassName"
                              value="edu.sampleu.travel.bo.TravelAccountType"/>
-->
                </bean>
            </list>
        </property>
    </bean>

</beans>