  <bean id="AcademicCalendarWrapper" parent="AcademicCalendarWrapper-parentBean"/>
  <bean id="AcademicCalendarWrapper-parentBean" abstract="true" parent="DataObjectEntry">
    <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper"/>
    <property name="titleAttribute" value="key"/>
    <property name="attributes">
        <list>
            <ref bean="AcademicCalendarWrapper.key"/>
        </list>
    </property>
    <property name="complexAttributes">
      <list>
        <ref bean="AcademicCalendarWrapper.academicCalendarInfo"/>
      </list>
    </property>
    <property name="collections">
      <list>
        <bean parent="CollectionDefinition" p:name="termWrapperList" /> <!--p:label="Terms" p:shortLabel="Terms" p:elementLabel="Terms" />-->
      </list>
    </property>
    <property name="objectLabel" value="Academic Calendar with Terms"/>
    <property name="primaryKeys">
      <list>
        <value>key</value>
      </list>
    </property>
  </bean>

  <!-- Attribute Definitions -->
  <bean id="AcademicCalendarWrapper.key" parent="BaseKuali.key">
          <property name="name" value="key"/>
          <property name="label" value="Academic Calendar Key" />
          <property name="required" value="false"/>
          <property name="unique" value="true"/>
          <property name="validationPattern" >
                <bean parent="AnyCharacterValidationPattern"
                    p:allowWhitespace="false" />
          </property>
          <property name="controlField">
                <bean parent="TextControl" p:size="60"/>
          </property>
          <property name="control">
                <bean parent="TextControlDefinition" p:size="60"/>
          </property>
  </bean>

  <bean id="AcademicCalendarWrapper.academicCalendarInfo" parent="ComplexAttributeDefinition">
     <property name="name" value="academicCalendarInfo"/>
     <property name="dataObjectEntry" ref="AcademicCalendarInfoUI"/>
  </bean>

  <!-- LookupView -->
  <bean id="AcademicCalendarWrapper-LookupView" parent="KSLookupView">
    <property name="title" value="Academic Calendar Lookup (by Key)" />
    <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper" />
    <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarWrapperLookupableImpl" />

    <property name="criteriaFields">
      <list>
        <bean parent="LookupCriteriaAttributeField" p:propertyName="key" /> <!--p:label="Academic Calendar Key"/> -->
        <bean parent="LookupCriteriaAttributeField" p:propertyName="academicCalendarInfo.credentialProgramTypeKey"/> 
      </list>
    </property>
    <property name="resultFields">
      <list>
		<bean parent="AttributeField" p:propertyName="key" />
        <bean parent="AttributeField" p:propertyName="academicCalendarInfo.startDate" />
        <bean parent="AttributeField" p:propertyName="academicCalendarInfo.endDate" />
        <bean parent="AttributeField" p:propertyName="academicCalendarInfo.credentialProgramTypeKey" />        
      </list>
    </property>
  </bean>
  
  <bean id="AcademicCalendarWrapper-InquiryView" parent="InquiryView">
     <property name="title" value="Academic Calendar Inquiry"/>
     <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper"/>
     <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarWrapperInquiryViewHelperServiceImpl" />
     
     <property name="Items">
         <list>
           <bean parent="GroupSectionGridLayout">
             <property name="layoutManager.numberOfColumns" value="2"/>
             <property name="title" value="Academic Calendar"/>
             <property name="items">
               <list>
                <bean parent="AttributeField" p:propertyName="academicCalendarInfo.key"/>
                <bean parent="AttributeField" p:propertyName="academicCalendarInfo.startDate"/>
                <bean parent="AttributeField" p:propertyName="academicCalendarInfo.endDate"/>
                <bean parent="AttributeField" p:propertyName="academicCalendarInfo.credentialProgramTypeKey"/>
               </list>
             </property>             
           </bean>
           <bean parent="CollectionGroupSection">
              <property name="title" value="Terms"/>  
              <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.acal.dto.TermWrapper"/>
              <property name="propertyName" value="termWrapperList"/>
              <property name="items">
                <list>
                  <bean parent="AttributeField" p:propertyName="termInfo.typeKey">
                    <property name="control">
              			<bean parent="SelectControl"/>
            		</property>
            		<property name="optionsFinder">
              			<bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermInfoTypeKeyValues"/>
            		</property>
                  </bean>
                 
                  <bean parent="AttributeField" p:propertyName="termInfo.startDate"/>
                  <bean parent="AttributeField" p:propertyName="termInfo.endDate"/>
                  
                  <bean parent="MessageField" p:messageText="Term Dates" p:colSpan="2" /> 
				  <bean parent="MessageField" p:messageText="Dates between which classes should meet" p:colSpan="2" />

                  <bean parent="AttributeField" p:propertyName="classesMeetDates.startDate"/>
                  <bean parent="AttributeField" p:propertyName="classesMeetDates.endDate"/>  
                
                  <bean parent="MessageField" p:messageText="Registration Period" p:colSpan="2"/>
                  <bean parent="AttributeField" p:propertyName="registrationPeriod.startDate"/>
                  <bean parent="AttributeField" p:propertyName="registrationPeriod.endDate"/>  

				  <bean parent="MessageField" p:messageText="Drop Period ends" p:colSpan="2"/>
				                             
                  <bean parent="AttributeField" p:propertyName="dropPeriodEndsDate.endDate">
                	 <property name="label" value="Date" />
                  </bean>

				  <bean parent="MessageField" p:messageText="Final Examinations" p:colSpan="2"/> 
                  <bean parent="AttributeField" p:propertyName="finalExaminationsDates.startDate"/>
                  <bean parent="AttributeField" p:propertyName="finalExaminationsDates.endDate"/>
                
				  <bean parent="MessageField" p:messageText="Grades Due" p:colSpan="2"/> 
                  <bean parent="AttributeField" p:propertyName="gradesDueDate.endDate">
                	<property name="label" value="Date" />
                  </bean>                                     
            
                </list>
  
              </property>      
              <property name="layoutManager.summaryTitle" value="Term"/> 
              <property name="layoutManager.summaryFields">
                <list>
                  <value>termInfo.typeKey</value>
                </list>
              </property>
           </bean>
         </list>
     </property>
  </bean>
  
  
  
    
  <bean id="AcademicCalendarWrapper-MaintenanceView" parent="KSMaintenanceView">
     <property name="title" value="Academic Calendar Maintenance"/>
     <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper"/>
     <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarWrapperMaintainableImpl" />
     <property name="items">
       <list merge="true">
          <bean parent="MaintenanceGroupSectionGridLayout">
          	 <property name="title" value="Academic Calendar"/>
             <property name="items">
               <list>
               <!-- 
                <bean parent="AttributeField" p:propertyName="academicCalendarInfo.key"/>
                -->
                <bean parent="AttributeField" p:propertyName="academicCalendarInfo.startDate"/>
                <bean parent="AttributeField" p:propertyName="academicCalendarInfo.endDate"/>
                <bean parent="AttributeField" p:propertyName="academicCalendarInfo.credentialProgramTypeKey">
                    <property name="control">
              			<bean parent="SelectControl"/>
            		</property>
            		<property name="optionsFinder">
              			<bean class="org.kuali.student.enrollment.class2.acal.keyvalue.CredentialProgramTypeKeyValues"/>
            		</property>
                </bean>
               </list>
             </property>             
          </bean> 
         
          <bean parent="MaintenanceCollectionGroupSection">
              <property name="title" value="Terms"/>  
              <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.acal.dto.TermWrapper"/>
              <property name="propertyName" value="termWrapperList"/>
              <property name="items">
                <list>
                  <bean parent="AttributeField" p:propertyName="termInfo.typeKey">
                    <property name="control">
              			<bean parent="SelectControl"/>
            		</property>
            		<property name="optionsFinder">
              			<bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermInfoTypeKeyValues"/>
            		</property>
                  </bean>
                 
                  <bean parent="AttributeField" p:propertyName="termInfo.startDate"/>
                  <bean parent="AttributeField" p:propertyName="termInfo.endDate"/>
                  
                  <bean parent="MessageField" p:messageText="Term Dates" p:colSpan="2" /> 
				  <bean parent="MessageField" p:messageText="Dates between which classes should meet" p:colSpan="2" />

                  <bean parent="AttributeField" p:propertyName="classesMeetDates.startDate"/>
                  <bean parent="AttributeField" p:propertyName="classesMeetDates.endDate"/>  
                
                  <bean parent="MessageField" p:messageText="Registration Period" p:colSpan="2"/>
                  <bean parent="AttributeField" p:propertyName="registrationPeriod.startDate"/>
                  <bean parent="AttributeField" p:propertyName="registrationPeriod.endDate"/>  

				  <bean parent="MessageField" p:messageText="Drop Period ends" p:colSpan="2"/>
				                             
                  <bean parent="AttributeField" p:propertyName="dropPeriodEndsDate.endDate">
                	 <property name="label" value="Date" />
                  </bean>

				  <bean parent="MessageField" p:messageText="Final Examinations" p:colSpan="2"/> 
                  <bean parent="AttributeField" p:propertyName="finalExaminationsDates.startDate"/>
                  <bean parent="AttributeField" p:propertyName="finalExaminationsDates.endDate"/>
                
				  <bean parent="MessageField" p:messageText="Grades Due" p:colSpan="2"/> 
                  <bean parent="AttributeField" p:propertyName="gradesDueDate.endDate">
                	<property name="label" value="Date" />
                  </bean>                                     
            
                </list>
              </property>   
              <property name="layoutManager.summaryTitle" value="Term"/> 
              <property name="layoutManager.summaryFields">              
                <list>
                  <value>termInfo.typeKey</value> 
                </list>                             
              </property>
           </bean>    
       </list>
     </property>
  </bean>  


  <bean id="AcademicCalendarWrapperMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
    <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper"/>
    <property name="maintainableClass" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarWrapperMaintainableImpl"/>
    <property name="documentTypeName" value="AcademicCalendarWrapperMaintenanceDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.rice.krad.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    <property name="lockingKeys">
      <list>
        <value>academicCalendarInfo.key</value>
      </list>
    </property>
  </bean>  

</beans>     