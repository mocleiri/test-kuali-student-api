  <bean id="AcademicCalendarWrapper" parent="AcademicCalendarWrapper-parentBean"/>
  <bean id="AcademicCalendarWrapper-parentBean" abstract="true" parent="DataObjectEntry">
    <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper"/>
    <property name="titleAttribute" value="id"/>
    <property name="attributes">
        <list>
            <ref bean="AcademicCalendarWrapper.id"/>
        </list>
    </property>
    <property name="complexAttributes">
      <list>
        <ref bean="AcademicCalendarWrapper.academicCalendarInfo"/>
      </list>
    </property>
    <property name="collections">
      <list>
        <bean parent="CollectionDefinition" p:name="termWrapperList" /> <!--p:label="Terms" p:shortLabel="Terms" p:elementLabel="Terms" />-->
      </list>
    </property>
    <property name="objectLabel" value="Academic Calendar with Terms"/>
    <property name="primaryKeys">
      <list>
        <value>id</value>
      </list>
    </property>
  </bean>

  <!-- Attribute Definitions -->
  <bean id="AcademicCalendarWrapper.id" parent="BaseKuali.id">
          <property name="name" value="id"/>
          <property name="label" value="Academic Calendar ID" />
          <property name="required" value="false"/>
          <property name="unique" value="true"/>
          <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint" />
          </property>
          <property name="controlField">
                <bean parent="Uif-TextControl" p:size="60"/>
          </property>
          <property name="control">
                <bean parent="TextControlDefinition" p:size="60"/>
          </property>
  </bean>

  <bean id="AcademicCalendarWrapper.academicCalendarInfo" parent="ComplexAttributeDefinition">
     <property name="name" value="academicCalendarInfo"/>
     <property name="dataObjectEntry" ref="AcademicCalendarInfoUI"/>
  </bean>

  <!-- LookupView -->
  <bean id="AcademicCalendarWrapper-LookupView" parent="KSLookupView">
    <property name="headerText" value="Academic Calendar Lookup (by ID)" />
    <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper" />
    <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarWrapperLookupableImpl" />

    <property name="criteriaFields">
      <list>
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="id" /> <!--p:label="Academic Calendar Key"/> -->
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="academicCalendarInfo.name"/>
        <!--bean parent="Uif-LookupCriteriaInputField" p:headerText="type" p:propertyName="academicCalendarInfo.credentialProgramTypeKey" p:defaultValue="kuali.lu.type.credential.Baccalaureate">
            <property name="control">
                <bean parent="Uif-DropdownControl"/>
            </property>
            <property name="optionsFinder">
                <bean class="org.kuali.student.enrollment.class2.acal.keyvalue.CredentialProgramTypeKeyValues"/>
            </property>
        </bean-->
      </list>
    </property>
    <property name="resultFields">
      <list>
		<bean parent="Uif-InputField" p:propertyName="id" />
        <bean parent="Uif-InputField" p:propertyName="academicCalendarInfo.name"/>
        <bean parent="Uif-InputField" p:propertyName="academicCalendarInfo.startDate" />
        <bean parent="Uif-InputField" p:propertyName="academicCalendarInfo.endDate" />
      </list>
    </property>
  </bean>
  
  <bean id="AcademicCalendarWrapper-InquiryView" parent="Uif-InquiryView">
     <property name="headerText" value="Academic Calendar Inquiry"/>
     <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper"/>
     <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarWrapperInquiryViewHelperServiceImpl" />
     
     <property name="Items">
         <list>
           <bean parent="Uif-Disclosure-GridSection">
             <property name="layoutManager.numberOfColumns" value="2"/>
             <property name="headerText" value="Academic Calendar"/>
             <property name="items">
               <list>
                <bean parent="Uif-InputField" p:propertyName="academicCalendarInfo.id"/>
                <bean parent="Uif-InputField" p:propertyName="academicCalendarInfo.name"/>
                <bean parent="Uif-InputField" p:propertyName="academicCalendarInfo.startDate"/>
                <bean parent="Uif-InputField" p:propertyName="academicCalendarInfo.endDate"/>
               </list>
             </property>             
           </bean>
           <bean parent="Uif-Disclosure-StackedCollectionSection">
              <property name="headerText" value="Terms"/>  
              <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.acal.dto.TermWrapper"/>
              <property name="propertyName" value="termWrapperList"/>
              <property name="items">
                <list>
                  <bean parent="Uif-InputField" p:propertyName="termInfo.typeKey">
                    <property name="control">
              			<bean parent="Uif-DropdownControl"/>
            		</property>
            		<property name="optionsFinder">
              			<bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermInfoTypeKeyValues"/>
            		</property>
                  </bean>
                 
                  <bean parent="Uif-InputField" p:propertyName="termInfo.startDate"/>
                  <bean parent="Uif-InputField" p:propertyName="termInfo.endDate"/>
                  
                  <bean parent="Uif-Message" p:messageText="Term Dates" p:colSpan="2" /> 
				  <bean parent="Uif-Message" p:messageText="Dates between which classes should meet" p:colSpan="2" />

                  <bean parent="Uif-InputField" p:propertyName="classesMeetDates.startDate"/>
                  <bean parent="Uif-InputField" p:propertyName="classesMeetDates.endDate"/>
                
                  <bean parent="Uif-Message" p:messageText="Registration Period" p:colSpan="2"/>
                  <bean parent="Uif-InputField" p:propertyName="registrationPeriod.startDate"/>
                  <bean parent="Uif-InputField" p:propertyName="registrationPeriod.endDate"/>

				  <bean parent="Uif-Message" p:messageText="Drop Period ends" p:colSpan="2"/>
				                             
                  <bean parent="Uif-InputField" p:propertyName="dropPeriodEndsDate.endDate">
                	 <property name="label" value="Date" />
                  </bean>

				  <bean parent="Uif-Message" p:messageText="Final Examinations" p:colSpan="2"/> 
                  <bean parent="Uif-InputField" p:propertyName="finalExaminationsDates.startDate"/>
                  <bean parent="Uif-InputField" p:propertyName="finalExaminationsDates.endDate"/>
                
				  <bean parent="Uif-Message" p:messageText="Grades Due" p:colSpan="2"/> 
                  <bean parent="Uif-InputField" p:propertyName="gradesDueDate.endDate">
                	<property name="label" value="Date" />
                  </bean>                                     
            
                </list>
  
              </property>      
              <property name="layoutManager.summaryTitle" value="Term"/> 
              <property name="layoutManager.summaryFields">
                <list>
                  <value>termInfo.typeKey</value>
                </list>
              </property>
           </bean>
         </list>
     </property>
  </bean>

  <bean id="AcademicCalendarWrapper-MaintenanceView" parent="KSMaintenanceView">
     <property name="headerText" value="Academic Calendar Maintenance"/>
     <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper"/>
     <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarWrapperMaintainableImpl" />
     <property name="header">
        <ref bean="KSHeader_Empty" />
     </property>
     <property name="items">
       <list>
          <bean parent="Uif-VerticalBoxGroup">
          	 <property name="headerText" value="Academic Calendar"/>
             <property name="items">
               <list>
               <!-- 
                <bean parent="Uif-InputField" p:propertyName="academicCalendarInfo.id"/>
                -->
                <bean parent="KSInputField" p:propertyName="academicCalendarInfo.name"/>
                <!--bean parent="KSInputField" p:propertyName="academicCalendarInfo.credentialProgramTypeKey">
                    <property name="control">
              			<bean parent="Uif-DropdownControl"/>
            		</property>
            		<property name="optionsFinder">
              			<bean class="org.kuali.student.enrollment.class2.acal.keyvalue.CredentialProgramTypeKeyValues"/>
            		</property>
                </bean-->
                <bean parent="Uif-HorizontalFieldGroup">
                  <property name="items">
                    <list>
                        <bean parent="KSInputField" p:propertyName="academicCalendarInfo.startDate" >
                            <property name="control">
                                <bean parent="Uif-DateControl">
                                    <property name="datePicker.componentOptions">
                                        <map>
                                            <entry key="showOn" value="both" />
                                            <entry key="buttonImage"
                                                value="@{#ConfigProperties['krad.externalizable.images.url']}cal.gif" />
                                            <entry key="buttonImageOnly" value="true" />
                                            <entry key="showAnim" value="fadeIn" />
                                            <entry key="showButtonPanel" value="true" />
                                            <entry key="changeMonth" value="true" />
                                            <entry key="changeYear" value="true" />
                                            <entry key="numberOfMonths" value="2" />
                                        </map>
                                    </property>
                                </bean>
                            </property>
                        </bean>
                        <bean parent="KSInputField" p:propertyName="academicCalendarInfo.endDate">
                            <property name="control">
                                <bean parent="Uif-DateControl">
                                    <property name="datePicker.componentOptions">
                                        <map>
                                            <entry key="showOn" value="both" />
                                            <entry key="buttonImage"
                                                value="@{#ConfigProperties['krad.externalizable.images.url']}cal.gif" />
                                            <entry key="buttonImageOnly" value="true" />
                                            <entry key="showAnim" value="fadeIn" />
                                            <entry key="showButtonPanel" value="true" />
                                            <entry key="changeMonth" value="true" />
                                            <entry key="changeYear" value="true" />
                                            <entry key="numberOfMonths" value="2" />
                                        </map>
                                    </property>
                                </bean>
                            </property>
                        </bean>
                    </list>
                  </property>
                </bean>

               </list>
             </property>
          </bean> 
         
          <bean parent="Uif-MaintenanceStackedCollectionSection">
              <property name="headerText" value="Terms"/>  
              <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.acal.dto.TermWrapper"/>
              <property name="propertyName" value="termWrapperList"/>
              <property name="collectionLookup.render" value="false"/>
<!--                <property name="layoutManager.cssClasses" value="ks-termDates-table"/>
            <property name="layoutManager.applyDefaultCellWidths" value="false"/>     -->

              <property name="layoutManager.lineGroupPrototype.cssClasses" value="ks-termDates-table,ks-termDates-collectionItem"/>
              <property name="layoutManager.lineGroupPrototype.disclosure.render" value="false"/>
              <property name="layoutManager.lineGroupPrototype.layoutManager.cssClasses" value=""/>
              <property name="layoutManager.lineGroupPrototype.layoutManager.applyDefaultCellWidths" value="false"/>

              <property name="layoutManager.addLineGroup.cssClasses" value="ks-termDates-table,ks-termDates-collectionItem"/>
              <property name="layoutManager.addLineGroup.disclosure.render" value="false"/>
              <property name="layoutManager.addLineGroup.layoutManager.cssClasses" value=""/>
              <property name="layoutManager.addLineGroup.layoutManager.applyDefaultCellWidths" value="false"/>
              <property name="items">
                <list>

                    <bean parent="Uif-InputField" p:propertyName="termInfo.typeKey">
                        <property name="control">
                            <bean parent="Uif-DropdownControl"/>
                        </property>
                        <property name="optionsFinder">
                            <bean class="org.kuali.student.enrollment.class2.acal.keyvalue.TermInfoTypeKeyValues"/>
                        </property>
                    </bean>
                    <!--
                    <bean parent="Uif-VerticalFieldGroup" p:label="Term Start/End">
                        <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
                        <property name="items">
                            <list>
                                <bean parent="Uif-InputField" p:propertyName="termInfo.startDate" p:fieldLabel.render="false" />
                                <bean parent="Uif-Message" p:messageText=" to "/>
                                <bean parent="Uif-InputField" p:propertyName="termInfo.endDate" p:fieldLabel.render="false" />
                            </list>
                        </property>
                    </bean>  -->
                    <bean parent="Uif-InputField" p:propertyName="termInfo.startDate" />
                    <bean parent="Uif-InputField" p:propertyName="termInfo.endDate" />

                    <bean parent="Uif-VerticalFieldGroup" p:label="Registration Period">
                        <property name="group.layoutManager.orientation"
                                  value="HORIZONTAL"/>
                        <property name="items">
                            <list>
                                <bean parent="Uif-InputField"
                                      p:propertyName="registrationPeriod.startDate"
                                      p:constraintText="Required when End Date has a value"
                                      p:fieldLabel.render="false"
                                      p:instructionalText="First allowable day of Registration for the Term"  >
<!--                                    <property name="dependencyConstraints">
                                        <list>
                                            <bean parent="PrerequisiteConstraint"
                                                  p:attributePath="document.newMaintainableObject.dataObject.registrationPeriod.endDate"/>
                                        </list>
                                    </property>-->
                                </bean>
                                <bean parent="Uif-Message" p:messageText=" to "/>
                                <bean parent="Uif-InputField"
                                      p:propertyName="registrationPeriod.endDate"
                                      p:constraintText="Required when Start Date has a value"
                                      p:fieldLabel.render="false"
                                      p:instructionalText="Last allowable day of Registration for the Term"   >
<!--                                    <property name="dependencyConstraints">
                                        <list>
                                            <bean parent="PrerequisiteConstraint"
                                                  p:attributePath="document.newMaintainableObject.dataObject.registrationPeriod.startDate"/>
                                        </list>
                                    </property>-->
                                </bean>
                            </list>
                        </property>
                    </bean>

                    <bean parent="Uif-VerticalFieldGroup" p:label="Instructional Period">
                        <property name="group.layoutManager.orientation"
                                  value="HORIZONTAL"/>
                        <property name="items">
                            <list>
                                <bean parent="Uif-InputField"
                                      p:propertyName="classesMeetDates.startDate"
                                      p:constraintText="Required when End Date has a value" p:fieldLabel.render="false" >
                                    <!--
                                    <property name="dependencyConstraints">
                                        <list>
                                            <bean parent="PrerequisiteConstraint"
                                                  p:attributePath="document.newMaintainableObject.dataObject.classesMeetDates.endDate"/>
                                        </list>
                                    </property>
                                    -->
                                </bean>
                                <bean parent="Uif-Message" p:messageText=" to "/>
                                <bean parent="Uif-InputField"
                                      p:propertyName="classesMeetDates.endDate"
                                      p:constraintText="Required when Start Date has a value" p:fieldLabel.render="false" >
                                    <!--<property name="dependencyConstraints">
                                        <list>
                                            <bean parent="PrerequisiteConstraint"
                                                  p:attributePath="document.newMaintainableObject.dataObject.classesMeetDates.startDate"/>
                                        </list>
                                    </property> -->
                                </bean>
                            </list>
                        </property>
                    </bean>

                    <bean parent="Uif-InputField"
                          p:propertyName="dropPeriodEndsDate.endDate" >
                        <property name="label" value="Drop Period Ends"/>
                    </bean>

                    <bean parent="Uif-VerticalFieldGroup" p:label="Final Exam Period">
                        <property name="group.layoutManager.orientation"
                                  value="HORIZONTAL"/>
                        <property name="items">
                            <list>
                                <bean parent="Uif-InputField"
                                      p:propertyName="finalExaminationsDates.startDate"
                                      p:constraintText="Required when End Date has a value"
                                      p:fieldLabel.render="false" >
<!--                                    <property name="dependencyConstraints">
                                        <list>
                                            <bean parent="PrerequisiteConstraint"
                                                  p:attributePath="document.newMaintainableObject.dataObject.finalExaminationsDates.endDate"/>
                                        </list>
                                    </property>-->
                                </bean>
                                <bean parent="Uif-Message" p:messageText=" to "/>
                                <bean parent="Uif-InputField"
                                      p:propertyName="finalExaminationsDates.endDate"
                                      p:constraintText="Required when Start Date has a value"
                                      p:fieldLabel.render="false" >
<!--                                    <property name="dependencyConstraints">
                                        <list>
                                            <bean parent="PrerequisiteConstraint"
                                                  p:attributePath="document.newMaintainableObject.dataObject.finalExaminationsDates.StartDate"/>
                                        </list>
                                    </property>-->
                                </bean>
                            </list>
                        </property>
                    </bean>

                    <bean parent="Uif-InputField"
                          p:propertyName="gradesDueDate.endDate" >
                        <property name="label" value="Grading Period Ends"/>
                    </bean>

                </list>
              </property>   
              <property name="layoutManager.summaryTitle" value="Term"/> 
              <property name="layoutManager.summaryFields">              
                <list>
                  <value>termInfo.typeKey</value> 
                </list>                             
              </property>
           </bean>    
       </list>
     </property>
     <property name="footer">
	    <ref bean="KSFooter_SubmitCancel" />
     </property>
  </bean>  


  <bean id="AcademicCalendarWrapperMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
    <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.acal.dto.AcademicCalendarWrapper"/>
    <property name="maintainableClass" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarWrapperMaintainableImpl"/>
    <property name="documentTypeName" value="AcademicCalendarWrapperMaintenanceDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.rice.krad.maintenance.MaintenanceDocumentAuthorizerBase"/>
    <property name="lockingKeys">
      <list>
        <value>academicCalendarInfo.id</value>
      </list>
    </property>
  </bean>  

</beans>     
