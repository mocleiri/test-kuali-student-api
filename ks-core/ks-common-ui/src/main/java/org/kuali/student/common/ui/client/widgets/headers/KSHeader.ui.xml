<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ks="urn:import:org.kuali.student.common.ui.client.widgets">
	<ui:style>
.leftRightContainer{
  width:100%;
}
.leftPart{
   width:50%;
   float: left;
}
.rightPart{
   float:right;
   width:50%;
}
.course{
   float:right;
   padding: 2px;   
}
.searchControl{
   float:right;
   padding: 2px;   
}
.searchButton{
   float:right;
   padding: 2px;   
}
.title{
  font-weight: bold;
  font-size: 20px;
  color: gray;
}

.logoutButton{
   float:right;
   padding: 2px;
}
.separator{
   float:right;
   padding: 2px;
}

.userName{
   float:right;
   padding: 2px;
}

.hiLabel{
   float:right;
   padding: 2px;
}
.clearBothDiv{
   clear:both;
}
.bottomLine{
   background-color:gray;
   width:100%;
   clear:both;
   height:2px;
   
}
	</ui:style>
	<g:HTMLPanel >


<div class='{style.leftRightContainer}'>
    <div>
        <g:FlowPanel styleName='{style.leftPart}'>
          <g:Label styleName='{style.title}'>adsf</g:Label>
        </g:FlowPanel>
        <div class='{style.rightPart}'>
           <g:Label styleName='{style.searchButton}'></g:Label><!-- place holder -->>
           <g:Label styleName='{style.searchControl}'></g:Label><!-- place holder -->>
           <g:Label ui:field="searchLabel" styleName='{style.course}'></g:Label>
           
           <div class='{style.clearBothDiv}'></div>
           
           <div class='{style.logoutButton}'>logout</div>
           <div class='{style.separator}'>|</div>
           <g:Label ui:field="userNameLabel" styleName='{style.userName}'>userName</g:Label>
           <g:Label ui:field="hiLabel" styleName='{style.hiLabel}'>Hi,</g:Label>
        </div>
    </div>
    <div class="{style.bottomLine}"></div>
</div>		
	</g:HTMLPanel>
</ui:UiBinder> 