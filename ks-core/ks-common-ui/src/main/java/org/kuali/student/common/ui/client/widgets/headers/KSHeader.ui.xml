<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ks="urn:import:org.kuali.student.common.ui.client.widgets">
	<ui:style>
.leftRightContainer{
  width:100%;
 
}
.leftPart{
   width:50%;
   float: left;
}
.rightPart{
   float:right;
   width:50%;
}
.course{
   float:right;
   padding: 2px;   
}
.searchControl{
   float:right;
   padding: 2px;   
}
.searchButton{
   float:right;
   padding: 2px;   
}
.title{
  font-weight: bold;
  font-size: 20px;
  color: gray;
}

.logoutButton{
   float:right;
   padding: 2px;
}
.separator{
   float:right;
   padding: 2px;
}

.userName{
   float:right;
   padding: 2px;
}

.hiPanel{
   float:right;
   padding: 2px;
}
.clearBothDiv{
   clear:both;
}
.bottomLine{
   background-color:gray;
   width:100%;
   clear:both;
   height:2px;
   
}
.applicationTitle {
	font-weight: bold;
	font-size: 20px;
}
	</ui:style>
	<g:HTMLPanel >

<div class='{style.leftRightContainer}'>
    <g:Label ui:field='applicationTitleLabel' styleName='{style.applicationTitle}'>KRU</g:Label>
    <div>
        <g:FlowPanel ui:field="leftPartPanel" styleName='{style.leftPart}'>
          <g:Label styleName='{style.title}'></g:Label>
        </g:FlowPanel>
        <div class='{style.rightPart}'>
           <g:Label styleName='{style.searchButton}'></g:Label><!-- place holder -->
           <g:Label styleName='{style.searchControl}'></g:Label><!-- place holder -->
           <g:Label ui:field="searchLabel" styleName='{style.course}'></g:Label>
           
           <div class='{style.clearBothDiv}'></div>
           
           <g:FlowPanel ui:field="logoutPanel" styleName='{style.logoutButton}'></g:FlowPanel>
           <div class='{style.separator}'>|</div>
           <g:FlowPanel ui:field="userNamePanel" styleName='{style.userName}'></g:FlowPanel>
           <g:FlowPanel ui:field="hiPanel" styleName='{style.hiPanel}'></g:FlowPanel>
        </div>
    </div>
    <div class="{style.bottomLine}"></div>
    <!-- Your Breadcrum here, Brian,-->
</div>		
	</g:HTMLPanel>
</ui:UiBinder> 