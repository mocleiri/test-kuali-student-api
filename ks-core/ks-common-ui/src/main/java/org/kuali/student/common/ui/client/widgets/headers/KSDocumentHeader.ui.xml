<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ks="urn:import:org.kuali.student.common.ui.client.widgets.field.layout.element">
	<ui:style>
		.headerLabel {
			font-weight: bold;
			font-size: 20px;
		}
		
		.info{
		    float: right;
		    color: #FEAB3E;
		}
	</ui:style>
	<g:HTMLPanel>
		<div>
			<g:HTML ui:field='headerHTML' styleName='{style.headerLabel}'>
			</g:HTML>
		</div>
 	    <table width='100%'>
 	    <tr>
 	        <td width='60%'>
			<ks:SpanPanel ui:field='widgetPanel'>
			</ks:SpanPanel>
			</td>
			<td >
			<g:HTML ui:field='infoLabel' styleName='{style.info}'>
			</g:HTML>
			</td>
			</tr>			
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 