<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ks="urn:import:org.kuali.student.common.ui.client.widgets.field.layout.element">
	<ui:style>
		.title h2{
			font-weight: bold;
			margin-bottom: 0;
			font-size: 20px;
		}
		
		.info{
		   	overflow: auto;
		   	text-align: right;
		}
		
		.container{
		   	width: 600px;
		   	border-bottom: 1px solid #d7d7d7;
		   	margin-bottom: 1.5em;
		   	padding-bottom: 5px;
		}
		
	</ui:style>
	<g:HTMLPanel styleName='{style.container}'>
		<div>
			<g:HTML ui:field='headerHTML' styleName='{style.title}'>
			</g:HTML>
		</div>
 	    <div>
			<ks:SpanPanel ui:field='widgetPanel'>
			</ks:SpanPanel>
			<g:HTML ui:field='infoLabel' styleName='{style.info}'>
			</g:HTML>
		</div>
		<div style="clear: both"/>
	</g:HTMLPanel>
</ui:UiBinder> 