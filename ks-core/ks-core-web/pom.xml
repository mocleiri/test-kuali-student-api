          <groupId>org.kuali.student.core</groupId>
          <artifactId>ks-core-rice</artifactId>
          <version>1.1.0-SNAPSHOT</version>
          <classifier>sources</classifier>
          <scope>provided</scope>
        </dependency>
        <dependency>
          <groupId>org.kuali.student.core</groupId>
