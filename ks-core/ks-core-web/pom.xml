<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.kuali.student.core</groupId>
  <artifactId>ks-core-web</artifactId>
  <version>1.1.0-SNAPSHOT</version>
  <packaging>war</packaging>
  <name>KS Core Web</name>
  <description>KS Core Web</description>
  <parent>
    <groupId>org.kuali.student.core</groupId>
    <artifactId>ks-core</artifactId>
    <version>1.1.0-SNAPSHOT</version>
  </parent>
  <properties>
    <ks.gwt.module.org>org.kuali.student.core.organization.ui.OrgEntry</ks.gwt.module.org>
  </properties>
  <profiles>
    <profile>
      <id>skip-core-war</id>
      <properties>
        <maven.test.skip>true</maven.test.skip>
      </properties>
    </profile>
    <profile>
      <id>skip-all-wars</id>
      <properties>
        <maven.test.skip>true</maven.test.skip>
      </properties>
    </profile>
    <profile>
      <id>embedded-only-war</id>
      <properties>
        <maven.test.skip>true</maven.test.skip>
      </properties>
    </profile>
    <profile>
      <id>skip-developer-wars</id>
      <properties>
        <maven.test.skip>true</maven.test.skip>
      </properties>
    </profile>
    <profile>
      <id>standalone-only-wars</id>
      <properties>
        <maven.test.skip>true</maven.test.skip>
      </properties>
    </profile>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>gwt-maven-plugin</artifactId>
            <executions>
              <execution>
                <phase>${ks.gwt.compile.phase}</phase>
                <goals>
                  <goal>compile</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <modules>
                <module>${ks.gwt.module.org}</module>
              </modules>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>tomcat-maven-plugin</artifactId>
            <configuration>
              <server>ks-core-web</server>
              <port>8181</port>
            </configuration>
            <dependencies>
              <dependency>
                <groupId>com.oracle</groupId>
                <artifactId>ojdbc14</artifactId>
                <version>10.2.0.3.0</version>
              </dependency>
            </dependencies>
          </plugin>

          <!-- <plugin>
		        <groupId>org.codehaus.mojo</groupId>
        		<artifactId>tomcat-maven-plugin</artifactId>
        		<version>1.0-beta-1-patched</version>
		        <configuration>
		        	<server>ks-core-web</server>
		        	<port>8181</port>
		        	<fork>true</fork>
		        </configuration>
		        <executions>
					<execution>
						<id>run-tomcat</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>run-war</goal>
						</goals>
					</execution>
				</executions>
		    </plugin>-->
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <excludes>
                <exclude>**/student/core/web/**</exclude>
              </excludes>
            </configuration>
            <!-- <executions>
					<execution>
						<id>integration-test</id>
						<phase>integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<skip>false</skip>
							<excludes>
								<exclude>none</exclude>
							</excludes>
							<includes>
								<include>**/student/core/web/**</include>
							</includes>
						</configuration>
					</execution>
				</executions> -->
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>org.kuali.student.core</groupId>
          <artifactId>ks-core-ui</artifactId>
          <type>jar</type>
          <version>1.1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
          <groupId>org.kuali.student.core</groupId>
          <artifactId>ks-core-impl</artifactId>
          <version>1.1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
          <groupId>org.kuali.student.core</groupId>
          <artifactId>ks-hibernate</artifactId>
          <type>pom</type>
        </dependency>
        <dependency>
          <groupId>org.kuali.student.core</groupId>
          <artifactId>ks-cxf</artifactId>
          <type>pom</type>
        </dependency>
        <dependency>
          <groupId>org.kuali.student.core</groupId>
          <artifactId>ks-jta</artifactId>
          <type>pom</type>
        </dependency>
        <dependency>
          <groupId>org.springframework</groupId>
          <artifactId>spring-aspects</artifactId>
        </dependency>
        <dependency>
          <groupId>org.springframework</groupId>
          <artifactId>spring-jdbc</artifactId>
        </dependency>
        <dependency>
          <groupId>org.apache.derby</groupId>
          <artifactId>derby</artifactId>
          <scope>runtime</scope>
        </dependency>
        <dependency>
          <groupId>org.apache.derby</groupId>
          <artifactId>derbynet</artifactId>
          <scope>runtime</scope>
        </dependency>
        <dependency>
          <groupId>org.apache.derby</groupId>
          <artifactId>derbyclient</artifactId>
          <scope>runtime</scope>
        </dependency>
        <dependency>
          <groupId>org.kuali.student.core</groupId>
          <artifactId>ks-rice-lessdep</artifactId>
          <version>1.1.0-SNAPSHOT</version>
          <type>pom</type>
          <scope>runtime</scope>
        </dependency>

        <!--  Sources for GWT Compile -->
