<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:ks="urn:import:org.kuali.student.common.ui.client.widgets">
    <ui:style>
.leftRightContainer{
  padding-top: 10px;
  width:100%;
  margin-bottom: 10px;
  
}
.leftPart{
   width:50%;
   float: left;
   margin-bottom: 5px;
   
}
.rightPart{
   float:right;
   width:50%;
}
.course{
   float:right;
   padding: 2px;   
}
.searchControl{
   float:right;
   padding: 2px;   
}
.searchButton{
   float:right;
   padding: 2px;   
}
.title{
  padding-left: 5px;
  font-weight: bold;
  font-size: 20px;
  color: gray;
}

.logoutButton{
   float:right;
   padding: 2px;
}
.separator{
   float:right;
   padding: 2px;
}

.userName{
   float:right;
   padding: 2px;
}

.hiPanel{
   float:right;
   padding: 2px;
}
.clearBothDiv{
   clear:both;
}
.bottomLine{
               background-color:#E8E8E8;
               border-top:1px dotted #989D9D;
               clear:both;
               color:#4B4742;
               font-family:Georgia,"Times New Roman",Times,serif;
               font-size:1.1em;
               padding:6px 0 9px 15px;
               letter-spacing: 0.04em;
               width:100%;
}

.bottomLine a{
               color: #807970; 
               letter-spacing: .02em;
}

.bottomLine a:hover{
     color: #2C61E6;  
}

</ui:style>
<g:HTMLPanel >
    <div class='{style.leftRightContainer}'>
        <g:Label ui:field='applicationTitleLabel' styleName='header-appTitle'>KRU</g:Label>
        <div class='header-innerDiv'>
            <g:FlowPanel ui:field="leftPartPanel" styleName='{style.leftPart}'>
            </g:FlowPanel>
            <div class='{style.rightPart}'>
               <g:Label styleName='{style.searchButton}'></g:Label><!-- place holder -->
               <g:Label styleName='{style.searchControl}'></g:Label><!-- place holder -->
               <g:Label ui:field="searchLabel" styleName='{style.course}'></g:Label>
               
               <div class='{style.clearBothDiv}'></div>
               
               <g:FlowPanel ui:field="logoutPanel" styleName='{style.logoutButton}'></g:FlowPanel>
               <div class='{style.separator}'>|</div>
               <g:FlowPanel ui:field="userNamePanel" styleName='{style.userName}'></g:FlowPanel>
               <g:FlowPanel ui:field="hiPanel" styleName='{style.hiPanel}'></g:FlowPanel>
            </div>
        </div>
        <g:FlowPanel ui:field="bottomContainer" styleName="{style.bottomLine}"></g:FlowPanel>
    </div>      
</g:HTMLPanel>
</ui:UiBinder> 